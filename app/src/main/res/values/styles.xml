     <style name="mystyle" parent="@style/Base.TextAppearance.AppCompat.Title">
    <item name="android:textSize">16dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
</style>
     <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">26sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">left</item>
</style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/btncolordark</item>
        <item name="colorControlActivated">@color/btncolordark</item>
    </style>




    <style name="MyStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#FFFF</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:hint">Search</item>
    </style>

