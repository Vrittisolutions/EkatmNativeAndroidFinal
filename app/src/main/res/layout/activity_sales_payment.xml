<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.sales.activity.SalesPaymentActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:visibility="visible"
        android:background="@color/colorPrimary1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:popupTheme="@style/AppTheme">

            <ProgressBar
                android:id="@+id/toolbar_progress_Assgnwork"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="0dp"
                    android:hint="Instrument no."
                    android:textSize="14sp"
                    android:layout_weight="0.6">

                    <EditText
                        android:id="@+id/edt_instr_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:gravity="center|left"
                        android:textColor="#111"
                        android:inputType="none"
                        android:textSize="12sp"
                        android:paddingLeft="10sp"/>
                    <!--         android:layout_weight="0.25"-->

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/laydateby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginRight="2dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingLeft="0dp"
                        android:hint="Date"
                        android:textSize="14sp">
                        <!-- android:layout_weight="0.3"-->

                        <EditText
                            android:id="@+id/edt_date"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|left"
                            android:gravity="center|left"
                            android:textColor="#111"
                            android:textSize="12sp"
                            android:enabled="false"
                            android:focusable="false" />
                        <!--         android:layout_weight="0.25"-->

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/img_date"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/calender"/>
                    <!-- android:layout_weight="0.75"-->

                </LinearLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingLeft="0dp"
                android:hint="Amount"
                android:textSize="14sp"
                android:layout_weight="0.5">

                <EditText
                    android:id="@+id/edt_amt"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center|left"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10sp"/>
                <!--         android:layout_weight="0.25"-->

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingLeft="0dp"
                android:hint="Bank Name"
                android:textSize="14sp"
                android:layout_weight="0.5">

                <EditText
                    android:id="@+id/edt_bankname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center|left"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:paddingLeft="10sp"/>
                <!--         android:layout_weight="0.25"-->

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingLeft="0dp"
                android:hint="Branch Name"
                android:textSize="14sp"
                android:layout_weight="0.5">

                <EditText
                    android:id="@+id/edt_branchname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center|left"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:paddingLeft="10sp"/>
                <!--         android:layout_weight="0.25"-->

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingLeft="0dp"
                android:hint="Remark"
                android:textSize="14sp"
                android:layout_weight="0.5">

                <EditText
                    android:id="@+id/edt_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center|left"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:paddingLeft="10sp"/>
                <!--         android:layout_weight="0.25"-->

            </android.support.design.widget.TextInputLayout>

            <!--buttons-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <Button
                    android:id="@+id/btnadd"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Add Payment"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/tbuds_btn_pressed_2"
                    android:layout_weight="0.4"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Cancel"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/tbuds_btn_pressed_2_orange"
                    android:layout_weight="0.6"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
