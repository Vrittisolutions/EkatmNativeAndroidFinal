<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:background="@color/white"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="1dp"
        tools:cardPreventCornerOverlap="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/sp_5"
                android:text="Vritti Solutions Limited"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:gravity="center|left"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/laycall_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="1dp"
                    android:layout_marginLeft="1dp"
                    android:paddingRight="1dp">

                    <ImageView
                        android:id="@+id/img_followuptype"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_calling" />

                    <TextView
                        android:id="@+id/txt_next_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:maxLines="2"
                        android:paddingBottom="2dp"
                        tool:text="17 Sep 2020"
                        android:textColor="@color/grey2c"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/txt_next_time"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:backgroundTint="@color/black"
                        android:gravity="center|left"
                        android:layout_marginLeft="@dimen/sp_5"
                        android:maxLines="2"
                        android:paddingBottom="2dp"
                        android:text="06:11 PM"
                        android:textColor="@color/grey2c"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_chat"
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/btn_border_button"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Chat"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/laycall_type"
                android:layout_weight="0.8"
                android:layout_marginLeft="@dimen/sp_5"
                android:orientation="vertical"
           >


                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
               >

                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLength="30"
                        android:layout_weight="0.2"
                        android:text="Poonam shrivastavfbdjsfbjfbdjbdsjhbdsfjsdfnh"
                        android:textColor="@color/blue"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/txt_call_datetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="07-10-2020"
                        android:textColor="@color/blue"
                        android:textSize="12sp"
                        android:layout_weight="0.8"/>


                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/txt_outcome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="Outcome"
                        android:textColor="@color/black"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/txt_with_whom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="To whom"
                        android:visibility="gone"
                        android:textColor="#000000"
                        android:textSize="14dp" />


                </LinearLayout>


                    <TextView
                        android:id="@+id/txt_nextActionplan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="Date Time"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12dp" />







            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>

