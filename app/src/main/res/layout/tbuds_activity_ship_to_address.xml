<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.sales.activity.ShipToAddressActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:visibility="gone"
        android:background="@color/colorPrimary1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:popupTheme="@style/AppTheme">

            <ImageView
                android:id="@+id/imgrefresh"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_refresh"
                android:layout_gravity="center|right"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/toolbar_progress_Assgnwork"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgadd"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/tbuds_add_address"
                android:layout_gravity="center|right"
                android:visibility="visible"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/tbar"
        layout="@layout/tbuds_common_toolbar"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary1"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txthdr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ship to Address - "
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_weight="0.15"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"/>

        <ImageView
            android:id="@+id/img_add_address"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.85"
            android:src="@drawable/tbuds_new_address"
            android:layout_gravity="center|right"
            android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/edtsearch_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add new address here..."
            android:textColor="#111"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:layout_weight="0.7"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btn_showmap"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gps_111"
            android:textSize="14sp"
            android:layout_weight="0.1"/>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/tbuds_add_1"
            android:textSize="14sp"
            android:layout_weight="0.1"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_place"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/tbuds_placeorder"
            android:textSize="14sp"
            android:layout_weight="0.1"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_addresses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <fragment
            android:id="@+id/googleMap"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment" />

        <ImageView
            android:id="@+id/img_marker"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/tbuds_marker"
            android:tint="@color/colorPrimary1"
            android:visibility="gone"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

</LinearLayout>
