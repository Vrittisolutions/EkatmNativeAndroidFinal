<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/chat_left_msg_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:minWidth="120dp"
        android:minHeight="41dp"
        android:layout_marginRight="50dp"
        android:visibility="gone"
        android:background="@drawable/left"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/chat_left_msg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:paddingLeft="5dp"
            android:textSize="16dp"
            android:padding="5dp"
            android:text="ffeffdsffadsfdsfdsfafadsffdsfdsdsfsdffdfdfdd"
            android:textColor="#000000"
           />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/chat_exp_type"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="50dp"
        android:layout_marginTop="2dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/len_exp_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travel"
                android:padding="10dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/expense_green"
                android:textSize="14dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/btn_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Local"
                android:textAllCaps="false"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="2dp"
                android:background="@drawable/expense_green"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btn_lodge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lodging"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:padding="10dp"
                android:background="@drawable/expense_green"
                android:textSize="14dp"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btn_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textAllCaps="false"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="2dp"
                android:background="@drawable/expense_green"
                android:textSize="14dp"
                android:layout_weight="1"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chat_exp_travel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="50dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/len_exp_travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_2wheeler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 wheeler"
                android:padding="10dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/expense_green"
                android:textSize="14dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/btn_4wheeler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 wheeler"
                android:textAllCaps="false"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="2dp"
                android:background="@drawable/expense_green"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btn_bus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bus"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:padding="10dp"
                android:background="@drawable/expense_green"
                android:textSize="14dp"
                android:gravity="center"
                android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_taxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Taxi"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/expense_green"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/btn_train"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Train"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/expense_green"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/btn_flight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flight"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:padding="10dp"
                    android:background="@drawable/expense_green"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/chat_right_msgf_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:minHeight="41dp"
        android:minWidth="120dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        >



        <TextView
            android:id="@+id/chat_right_msg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:background="@drawable/expense_right"
            android:padding="5dp"
            android:textSize="16dp"
            android:visibility="visible"
            android:text=""
            android:textColor="#000000"
            />

        <RadioGroup
            android:id="@+id/radio_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/expense_right"
            >

            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/colorAccent"
                android:text="Cash"
                android:id="@+id/radiobtn_cash"
                />
            <android.support.v7.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonTint="@color/colorAccent"
            android:text="E-Wallet"
                android:id="@+id/radiobtn_evallet"

                />
            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/colorAccent"
                android:text="Card"
                android:id="@+id/radiobtn_card"
                />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/len_image"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:minHeight="41dp"
            android:minWidth="120dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:layout_marginEnd="10dp"


                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/chat_exp_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="50dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/len_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_official"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Official"
                android:layout_marginRight="2dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textAllCaps="false"
                android:background="@drawable/expense_blue"
                android:textSize="14dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/btn_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:background="@drawable/expense_blue"
                android:textSize="14dp"
                android:textStyle="bold"/>



        </LinearLayout>
    </LinearLayout>


</LinearLayout>