<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.inventory.physicalInventory.activity.AudiScreenActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:visibility="visible"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title">
            <!-- android:layout_height="?android:attr/actionBarSize"-->

            <ProgressBar
                android:id="@+id/toolbar_progress_App_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />


        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/backgroundHeader"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reprint"
                android:textColor="#fff"
                android:textSize="16dp"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/txtprevtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous Tag No is "
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:textColor="#2c2c2c"
        android:textStyle="bold"
        android:layout_below="@+id/appbar"/>

    <RadioGroup
        android:id="@+id/radgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtprevtag">

        <LinearLayout
        android:id="@+id/layradio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_margin="10dp">

        <RadioButton
            android:id="@+id/radbtnsingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Single"/>

        <RelativeLayout
            android:id="@+id/laysingleprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radbtnsingle"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#ededed"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <AutoCompleteTextView
                    android:id="@+id/edttagno"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Enter Tag Number"
                    android:textSize="15sp"
                    android:maxLength="5"
                    android:textColor="#111111"
                    android:background="@drawable/border"
                    android:layout_marginLeft="10sp"
                    android:paddingLeft="10dp"
                    android:layout_weight="0.7"/>

                <ImageView
                    android:id="@+id/img_barcode"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/barcode"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.4"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imgserch"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_search"
                    android:layout_weight="0.1"
                    android:visibility="gone"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

        <LinearLayout
        android:id="@+id/layradio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layradio"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <RadioButton
            android:id="@+id/radbtnrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="Range"/>

        <LinearLayout
            android:id="@+id/layrangeprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radbtnrange"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="#ededed"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="0.5">

                <AutoCompleteTextView
                    android:id="@+id/edttagfrm"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="From tag"
                    android:textSize="15sp"
                    android:maxLength="5"
                    android:textColor="#111111"
                    android:background="@drawable/border"
                    android:layout_marginLeft="5sp"
                    android:paddingLeft="10dp"
                    android:layout_weight="0.5"/>

                <ImageView
                    android:id="@+id/img_barcode_frm"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/barcode"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_marginLeft="3dp"
                    android:paddingRight="5dp"
                    android:layout_weight="0.5"
                    android:visibility="visible" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#ededed"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="0.5">

                    <AutoCompleteTextView
                        android:id="@+id/edttagto"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="To tag"
                        android:textSize="15sp"
                        android:maxLength="5"
                        android:textColor="#111111"
                        android:background="@drawable/border"
                        android:layout_marginLeft="5sp"
                        android:paddingLeft="10dp"
                        android:layout_weight="0.5"/>

                    <ImageView
                        android:id="@+id/img_barcode_to"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:src="@drawable/barcode"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_weight="0.5"
                        android:visibility="visible" />

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </RadioGroup>

    <Button
        android:id="@+id/btnproceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/border"
        android:layout_below="@+id/radgroup"
        android:text="Proceed"
        android:textColor="#FFFFFF"
        android:layout_margin="20dp"/>

</RelativeLayout>
