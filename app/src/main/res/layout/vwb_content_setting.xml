<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:orientation="vertical"
    tools:showIn="@layout/vwb_setting">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#6E6F72"
        android:padding="8dp"
        android:text="Setting"
        android:textColor="#fff"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="19dp"
            android:gravity="end"
            android:text="15 min"
            android:textColor="@color/blue"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:alpha=".7"
                android:background="@drawable/capsuleshape"
                android:gravity="center"
                android:onClick="setRefresh"
                android:text="Set Refresh Time"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginTop="10dp"
                android:alpha=".7"
                android:background="@drawable/capsuleshape"
                android:gravity="center"
                android:onClick="Offlinedata"
                android:text="Offline Data"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginTop="10dp"
                android:alpha=".7"
                android:background="@drawable/capsuleshape"
                android:gravity="center"
                android:onClick="Useddata"
                android:text="Show data usage"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginTop="10dp"
                android:alpha=".7"
                android:background="@drawable/capsuleshape"
                android:gravity="center"
                android:onClick="ServerSettingRefresh"
                android:text="Refresh Server Setting"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_clear_data"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginTop="10dp"
                android:alpha=".7"
                android:background="@drawable/capsuleshape"
                android:gravity="center"
                android:text="Clear data"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginTop="10dp"
                android:alpha=".7"
                android:background="@drawable/capsuleshape"
                android:gravity="center"
                android:onClick="selectTextSize"
                android:text="Select Chat Text Size"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/textSizelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <Button

                    android:id="@+id/smallBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_marginTop="10dp"
                    android:alpha=".5"
                    android:background="@drawable/white"
                    android:gravity="center"
                    android:onClick="smallSizeClick"
                    android:text="Small"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/mediumBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_marginTop="10dp"
                    android:alpha=".5"
                    android:background="@drawable/capsuleshape"
                    android:gravity="center"
                    android:onClick="mediumSizeClick"
                    android:text="Medium"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/largeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_marginTop="10dp"
                    android:alpha=".5"
                    android:background="@drawable/white"
                    android:gravity="center"
                    android:onClick="larSizeClick"
                    android:text="Large"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>