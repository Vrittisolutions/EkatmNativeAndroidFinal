<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/putaway"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <LinearLayout
                android:id="@+id/len"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center|left"
                android:visibility="gone"
                android:background="@drawable/edit_text"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_do"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:visibility="gone"
                    android:textStyle="bold"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/len_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">
            <EditText
                android:id="@+id/s_search1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_weight="1"
                android:imeOptions="actionSearch"
                android:layout_below="@+id/len"
                android:inputType="text"
                />
                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="30dp"
                    android:layout_marginRight="@dimen/sp_5"
                    android:src="@drawable/ic_search"
                    android:layout_height="30dp"/>
                <ImageView
                    android:id="@+id/img_barcode"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/barcode"/>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:layout_below="@id/len_search"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/radio_approved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Approved"
                    android:textSize="@dimen/sp_16"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:buttonTint="@color/colorPrimary"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/radio_notapproved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOT Approved"
                    android:textSize="@dimen/sp_16"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:buttonTint="@color/colorPrimary"/>
            </RadioGroup>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_below="@id/radio"
                android:layout_above="@+id/btn_finish"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:indeterminate="true" />

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post"
                android:textSize="16dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bgTransParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cc000000"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/grnText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="GRN NO:.dlkm dlkmdl kmf" />

                <TextView
                    android:id="@+id/poNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="PONo:" />

                <TextView
                    android:id="@+id/poDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="PO Date : " />

                <TextView
                    android:id="@+id/currentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    tools:text="Current date " />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp">

                    <Button
                        android:id="@+id/cancelBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_blue_border"
                        android:text="Cancel"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/cfmBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_blue_border"
                        android:text="Confirm"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>