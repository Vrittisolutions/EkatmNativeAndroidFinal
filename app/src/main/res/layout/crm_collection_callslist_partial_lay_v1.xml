<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/realcolors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="2dp"
                android:layout_marginTop="5dp"
                android:paddingRight="2dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_calling" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingBottom="2dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text="Yesterday 6:11 pm"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/txt_chat"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/btn_border_button"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Conversation"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:visibility="visible"
                    android:textStyle="bold"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/laycall_type"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLength="30"
                    android:text="Superfine Extrusions Private Limited"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:layout_marginLeft="2dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLength="30"
                    android:textColor="#000000"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="center|left"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/img_contact"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="@dimen/sp_5"
                        android:src="@drawable/profile_contact" />

                    <ImageView
                        android:id="@+id/img_provisional_count"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_receipt"
                        android:visibility="gone" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:padding="2dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/green_border"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=""
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:padding="2dp"
                        android:background="@drawable/green_border"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/green_border"
                        android:layout_marginRight="5dp"
                        />

                    <ImageView
                        android:id="@+id/btn_provisional"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:padding="3dp"
                        android:src="@drawable/hand_icon"
                        android:layout_marginRight="1dp"
                        android:text="Action"
                        android:textColor="@color/black"
                        android:visibility="visible"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    -----------------------------------------------------------------------------

    <LinearLayout
        android:id="@+id/len_callslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_viewfill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            card_view:cardMaxElevation="1dp">

        <LinearLayout
                android:id="@+id/lencall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            android:background="@drawable/button_background"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_gravity="left|center"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/callrating"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="4dp"
                    android:src="@drawable/square"
                    />

                <TextView
                        android:id="@+id/firmname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Superfine Extrusions Private Limited, Banglore"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/sp_5"
                    android:layout_gravity="center|left"
                    >

                    <ImageView
                        android:id="@+id/img_nextaction"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/call_24"
                        android:visibility="visible"
                        android:tint="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/actiondatetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:maxLines="2"
                        android:text="Tue 17 Sep, 06:11 PM "
                        android:textColor="@color/grey2c"
                        android:textSize="14dp"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/stroke"/>

                <TextView
                    android:id="@+id/tvcall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_invoice_no"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/green_border"
                        />
                    <TextView
                        android:id="@+id/txt_invoice_date"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=""
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/green_border"
                        />
                    <TextView
                        android:id="@+id/settlement_date"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_border"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:id="@+id/txt_amount"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_border"
                        android:layout_marginRight="5dp"
                        />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_latestremark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="2dp"
                    android:textSize="12dp" />
            <TextView
                android:id="@+id/txt_Unallocateamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="@dimen/sp_5"
                android:layout_marginBottom="2dp"
                android:singleLine="false"
                android:layout_weight="1"
                android:layout_gravity="center|right"
                android:gravity="center|left"
                android:visibility="gone"
                android:textSize="10sp"
                android:background="@drawable/red_border"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>