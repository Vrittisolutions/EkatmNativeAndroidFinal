<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            card_view:cardMaxElevation="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:drawableLeft="@drawable/date"
                        android:drawablePadding="8dp"
                        android:padding="1dp"
                        android:visibility="gone"
                        android:text=" Date"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9 Mar' 21,"
                        android:layout_marginLeft="5dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/txt_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center|left"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/email_24"
                        android:drawableTint="@color/colorPrimary"
                        android:drawablePadding="8dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/txt_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/call_24"
                        android:drawableTint="@color/colorPrimary"
                        android:drawablePadding="8dp"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/txt_visit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/visit24"
                        android:drawableTint="@color/colorPrimary"
                        android:drawablePadding="8dp"
                        android:layout_marginLeft="40dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:textSize="12dp" />

                </LinearLayout>


                    <TextView
                        android:id="@+id/fromPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/state"
                        android:drawableTint="@color/colorPrimary"
                        android:textSize="12dp"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:textColor="@color/black"
                        android:layout_marginLeft="5dp"
                        />




                <TextView
                    android:id="@+id/txt_visit_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:drawablePadding="8dp"
                    android:layout_gravity="center|left"
                    android:gravity="left|center"
                    android:drawableLeft="@drawable/city"
                    android:drawableTint="@color/colorPrimary"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
              />








</LinearLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>