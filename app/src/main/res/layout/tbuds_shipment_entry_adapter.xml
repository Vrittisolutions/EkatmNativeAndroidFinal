<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:padding="0dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="0.5dp"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/view"
            android:layout_width="2.5dp"
            android:layout_height="match_parent"
            android:background="@color/btncolordark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <!--itemname-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtitmcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:text="RK0005"
                    android:textSize="12dp"
                    android:textColor="#111"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txtitmdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brown bread"
                    android:textSize="12dp"
                    android:textColor="#111"
                    android:textStyle="bold"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"/>

            </LinearLayout>

            <!--dates-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:layout_gravity="left"
                    android:gravity="left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addt"
                        android:textSize="12dp"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"/>

                    <TextView
                        android:id="@+id/txtaddeddt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 Jun"
                        android:textSize="12dp"
                        android:textColor="#111"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schdt"
                        android:textSize="12dp"
                        android:layout_gravity="center|right"
                        android:gravity="center|right"/>

                    <TextView
                        android:id="@+id/txtschdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 Jun"
                        android:textSize="12dp"
                        android:textColor="#fe920b"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center|right"
                        android:gravity="center|right"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schqty"
                        android:textSize="12dp"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"/>

                    <TextView
                        android:id="@+id/txtschqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="12dp"
                        android:textColor="#111"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scpqty"
                        android:textSize="12dp"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"/>

                    <TextView
                        android:id="@+id/txtshipmentqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="@color/colorPrimary1"
                        android:textSize="12dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pckqty"
                        android:textSize="12dp"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"/>

                    <EditText
                        android:id="@+id/edt_qty"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Qty"
                        android:textSize="12dp"
                        android:textColor="#111"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.7"
                        android:inputType="number"
                        android:background="@drawable/edittext_border"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
