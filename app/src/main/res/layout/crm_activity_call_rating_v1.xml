<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gpb="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout_main"
    android:layout_width= "match_parent"
    android:layout_height="match_parent"
    tools:context="com.vritti.crm.vcrm7.CallRatingActivity"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_header"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E6F72"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="5dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:text="Opportunity Rating"
                android:textColor="#fff"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center|left"
            android:visibility="gone"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:text="Call Status"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black" />




            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="78dp"
                android:background="@drawable/business_edit_text">

                <Spinner
                    android:id="@+id/spinner_callstatus"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:entries="@array/Status"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:text="Call Status :"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edit_text">
                <Spinner
                    android:id="@+id/spinner_callstatus1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:entries="@array/Status"
                    />
            </LinearLayout>
        </LinearLayout>-->

        <LinearLayout
            android:id="@+id/layreason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Reason : "
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="14dp"
                />
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="97dp"
                android:background="@drawable/edit_text">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Expected value :"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="14dp"
                />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:ems="10"
                android:inputType="number"
                android:background="@drawable/business_edit_text"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Expected closure date :  "
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:editable="false"
                android:background="@drawable/business_edit_text"
                android:focusable="false"
                android:padding="7dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_marginRight="20dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/calender" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:background="@drawable/button_green"
                android:text="Save"
                android:textSize="14dp"
                android:textColor="@color/white" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/button_orange"
                android:text="Cancel" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/spinner"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_margin="5dp"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:drawablePadding="8dp"
                    android:src="@drawable/call_24"/>

                <TextView
                    android:id="@+id/txtnxtaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call Rating"
                    android:textSize="15dp"
                    android:padding="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btncold"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:background="@drawable/button_grey"
                    android:text="Cold"/>


                <Button
                    android:id="@+id/btnwarm"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:background="@drawable/button_grey"
                    android:text="Warm"
                    />

                <Button
                    android:id="@+id/btnhot"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Hot"
                    android:layout_marginLeft="10dp"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:background="@drawable/button_grey" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:background="@color/stroke"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/spinner_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Reason"
                    android:visibility="gone"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/notes"
                    android:drawablePadding="8dp"
                    android:layout_gravity="top">
                    <requestFocus></requestFocus>
                </AutoCompleteTextView>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/Expectedvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Expected Value"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/expected_value"
                    android:drawableTint="@color/colorPrimary"
                    android:drawablePadding="8dp"
                    android:layout_gravity="top"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/txt3date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/date"
                android:drawablePadding="8dp"
                android:layout_gravity="center|left"
                android:gravity="left|center"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:text="Estimated Closure Date"
                android:layout_weight="1"
                android:textSize="14dp"
                />


            <TextView
                android:id="@+id/editTextExpecteddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:layout_marginLeft="35dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/sp_5"
        android:visibility="gone"
        android:orientation="horizontal">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_green"
                android:text="Save"
                android:layout_weight="1"
                android:textSize="13dp"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonClose"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_orange"
                android:text="Close"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="13dp"
                android:textAllCaps="false" />
        </TableRow>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>



