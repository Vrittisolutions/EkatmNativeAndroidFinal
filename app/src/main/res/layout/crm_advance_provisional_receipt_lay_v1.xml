<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_header"
        />
    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_back"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="0dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_viewdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp"
                    android:layout_margin="3dp"
                    app:cardMaxElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <AutoCompleteTextView
                                android:id="@+id/spinner_customer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:textColor="#111"
                                android:hint="Customer Name"
                                android:textSize="14dp"
                                android:editable="false"
                                android:focusable="false"
                                android:clickable="true"
                                android:drawableLeft="@drawable/travel_name"
                                android:padding="10dp"
                                android:drawablePadding="8dp">
                            </AutoCompleteTextView>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <AutoCompleteTextView
                                android:id="@+id/spinner_consignee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimary"
                                android:textColor="#111"
                                android:textSize="14dp"
                                android:hint="Consignee Name"
                                android:drawableLeft="@drawable/travel_name"
                                android:padding="10dp"
                                android:drawablePadding="8dp"
                                />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <EditText
                                android:id="@+id/edt_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:inputType="number"
                                android:textColorHint="@color/colorPrimary"
                                android:textColor="#111"
                                android:hint="Amount"
                                android:textSize="14dp"
                                android:drawableLeft="@drawable/credit_card"
                                android:drawableTint="@color/colorPrimary"
                                android:padding="10dp"
                                android:drawablePadding="8dp"
                                />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <EditText
                                android:id="@+id/edt_instrument_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimary"
                                android:textColor="#111"
                                android:hint="Instrument No."
                                android:textSize="14dp"
                                android:drawableLeft="@drawable/gstn"
                                android:drawableTint="@color/colorPrimary"
                                android:padding="10dp"
                                android:drawablePadding="8dp"
                                />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edt_bankname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimary"
                                android:hint="Bank Name"
                                android:textColor="#111"
                                android:textSize="14dp"
                                android:drawableLeft="@drawable/office"
                                android:padding="10dp"
                                android:drawablePadding="8dp"
                                />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <AutoCompleteTextView
                                android:id="@+id/spinner_bankname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:hint="Deposited in Bank"
                                android:textColorHint="@color/colorPrimary"
                                android:textColor="#111"
                                android:textSize="14dp"
                                android:drawableLeft="@drawable/department"
                                android:drawableTint="@color/colorPrimary"
                                android:padding="10dp"
                                android:drawablePadding="8dp"
                                />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edt_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimary"
                                android:textColor="#111"
                                android:hint="Deposited Date"
                                android:textSize="14dp"
                                android:drawableLeft="@drawable/date"
                                android:padding="10dp"
                                android:drawablePadding="8dp"
                                />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edt_tds_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimary"
                                android:textColor="#111"
                                android:textSize="14dp"
                                android:drawableLeft="@drawable/money_24"
                                android:drawableTint="@color/colorPrimary"
                                android:hint="TDS Amount"
                                android:padding="10dp"
                                android:drawablePadding="8dp"
                                />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edt_narration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimary"
                                android:textColor="#111"
                                android:textSize="14dp"
                                android:drawableLeft="@drawable/notes"
                                android:drawableTint="@color/colorPrimary"
                                android:hint="Narration"
                                android:padding="10dp"
                                android:drawablePadding="8dp"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">


            <Button
                android:id="@+id/buttonSave_prospect"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="13dp"
                android:background="@drawable/button_orange"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="visible"/>


            <Button
                android:id="@+id/buttonSaveandstartcall_prospect"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textSize="13dp"
                android:background="@drawable/button_green"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="visible"/>

        </TableRow>
    </LinearLayout>

</LinearLayout>















