                </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/stroke"/>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:drawableLeft="@drawable/credit_card"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/colorPrimary"
                            android:hint="Amount"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:inputType="number"
                            android:padding="8dp"
                            android:textColorHint="@color/black"
                            android:textSize="14dp" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:orientation="horizontal">

                        <AutoCompleteTextView
                            android:id="@+id/spinner_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Mode of Payment"
                            android:layout_gravity="top"
                            android:drawableLeft="@drawable/credit_card"
                            android:drawableTint="@color/colorPrimary"
                            android:drawablePadding="8dp"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:padding="8dp"
                            android:editable="false"
                            android:focusable="false"
                            android:clickable="true"
                            android:textSize="14dp" />


                    </LinearLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edit_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter card number"
                        android:visibility="gone"
                        >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/credit_card"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/colorPrimary"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textColorHint="@color/black"
                            android:textSize="14dp" />

                    </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/notes"
                            android:drawablePadding="8dp"
                            android:hint="Notes"
                            android:layout_weight="1"
                            android:maxLines="5"
                            android:visibility="visible"
                            android:padding="8dp"
                            android:textSize="14dp" />

                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:id="@+id/text_attach"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/attach"
                        android:tint="@color/colorPrimary"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"/>
                    <ImageView
                        android:id="@+id/text_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_view"
                        android:tint="@color/colorPrimary"
                        android:visibility="visible"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"/>
                </LinearLayout>
                </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/len"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="left|center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/previous_icon"
                android:id="@+id/button_previous"
                android:layout_gravity="left"
                android:tint="@color/colorPrimaryDark"
                android:visibility="gone"
                android:textSize="13dp"
                android:text="Previous"
                android:textAllCaps="false"
                android:textColorHint="@color/black"/>


            <Button
                android:layout_height="match_parent"
                android:layout_width="40dp"
                android:background="@drawable/button_green"
                android:id="@+id/btn_save"
                android:layout_gravity="right"
                android:visibility="gone"
                android:textSize="13dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:text="Save"
                android:layout_weight="1"
                android:textAllCaps="false"/>/>





    </LinearLayout>

























</RelativeLayout>