<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.inventory.physicalInventory.activity.PartNameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/edtlocation"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/places_ic_search"
            android:hint="Search here"
            android:padding="5dp" />

        <Button
            android:id="@+id/btnaddlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New"
            android:textColor="#ffffff"
            android:background="@drawable/button_blue_border"
            android:layout_weight="0.65"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"></Button>

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/refresh_black"
            android:layout_weight="0.95"
            android:layout_gravity="center_vertical"
            android:visibility="visible"></ImageView>

    </LinearLayout>

    <ListView
        android:id="@+id/listlocationname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:divider="#dcdcdc"/>

</LinearLayout>
