<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ededed">

    <TextView
        android:id="@+id/textMsg"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:gravity="center"
        android:textColor="#111"
        android:textStyle="bold"
        android:fontFamily="@string/TextFont"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Select label size" />

    <RadioGroup
        android:id="@+id/radgrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/label2_2mm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="2 x 2mm Label"
            android:textSize="15sp"
            android:buttonTint="@color/colorPrimary"/>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/label3_2mm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="3 x 2mm Label"
            android:textSize="15sp"
            android:buttonTint="@color/colorPrimary"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:text="2 x 2mm"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/button_blue_border"></Button>

        <Button
            android:id="@+id/btn3_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_blue_border"
            android:text="3 x 2mm"
            android:textAllCaps="false"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10sp"
            android:onClick="btnSubmitClick"
            android:text="Ok"
            android:fontFamily="@string/ButtonFont"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:background="@drawable/button_blue_border"/>

        <Button
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10sp"
            android:textSize="17dp"
            android:fontFamily="@string/ButtonFont"
            android:textAllCaps="false"
            android:background="@drawable/tbuds_btn_pressed_2"
            android:onClick="btnSubmitClick"
            android:text="No"
            android:textColor="#ffffff"
            android:visibility="gone"/>
    </LinearLayout>
    
</LinearLayout>