<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:gpb="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
>


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title" >
            <LinearLayout
                android:id="@+id/len_expe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:padding="2dp"
                android:src="@drawable/crm_back_arrow"
                android:tint="@color/white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Expense Management"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textColorHint="@color/black"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:visibility="visible"></TextView>

            <ImageView
                android:id="@+id/history"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:padding="2dp"
                android:src="@drawable/history"
                android:tint="@color/white"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/microphone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:padding="2dp"
                android:src="@drawable/microphone"
                android:tint="@color/white"
                android:visibility="visible"
                android:layout_marginRight="10dp"
                />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/appbar"
        android:background="@drawable/background_color"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sp_5"
                android:orientation="horizontal">

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/date"
                    android:drawablePadding="8dp"
                    android:padding="1dp"
                    android:text=" Date"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 Mar' 21"
                    android:padding="5dp"
                    android:layout_marginLeft="35dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:drawableLeft="@drawable/time_24"
                            android:drawablePadding="8dp"
                            android:padding="1dp"
                            android:text="Time"
                            android:layout_weight="1"
                            android:textSize="14dp"
                            />


                            <TextView
                                android:id="@+id/txt_time"
                                android:text="9:00 AM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_marginLeft="35dp"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"

                                />
                </LinearLayout>

            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/stroke"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:gravity="center|left"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="center|left">

                    <TextView
                        android:id="@+id/spinner_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/office"
                        android:drawablePadding="8dp"
                        android:text="Official"
                        android:layout_gravity="left|center"
                        android:gravity="center|left"
                        android:padding="8dp"
                        android:textColor="#111"
                        android:textColorHint="@color/black"
                        android:textSize="14dp" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/stroke"/>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <TextView
                            android:id="@+id/txtnxtaction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Expense against"
                            android:drawableTint="@color/colorPrimary"
                            android:drawableLeft="@drawable/actiontype"
                            android:drawablePadding="8dp"
                            android:textSize="14dp"
                            android:padding="5dp" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                        android:layout_gravity="center|top"
                        android:gravity="center|top"
                        >

                            <Button
                                android:id="@+id/button_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:background="@drawable/button_grey"
                                android:text="Activity"/>


                            <Button
                                android:id="@+id/button_sales"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:textAllCaps="false"
                                android:textSize="14dp"
                                android:background="@drawable/button_grey"
                                android:text="Opportunity"
                                />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/stroke"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Acitvity Type"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/spinner_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableTint="@color/colorPrimary"
                        android:drawableLeft="@drawable/actiontype"
                        android:drawablePadding="8dp"
                        android:visibility="visible"
                        android:padding="8dp"
                        android:focusable="false"
                        android:clickable="false"
                        android:editable="false"
                        android:layout_weight="1"
                        android:textSize="14dp" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/next_icon"
                    android:tint="@color/colorPrimaryDark"
                    android:id="@+id/button_next"
                    android:layout_gravity="right"
                    android:visibility="visible"
                    android:textSize="13dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:text="Next"
                    android:textAllCaps="false"/>/>

                </LinearLayout>
        </android.support.v7.widget.CardView>

            </RelativeLayout>
    <LinearLayout
        android:id="@+id/len"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center"
            android:layout_gravity="bottom">

            <Button
                android:layout_height="match_parent"
                android:layout_width="40dp"
                android:background="@drawable/button_orange"
                android:id="@+id/button_cancel"
                android:layout_gravity="right"
                android:visibility="gone"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:text="Cancel"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColorHint="@color/black"/>





        </TableRow>



    </LinearLayout>
</RelativeLayout>

