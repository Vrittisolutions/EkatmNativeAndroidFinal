<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket Report"
                android:background="@drawable/button_orange"
                android:textSize="16dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/txt_ticket_report"
                android:visibility="visible"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        <ProgressBar
                android:id="@+id/toolbar_progress_App_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="visible" />


        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/backgroundHeader"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ticket Registration"
                android:textColor="#fff"
                android:textSize="16dp" />

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/appbar"
        android:layout_above="@+id/len_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center|left"
    android:gravity="left|center"
    android:layout_marginTop="10dp"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Name"
        android:padding="5dp"
        android:layout_weight="1"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:textSize="16dp"/>
    <ProgressBar
        android:id="@+id/proress_reference"
        style="?android:attr/progressBarStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginRight="15dp"
        android:indeterminateDrawable="@drawable/spinner"
        android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center|left"
        android:layout_marginRight="5dp"
        android:gravity="center|left">


    <AutoCompleteTextView
        android:id="@+id/edt_search_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:textColorHint="@color/dark_grey"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:hint="Enter customer name "

        android:singleLine="true"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
       />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left|center"
            android:gravity="center|right"
            android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/txt_enddate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_grey"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:singleLine="true"
            android:gravity="left|center"
            android:layout_gravity="center|left"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:text=""

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Ticket"
            android:background="@drawable/button_orange"
            android:textSize="16dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/txt_book_ticket"
            android:visibility="visible"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        </LinearLayout>
    </LinearLayout>
    
    

        <TextView
            android:id="@+id/txt_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:background="@color/dark_grey"
            />
        <LinearLayout
            android:id="@+id/linear_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_gravity="left|center"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Product :"
                android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:padding="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_product_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                ></Spinner>
        </LinearLayout>

        </LinearLayout>
        </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:gravity="center|left"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Ticket Description :"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edt_ticket_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:background="@drawable/edit_text"
                ></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_gravity="left|center"
            android:orientation="vertical">
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Reported By :"
                android:textSize="16dp"/>
            <AutoCompleteTextView
                android:id="@+id/edt_ticket_reportedby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:textColorHint="@color/dark_grey"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_gravity="left|center"
            android:orientation="vertical">
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Mobile No :"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/edt_ticket_mobno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                android:inputType="number"
                android:maxLength="10"
                android:background="@drawable/edit_text"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_gravity="left|center"
            android:orientation="vertical">
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Email :"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/edt_ticket_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edit_text"
                ></EditText>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_gravity="left|center"
        android:orientation="vertical">
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Audit :"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_main_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                ></Spinner>
        </LinearLayout>

    </LinearLayout>
            <LinearLayout
                android:id="@+id/len_sub_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_gravity="left|center"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Process :"
                    android:textSize="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_sub_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        ></Spinner>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_gravity="left|center"
        android:orientation="vertical">
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Ticket Nature :"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_ticket_nature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                ></Spinner>
        </LinearLayout>

    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_gravity="left|center"
                android:orientation="vertical">
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Ticket Category :"
                    android:textSize="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_ticket_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        ></Spinner>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_gravity="left|center"
                android:orientation="horizontal">
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Resolution Time :"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/txt_resolution_time"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="1 day"
                    android:textSize="16dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_gravity="left|center"
                android:orientation="horizontal">
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Priority Level :"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/txt_priority_level"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="16dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_gravity="left|center"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Solution :"
                    android:textSize="16dp"/>

                <EditText
                    android:id="@+id/edt_ticket_solution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:padding="8dp"
                    android:maxLines="4"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edit_text"
                    ></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_gravity="left|center"
                android:orientation="vertical">
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Assign To :"
                    android:textSize="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_ticket_assign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        ></Spinner>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/len_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobile_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    ></TextView>
                <TextView
                    android:id="@+id/user_mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    ></TextView>
            </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_gravity="center|left"
    android:gravity="center|left"
    android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/lblResolDt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="lblResolDt"
                    android:text="Promise Date"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />
    <LinearLayout
        android:id="@+id/lay_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/editTexteffertdetaildateset"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:editable="false"
            android:focusable="false"
            android:hint="yyyy/mm/dd"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/buttoneffertdetaildateselect"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/calender" />
        </LinearLayout>
    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:padding="5dp"
                            android:layout_marginLeft="2dp"/>
                        <EditText
                            android:id="@+id/edt_time"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:hint="time"
                            android:gravity="center"
                            android:padding="8dp"
                            android:layout_marginLeft="5dp"
                            android:textSize="16dp"
                            android:background="@drawable/edit_text"
                            android:textColorHint="@color/dark_grey"

                            />
                        <ImageView
                            android:id="@+id/img_time"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_timer"
                            android:layout_marginLeft="10dp"
                            />
                        <!-- <Spinner
                             android:id="@+id/spinner_time"
                             android:layout_width="180dp"
                             android:layout_marginLeft="5dp"
                             android:layout_height="wrap_content"
                             ></Spinner>-->
                    </LinearLayout>
                </LinearLayout>
</LinearLayout>
</LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/len_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:gravity="center|right"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_orange"
            android:text="Cancel"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/txt_send_request"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_green"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/btn_border_button"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_next" />



</RelativeLayout>