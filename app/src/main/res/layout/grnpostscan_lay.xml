<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">






    <LinearLayout
        android:id="@+id/len"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center|left"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/edt_scanPacket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:hint="Scan Packet"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        >

    </EditText>
        <TextView
            android:id="@+id/btn_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"
            android:padding="10dp"
            android:background="@drawable/button_orange"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:textSize="16dp"/>

    </LinearLayout>
    <RadioGroup
        android:id="@+id/radio_gr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/len"
        android:orientation="horizontal">
    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/btn_reject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reject / Damage"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:buttonTint="@color/colorPrimary"
        android:textColor="@color/black"
        android:gravity="center|left"
        android:textSize="16dp"/>
    </RadioGroup>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/radio_gr"
        android:background="#111"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_itemDetailList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view2"
        android:layout_marginTop="2dp"
        android:layout_above="@+id/btn_post"
        ></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="GRN POST"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textAllCaps="true"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <TextView android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:textColor="@color/green" />
</RelativeLayout>