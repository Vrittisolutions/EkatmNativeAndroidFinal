<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_gravity="center|left"
            android:gravity="left|center"
            android:padding="12dp"
            android:textColor="@color/white"
            android:text="Domestic Inbound (AHMUN007)"
            android:textSize="18dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Viraj Industries to Hyva Jamshedpur"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="through Ayush Transport 4.2 MT"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="by 18 Apr 2020"
                android:textSize="16dp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:text="Spares Expedited Delivery"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:background="@color/grey"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Vehicle Loading"
            android:textSize="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:text="Actual Dispatch Date : "
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:background="@drawable/button_border_black"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="17 Apr"
                    android:background="@drawable/button_border_black"
                    android:textSize="16dp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/calender"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_border_black"
                android:gravity="center|left"
                android:padding="8dp"
                android:singleLine="true"
                android:text="1:00 PM"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:text="Type of vehicle : "
                android:layout_weight="0.2"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:padding="8dp"
                android:layout_weight="0.8"
                android:singleLine="true"
                android:text="TATA 1622"
                android:textColor="@color/black"
                android:background="@drawable/button_border_black"
                android:layout_marginRight="15dp"
                android:textSize="16dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:text="Vehicle No : "
                android:layout_weight="0.4"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:padding="8dp"
                android:layout_weight="0.6"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="MH12AW2345"
                android:textColor="@color/black"
                android:background="@drawable/button_border_black"
                android:layout_marginRight="15dp"
                android:textSize="16dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:text="Total Weight : "
                android:layout_weight="0.3"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:padding="8dp"
                android:layout_weight="0.7"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="14 TON"
                android:background="@drawable/button_border_black"
                android:layout_marginRight="15dp"
                android:textSize="16dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:text="Total Quantity: "
                android:layout_weight="0.3"
                android:textSize="16dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:padding="8dp"
                android:layout_weight="0.7"
                android:singleLine="true"
                android:text="14 Pallets"
                android:textColor="@color/black"
                android:background="@drawable/button_border_black"
                android:layout_marginRight="15dp"
                android:textSize="16dp"/>



        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/grey"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:text="LR No.01"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/grey"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:text="Eway Bill No.01 Date"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/grey"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:text="Invoice No.01 Date"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:text="Exp. Delivery Date: "
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:background="@drawable/button_border_black"
                android:gravity="center|left"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:background="@drawable/button_border_black"
                    android:gravity="center|left"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:text="17 Apr"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/calender" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_border_black"
                android:gravity="center|left"
                android:padding="8dp"
                android:singleLine="true"
                android:text="1:00 PM"
                android:textColor="@color/black"
                android:textSize="18dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_green"
                android:textStyle="bold"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="16dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_border_red"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:text="Submit"
                android:textSize="18dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/button_orange_border"
                android:textStyle="bold"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textSize="18dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>