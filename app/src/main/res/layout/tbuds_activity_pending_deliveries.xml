<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.sales.activity.PendingDeliveries">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:visibility="gone">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme">

            <ProgressBar
                android:id="@+id/toolbar_progress_Assgnwork"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/tbar"
        layout="@layout/tbuds_common_toolbar"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#ededed"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consignee"
            android:textSize="13dp"
            android:textColor="#111"
            android:layout_weight="0.6"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Del. Date"
            android:textSize="13dp"
            android:textColor="#111"
            android:layout_weight="0.66"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invoice"
            android:textSize="13dp"
            android:textColor="#111"
            android:layout_weight="0.7"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inv. Date"
            android:textSize="13dp"
            android:textColor="#111"
            android:layout_weight="0.69"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:paddingRight="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtcustname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cust. Name"
            android:textSize="13dp"
            android:textColor="#111"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/txtexpdeldate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="0.65"
            android:gravity="center_vertical|right"
            android:text="4 Jul"
            android:textColor="#111"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtinvoiceno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PR19-20/046"
            android:textSize="13dp"
            android:textColor="#111"
            android:layout_weight="0.55"
            android:paddingRight="8dp"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right" />

        <TextView
            android:id="@+id/txtinvoicedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 Jul"
            android:textSize="12dp"
            android:textColor="#111"
            android:layout_weight="0.65"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:paddingRight="0dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtnoordnote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/sorry_no_ord_aval"
        android:textStyle="italic|bold"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/list_pending_deliveries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"></ListView>

</LinearLayout>
