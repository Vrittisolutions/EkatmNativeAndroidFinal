                    android:visibility="gone"
                    android:layout_marginTop="@dimen/sp_5"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>

