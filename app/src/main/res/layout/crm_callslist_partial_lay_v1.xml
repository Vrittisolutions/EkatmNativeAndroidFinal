    <LinearLayout
        android:id="@+id/len_callslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_viewfill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            card_view:cardMaxElevation="1dp">

            <LinearLayout
                android:id="@+id/lencall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="left|center"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/callrating"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="4dp"
                        android:src="@drawable/square"
                        />

                    <TextView
                        android:id="@+id/firmname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Superfine Extrusions Private Limited, Banglore"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/sp_5"
                    android:layout_gravity="center|left"
                    >

                    <ImageView
                        android:id="@+id/img_nextaction"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/call_24"
                        android:tint="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/actiondatetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:maxLines="2"
                        android:layout_marginRight="1dp"
                        android:text="Tue 17 Sep, 06:11 PM "
                        android:textSize="14dp"
                        android:textColor="@color/grey2c"
                        />
                    <ImageView
                        android:id="@+id/img_appotunity_update"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_cube" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/flag" />

                    <TextView
                        android:id="@+id/milestone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:text=""
                        android:textSize="14dp"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/txt_expvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="@dimen/sp_5"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/coin"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:layout_gravity="left|center"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/stroke"/>

                <TextView
                    android:id="@+id/tvcall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/tv_latestremark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:textSize="12dp" />

                <LinearLayout
                    android:id="@+id/len_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:gravity="right|center"
                    android:layout_marginBottom="2dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_start"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/sp_5"
                        android:background="@drawable/button_green"/>
                    <TextView
                        android:id="@+id/txt_ignore"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/sp_5"
                        android:text="Ignore"
                        android:gravity="center"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:padding="3dp"
                        android:background="@drawable/button_orange"/>
