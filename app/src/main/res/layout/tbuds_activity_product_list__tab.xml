<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vritti.sales.activity.ProductList_TabActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/tablay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme_tbuds"
        tools:ignore="MissingConstraints">

        <include
            android:id="@+id/tbar"
            layout="@layout/tbuds_common_toolbar"
            android:visibility="visible"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            app:tabMode="fixed"
            app:tabGravity="fill"
            android:background="#ff4112"
            app:tabTextColor="#BEBEBE"
            app:tabSelectedTextColor="@color/white"
            app:tabIndicatorColor="#822209"
            app:tabIndicatorHeight="5dp"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tablay"
        app:tabTextColor="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <!--android:layout_marginTop="50dp"-->

</RelativeLayout>