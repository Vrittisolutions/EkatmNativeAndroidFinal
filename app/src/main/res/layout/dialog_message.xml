<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ededed">

    <TextView
        android:id="@+id/textMsg"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:gravity="center"
        android:textColor="#111"
        android:fontFamily="@string/TextFont"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <AutoCompleteTextView
        android:id="@+id/edtreason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:maxLines="5"
        android:hint="Enter reason"
        android:layout_margin="10dp"
        android:textSize="13sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:paddingLeft="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10sp"
            android:onClick="btnSubmitClick"
            android:text="Yes"
            android:fontFamily="@string/ButtonFont"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/btn_pressed_2"/>

        <Button
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10sp"
            android:textSize="17dp"
            android:fontFamily="@string/ButtonFont"
            android:textAllCaps="false"
            android:background="@drawable/btn_pressed_2_orange"
            android:onClick="btnSubmitClick"
            android:text="No"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>