<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/len"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:visibility="visible"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/header">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/header">

        <TextView
            android:id="@+id/txt_show_contactname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textColor="@color/blue"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_show_contact_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_show_contact_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:background="@color/header"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_show_contact_mobileno"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxLength="10"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_show_contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:padding="5dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left|center"
            android:layout_marginLeft="5dp"
            android:gravity="left|center">
            <TextView
                android:id="@+id/txt_show_contact_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:id="@+id/len_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginRight="5dp"
                android:background="@drawable/edit_text"
                android:gravity="center|left"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                >

                <Spinner
                    android:id="@+id/txt_action"
                    android:padding="2dp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/action"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="Action"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:visibility="gone"
                    android:layout_gravity="center|left"
                    android:src="@mipmap/ic_expand" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/len_contact_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/header"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_contactname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/business_edit_text"
                android:maxLength="10"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edit_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/business_edit_text"
                android:hint=""
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/business_edit_text"
                android:orientation="horizontal"
                android:padding="2dp">

                <Spinner
                    android:id="@+id/spinner_edit_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/department"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/header"
            android:gravity="center|left"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_mobile"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/business_edit_text"
                android:hint=""
                android:maxLength="10"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/business_edit_text"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/business_edit_text"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_edit_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:entries="@array/Yes"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_edit_save"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_green"
                android:gravity="center"
                android:padding="5dp"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>


