<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/CastExpandedController"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_header"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/sp_5"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="@color/colorPrimary"
            android:padding="2dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:weightSum="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/masters_icon" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="  Masters"
                android:textStyle = "normal"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:orientation="horizontal"
                app:cardElevation="2dp"
                android:layout_margin="1dp"
                app:cardMaxElevation="2dp"
                app:cardCornerRadius="4dp"
                android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:padding="5dp"
                >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/prospect_master_icon" />

                <TextView
                    android:id="@+id/txtProspectMaster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/AssginWork"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="@dimen/sp_5"
                    android:textStyle="normal" />
            </LinearLayout>
            </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:padding="5dp"
           >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/expense" />
            <TextView
                android:id="@+id/txt_provisional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:padding="@dimen/sp_5"
                android:singleLine="false"
                android:text="My Claim"
                android:textStyle="normal"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:visibility="visible"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/location" />
                <TextView
                    android:id="@+id/txt_CRMReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="View GPS Location"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/travel_plan_icon" />

                <TextView
                    android:id="@+id/txtTravelPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="normal"
                    android:text="Asset Transfer"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />


            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:padding="5dp"
                >


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/enquiry_form_icon" />

                <TextView
                    android:id="@+id/txtEnquiryform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Record Enquiry"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="normal"
                    android:textSize="14sp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:padding="5dp"
                android:weightSum="1"
                android:visibility="visible">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/service_report_icon" />
                <TextView
                    android:id="@+id/txt_service_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="Employee Advance Request"
                    android:layout_marginLeft="5dp"
                    android:textStyle="normal"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:visibility="visible"
                android:padding="5dp"
                android:weightSum="1">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/promotional_form_icon" />

                <TextView
                    android:id="@+id/txtPromotinalForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Promotional Form"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />


            </LinearLayout>
        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:weightSum="1"
                android:padding="5dp"
                android:visibility="visible">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/promotional_form_record_icon" />

                <TextView
                    android:id="@+id/txtpromotional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Holiday List"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="normal"
                    android:textSize="14sp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:weightSum="1"
                android:padding="5dp"
                android:visibility="visible">



                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/offline_data_icon" />

                <TextView
                    android:id="@+id/txtofflinedata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Sync Status"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:visibility="gone"
                android:padding="5dp"
            >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/setting_icon" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="Setting"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>


