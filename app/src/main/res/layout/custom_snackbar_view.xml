<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/len_call_log"
        android:visibility="visible"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_viewfill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="1dp"
            android:layout_margin="5dp"
            card_view:cardMaxElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cancel"
                    android:layout_margin="2dp"
                    android:visibility="gone"
                    android:layout_gravity="right|center"
                    android:tint="@color/colorPrimaryDark"
                    />
                <ImageView
                    android:id="@+id/img_calllog"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/callog_install"
                    />
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Effortlessly update your phone conversation with prospect in CRM."
                    android:layout_gravity="center|left|bottom"
                    android:gravity="center|left|bottom"
                    android:textSize="14dp"
                    android:layout_marginRight="@dimen/sp_5"
                    android:layout_marginLeft="@dimen/sp_5"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/txt_know_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Know more"
                    android:padding="2dp"
                    android:layout_gravity="center|right|bottom"
                    android:gravity="center|right|bottom"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="2dp"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>