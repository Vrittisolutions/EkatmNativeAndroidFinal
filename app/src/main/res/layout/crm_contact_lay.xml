        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            android:layout_margin="5dp"
            app:cardMaxElevation="1dp">

            <LinearLayout
                android:id="@+id/len_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                   >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_contact_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:drawableTint="@color/colorPrimary"
                            android:drawableLeft="@drawable/customer"
                            android:drawablePadding="8dp"
                            android:hint="Contact Name"
                            android:visibility="visible"
                            android:padding="10dp"
                            android:textColor="#111"
                            android:textColorHint="@color/black"
                            android:textSize="14dp"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_designation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:drawablePadding="8dp"
                            android:drawableLeft="@drawable/designation"
                            android:hint="Designation"
                            android:singleLine="true"
                            android:textColor="#111"
                            android:textColorHint="@color/black"
                            android:textSize="14dp" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department :"
                        android:layout_marginLeft="@dimen/sp_5"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        >

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:spinnerMode="dialog"
                            ></Spinner>

                    </LinearLayout>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <AutoCompleteTextView
                        android:id="@+id/spinner_department"
                        android:hint="Department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawablePadding="9dp"
                        android:visibility="visible"
                        android:drawableLeft="@drawable/department"
                        android:padding="10dp"
                        android:drawableTint="@color/colorPrimary"
                        android:textColor="#111"
                        android:editable="false"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColorHint="@color/black"
                        android:textSize="14dp"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_emailid"
                        android:hint="Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/email_24"
                        android:drawablePadding="8dp"
                        android:visibility="visible"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="#111"
                        android:textColorHint="@color/black"
                        android:textSize="14dp"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/mobile"
                        android:hint="Mobile No."
                        android:maxLength="10"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="#111"
                        android:textColorHint="@color/black"
                        android:textSize="14dp"

                        />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_offfice"
                        android:maxLength="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:hint="Office"
                        android:drawableLeft="@drawable/office"
                        android:drawablePadding="8dp"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:textColor="#111"
                        android:inputType="number"
                        android:textColorHint="@color/black"
                        android:textSize="14dp"
                        />
                </android.support.design.widget.TextInputLayout>


                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/checkbox_primary_contact"
                    android:layout_width="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/call_24"
                    android:drawablePadding="8dp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:text="Primary Contact  "
                    android:textSize="14dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="3dp"
            android:layout_marginBottom="@dimen/sp_5"
            android:visibility="gone"
            android:orientation="horizontal">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/txt_save"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button_green"
                    android:text="Save"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_reset"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_orange"
                    android:text="Reset"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textAllCaps="false" />
            </TableRow>
        </LinearLayout>





</LinearLayout>