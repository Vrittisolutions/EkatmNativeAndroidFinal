<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_ordermain"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:background="@drawable/shape_curve_blue_small">

                <TextView
                    android:id="@+id/txtseller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seller"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txtorderid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.55"
                    android:gravity="right"
                    android:text="2008000001"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtMerchantname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.45"
                    android:fontFamily="@string/ButtonFont"
                    android:gravity="left"
                    android:maxLines="3"
                    android:padding="5dp"
                    android:text="Customer name"
                    android:textColor="#222"
                    android:textSize="11sp"
                    android:visibility="invisible"/>

                <!--<TextView
                    android:id="@+id/txtorderid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.55"
                    android:fontFamily="@string/ButtonFont"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="SOHW18-19/0xx"
                    android:textColor="#222"
                    android:textSize="11sp"
                    android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/txtorderdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0"
                    android:fontFamily="@string/ButtonFont"
                    android:gravity="right"
                    android:maxLines="3"
                    android:padding="5dp"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <!--<TextView
                    android:id="@+id/amt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtamt"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.55"
                    android:fontFamily="@string/ButtonFont"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="160.00 $"
                    android:textColor="#fe920b"
                    android:textSize="12sp"
                    android:textStyle="bold" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/imageview_placed"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/lyout"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/dotted" />

                <ImageView
                    android:id="@+id/imageview_approved"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/lyout"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/dotted" />

                <ImageView
                    android:id="@+id/imageview_dispatched"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="60dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/lyout"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/dotted" />

                <ImageView
                    android:id="@+id/imageview_delivered"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1" />

                <Switch
                    android:id="@+id/switch_onoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtplaced"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_gravity="left"
                    android:layout_weight="0.1"
                    android:fontFamily="@string/TextFont"
                    android:gravity="center|top|left"
                    android:textSize="11dp"
                    android:hint=""
                    android:paddingLeft="0dp"
                    android:paddingRight="2dp"/>
                <!--android:paddingBottom="5dp"
                 android:paddingRight="10dp"-->

                <!--<LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:orientation="vertical" />-->

                <TextView
                    android:id="@+id/txtapproved"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_gravity="right"
                    android:layout_weight="0.1"
                    android:fontFamily="@string/TextFont"
                    android:gravity="center|top"
                    android:textSize="11dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:hint=""/>
                <!--android:paddingLeft="10dp"
                    android:paddingRight="10dp"-->

                <!-- <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="0.1"
                     android:orientation="vertical" />-->

                <TextView
                    android:id="@+id/txtdispatched"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_gravity="right"
                    android:layout_weight="0.2"
                    android:fontFamily="@string/TextFont"
                    android:gravity="center|top"
                    android:textSize="11dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:hint=""/>
                <!--android:paddingLeft="10dp"
                    android:paddingRight="10dp"-->

                <!-- android:text="DOD"-->
                <!--<LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:orientation="vertical" />-->

                <TextView
                    android:id="@+id/txtdelivered"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_gravity="right"
                    android:layout_weight="0.1"
                    android:fontFamily="@string/TextFont"
                    android:gravity="center|top|right"
                    android:textSize="11dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="0dp"
                    android:hint=""/>
                <!--android:paddingLeft="10dp"-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shape_curve_orange_small"
                android:paddingRight="10dp">

                <LinearLayout
                    android:id="@+id/laypaynow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:padding="2dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/paytitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtamt"
                        android:layout_gravity="center_vertical|left"
                        android:gravity="center_horizontal"
                        android:text="@string/paynow"
                        android:textColor="@color/btncolordark"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:visibility="visible"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtamt"
                    android:layout_gravity="right"
                    android:layout_weight="0.55"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="@string/amt"
                    android:paddingRight="5dp"
                    android:textColor="@color/btncolordark"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtamt"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="160.00"
                    android:paddingLeft="10dp"
                    android:textColor="@color/btncolordark"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/imgshare"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_menu_share"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <Button
                android:id="@+id/cancel_order"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:text="Cancel Order"
                android:textSize="12sp"
                android:background="#99270a"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtremark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingBottom="2dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/call" />

                <TextView
                    android:id="@+id/txtmobile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:maxLength="10"
                    android:paddingLeft="5dp"
                    android:text="1234567890"
                    android:textColor="@color/violet_dark"
                    android:textSize="17dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgpaid"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical|bottom"
            android:gravity="center_vertical|bottom"
            android:src="@drawable/paidstamp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="25dp"/>
        <!--   android:src="@drawable/paidstamp"-->
    </RelativeLayout>

</android.support.v7.widget.CardView>