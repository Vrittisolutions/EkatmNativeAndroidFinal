<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:padding="0dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="0.5dp"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/orderid_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="SOHW19-20/000"
                    android:textColor="#222"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.15"/>

                <ImageView
                    android:id="@+id/txtstatus"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:maxLines="4"
                    android:text="Status"
                    android:src="@drawable/checkedfilled"
                    android:textColor="#222"
                    android:textSize="12dp"
                    android:layout_weight="0.85"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtcustname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_weight="0.5"
                android:background="#B1773D"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:paddingRight="7dp"
                android:text="Consignee"
                android:textColor="@color/white"
                android:textSize="11dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.5"
                    android:gravity="center|left"
                    android:text="@string/addt"
                    android:paddingLeft="5dp"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtamt"
                    android:layout_gravity="center|right"
                    android:layout_weight="0.5"
                    android:gravity="center|right"
                    android:text="@string/expdldt"
                    android:textSize="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/doack_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.5"
                    android:gravity="center|left"
                    android:text="dd mmm yyyy"
                    android:textColor="#111"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:id="@+id/txtsodate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtamt"
                    android:layout_gravity="center|right"
                    android:layout_weight="0.5"
                    android:gravity="center|right"
                    android:text="dd mmm yyyy"
                    android:textColor="#006400"
                    android:textSize="12dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtamt"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="Amount"
                android:textColor="@color/colorPrimary1"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/delmode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtamt"
                android:gravity="left"
                android:layout_gravity="left"
                android:text=""
                android:textColor="@color/violet_dark"
                android:textSize="14dp"
                android:paddingLeft="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/call" />

                    <TextView
                        android:id="@+id/txtmobile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:maxLength="10"
                        android:paddingLeft="5dp"
                        android:text="1234567890"
                        android:textColor="@color/violet_dark"
                        android:textSize="15dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgshare"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|right"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="7dp"
                    android:paddingLeft="7dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:background="@color/colorPrimaryDark"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgpaid"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:src="@drawable/paidstamp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
