                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        />
                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="40dp"
                        android:background="#CFDBE2"
                        android:visibility="visible"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:id="@+id/laycall_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Follow-up"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"
                        android:textColor="#000000"
                        />
                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="40dp"
                        android:background="#CFDBE2"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:id="@+id/call_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provisional Receipt"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"
                        android:textColor="#000000"
                        />
                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="40dp"
                        android:background="#CFDBE2"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"
                        android:textColor="#000000"
                        />
                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="40dp"
                        android:background="#CFDBE2"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/convers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Convers"
                        android:textSize="14dp"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        />
                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="40dp"
                        android:background="#CFDBE2"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Discount Voucher"
                        android:textSize="14dp"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="40dp"
                        android:background="#CFDBE2"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:id="@+id/txt_prospect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit Prospect"
                        android:textSize="14dp"
                        android:visibility="gone"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        />
                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="40dp"
                        android:background="#CFDBE2"
                        android:visibility="gone"

                        android:layout_gravity="center_vertical" />
                    <!--<TextView
                        android:id="@+id/history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:textSize="14dp"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        />
                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="40dp"
                        android:background="#CFDBE2"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical" />
-->
                    <TextView
                        android:id="@+id/attachment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Attachment"
                        android:layout_gravity="center_vertical"
                        android:textSize="14dp"
                        android:padding="8dp"
                        android:textColor="#000000"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </HorizontalScrollView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@+id/len"
        android:orientation="vertical">
        <LinearLayout
