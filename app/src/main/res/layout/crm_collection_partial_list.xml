            android:padding="@dimen/sp_5"
            android:layout_marginLeft="@dimen/sp_5"
            android:layout_marginRight="@dimen/sp_5"
            android:background="@drawable/blue_backgroung"
            android:orientation="horizontal">
            <ImageView
