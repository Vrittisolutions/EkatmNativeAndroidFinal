                            android:layout_gravity="top"/>

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/txt3date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
