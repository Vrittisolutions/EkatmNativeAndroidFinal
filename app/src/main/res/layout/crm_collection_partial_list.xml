                        android:layout_height="wrap_content"
                        android:text=""
                        android:padding="5dp"
                        android:layout_marginLeft="35dp"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

