                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/edt_instrument_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Instrument No."
                                    android:textSize="14dp"
                                    android:drawableTint="@color/colorPrimary"
                                    android:drawableLeft="@drawable/gstn"
                                    android:padding="10dp"
                                    android:inputType="number"
                                    android:backgroundTint="@color/stroke"
                                    android:drawablePadding="8dp"/>

                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/edt_bankname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Drawn Bank"
                                    android:textSize="14dp"
                                    android:drawableLeft="@drawable/office"
                                    android:padding="10dp"
                                    android:backgroundTint="@color/stroke"
                                    android:drawablePadding="8dp"/>

                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/edt_tds_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="TDS Amount"
                                    android:textSize="14dp"
                                    android:inputType="numberDecimal"
                                    android:drawableLeft="@drawable/account_balance_24"
                                    android:drawableTint="@color/colorPrimary"
                                    android:padding="10dp"
                                    android:backgroundTint="@color/stroke"
                                    android:drawablePadding="8dp"/>

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <AutoCompleteTextView
                                    android:id="@+id/spinner_bankname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Deposited Bank"
                                    android:textSize="14dp"
                                    android:drawableLeft="@drawable/office"
                                    android:padding="10dp"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:backgroundTint="@color/stroke"
                                    android:drawablePadding="8dp"/>

                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Deposited Date"
                                android:textSize="14dp"
                                android:layout_marginLeft="@dimen/sp_10"
                                android:layout_marginTop="5dp"
                                android:drawableLeft="@drawable/date"
                                android:drawablePadding="8dp"
                                />

                            <TextView
                                android:id="@+id/edt_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:padding="2dp"
                                android:textSize="16dp"
                                android:layout_marginLeft="40dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                />

                            <View
                                android:id="@+id/view"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/stroke"/>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/view">


                                <EditText
                                    android:id="@+id/edt_narration"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Narration"
                                    android:textSize="14dp"
                                    android:padding="10dp"
                                    android:drawablePadding="8dp"
                                    android:inputType="textMultiLine"
                                    android:drawableLeft="@drawable/notes"/>



                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>



                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/len_discount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/len"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="center|right"
                android:padding="@dimen/sp_5"
                android:layout_marginLeft="@dimen/sp_5"
                android:layout_marginRight="@dimen/sp_5"
                android:background="@drawable/blue_backgroung"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_save_discount"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/sp_10"
                    android:padding="2dp"
                    android:src="@drawable/save_icon"
                    android:tint="@color/white"
                    android:visibility="visible" />
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="8dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="1dp"
                card_view:cardMaxElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reversal Amount"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center|left"
                        android:gravity="center|left">
                        <EditText
                            android:id="@+id/edt_reversal_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:textColor="@color/black"
                            >

                        </EditText>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reason"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center|left"
                        android:gravity="center|left">
                        <EditText
                            android:id="@+id/edt_reason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:textColor="@color/black"
                            ></EditText>
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/sp_10"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/sp_10"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_save"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Save"
                            android:background="@drawable/button_green"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="5dp"
                            android:padding="10dp"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/txt_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:background="@drawable/button_orange"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:layout_weight="1"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:padding="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/callhistory_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_back"
            android:visibility="visible"
            android:layout_below="@+id/len"
            />

    </RelativeLayout>
</RelativeLayout>