                        android:id="@+id/img_nextaction"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/call_24"
                        android:visibility="visible"
                        android:tint="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/actiondatetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:maxLines="2"
                        android:text="Tue 17 Sep, 06:11 PM "
                        android:textSize="14dp"
                        android:textColor="@color/grey2c"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/stroke"/>

                <TextView
                    android:id="@+id/tvcall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_invoice_no"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/green_border"
                        />
                    <TextView
                        android:id="@+id/txt_invoice_date"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=""
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/green_border"
                        />
                    <TextView
                        android:id="@+id/settlement_date"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_border"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:id="@+id/txt_amount"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_border"
                        />
                </LinearLayout>


                <TextView
