        <!--form-->
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:layout_marginTop="10dp"
         android:orientation="horizontal"
         >

         <CheckBox
             android:id="@+id/check_form"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Form"
             android:checked="false"/>

         <LinearLayout
             android:id="@+id/ln_form"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="2dp"
             android:layout_marginBottom="2dp"
             android:layout_weight="1"
             android:background="@drawable/edit_text"
             android:orientation="horizontal"
             android:visibility="gone"
             >

             <Spinner
                 android:id="@+id/spinner_form"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:layout_marginLeft="5dp"
                 android:layout_weight="1"
                 android:gravity="center_vertical"
                 android:padding="2dp"
                 android:singleLine="true"
                 android:textColor="#000000"
                 android:textColorLink="@color/white"
                 android:textSize="14sp"
                 android:visibility="visible"

               />

         </LinearLayout>


     </LinearLayout>


<!--academic year-->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_academicYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Academic Year"
            android:checked="false"/>

        <LinearLayout
            android:id="@+id/ln_academicYear"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/spinner_academinYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColorLink="@color/white"
                android:singleLine="true"
                android:textColor="#000000"
                android:entries="@array/academic_Year"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:textSize="14sp"
                android:background="@null"
                android:visibility="visible"
                android:drawableRight="@drawable/spinner_arrow"
                />




        </LinearLayout>

    </LinearLayout>

<!--filled between-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/check_fillBetween"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filled Between"
                android:checked="false"/>

            <LinearLayout
                android:id="@+id/ln_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            <LinearLayout
                android:id="@+id/ln_fromDate"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:orientation="horizontal"
                android:visibility="visible"
                >

                <TextView
                    android:id="@+id/txt_fromDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableRight="@drawable/calendar2"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorLink="@color/white"
                    android:textSize="14sp"
                    android:visibility="visible"
                    tools:hint="Due Date" />




            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

            <LinearLayout
                android:id="@+id/ln_toDate"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:orientation="horizontal"
                android:visibility="visible"
                >

                <TextView
                    android:id="@+id/txt_toDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableRight="@drawable/calendar2"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorLink="@color/white"
                    android:textSize="14sp"
                    android:visibility="visible"
                    tools:hint="Due Date" />




            </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

<!--Kendra-->
     <LinearLayout
            android:id="@+id/ln_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/check_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schools under Kendra"
                android:layout_gravity="center_vertical"
                android:checked="false"/>


                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Sayali"
                        android:minHeight="40dp"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:id="@+id/spinner_schoolName"
                        android:background="@drawable/edit_text" />




        </LinearLayout>




    <Button
        android:id="@+id/btn_showKendra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/green_backgraound"
        android:text="Select Schools"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:visibility="gone"
        android:padding="10dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"


        ></Button>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_SchoolName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
           >


        </android.support.v7.widget.RecyclerView>






    </LinearLayout>
    <Button
        android:id="@+id/btn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_backgraound"
        android:text="View Datasheet List"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:visibility="visible"
        android:layout_margin="5dp"


        ></Button>



</LinearLayout>
