<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.sales.OrderBookingNew.SegmentSelection">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/colorPrimary1"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

        <!-- </android.support.design.widget.CollapsingToolbarLayout>-->

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:layout_below="@id/appbarlayout">

        <LinearLayout
            android:id="@+id/layspeciality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/layhdr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@color/navybluedark"
                android:visibility="visible">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:layout_weight="0"/>

                <TextView
                    android:id="@+id/txttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="5dp"
                    android:text="@string/whtbuy"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <!--  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/group"
                      android:paddingLeft="10dp"
                      android:layout_marginRight="20dp"
                      android:textColor="@color/btncolordark"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:layout_weight="1"/>
                  &lt;!&ndash;&ndash;&gt;

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/subcatcnt"
                      android:layout_gravity="center_vertical"
                      android:gravity="center"
                      android:textColor="@color/btncolordark"
                      android:textSize="14sp"
                      android:textStyle="bold"
                      android:layout_marginRight="10dp" />-->

            </LinearLayout>

            <GridView
                android:id="@+id/gridbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:layout_below="@+id/layhdr"
                android:choiceMode="singleChoice"
                android:listSelector="@color/selctrcolor"
                android:soundEffectsEnabled="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/border_lightblue"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@color/black"
                        android:alpha="0.6">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:alpha="0.4"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layrestaurant"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_gravity="center_vertical|bottom"
                            android:layout_weight="1"
                            android:gravity="center|bottom"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|top"
                                    android:gravity="center"
                                    android:text="@string/hotel"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:padding="5dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right|top"
                                android:layout_weight="0.4"
                                android:gravity="right|top"
                                android:orientation="vertical"
                                android:visibility="invisible">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="right|top"
                                    android:gravity="right|top" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center_vertical|bottom"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|top"
                            android:gravity="center"
                            android:text="@string/hotel"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:padding="5dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|right|top"
                    android:layout_weight="0.4"
                    android:gravity="center_horizontal|right|top"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_marginLeft="150dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_gravity="right|top"
                        android:gravity="right|top"
                        />

                </LinearLayout>

            </RelativeLayout>

            <!--madam home-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:elevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/offersdisc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shape_curve_orange_small">
                        <!-- android:background="@drawable/shape_curve_orange"-->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="225dp"
                                android:orientation="vertical"
                                android:alpha="0.6"/>
                            <!--android:background="@color/colorPrimary"-->

                            <LinearLayout
                                android:id="@+id/laytxt"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/clickoffr"
                                    android:textColor="@color/app_theme_color_maroon"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">
                                <!-- android:layout_below="@+id/laytxt"-->
                                <!--android:background="@drawable/shape_curve_grey_small"-->

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:elevation="5dp"/>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:padding="30dp"
                                    android:elevation="5dp"
                                    android:layout_marginTop="5dp"/>

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:padding="30dp"
                                    android:elevation="5dp"
                                    android:layout_gravity="center"
                                    android:visibility="gone"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/laysettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btnshopbymerch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textColor="#2c2c2c"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="18sp"
            android:textColor="#2c2c2c"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnnshopbyspeciality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textColor="#2c2c2c"
            android:textStyle="bold"
            android:textSize="16sp"/><!--e5e5e5-->

        <LinearLayout
            android:id="@+id/btndefdist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#e5e5e5"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="#2c2c2c"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"/>

            <AutoCompleteTextView
                android:id="@+id/edtdistance"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:hint="5"
                android:background="#e5e5e5"
                android:textColor="#2c2c2c"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnmakeitdef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e5e5e5"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:textAllCaps="false"
            android:textColor="#2c2c2c"
            android:textStyle="bold"
            android:textSize="16sp"
            android:visibility="gone"/><!--e5e5e5-->

        <Button
            android:id="@+id/btnsave"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/showdialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/inprogress_dialog"
            android:layout_margin="10dp"
            android:layout_gravity="center" />

    </LinearLayout>

</RelativeLayout>
