<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_header"
        />

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_prosbusi"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_weight="0.8"
            android:text=" Select Prospect Type"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     android:background="@color/card_back"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lay_prospect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/card_back"
        android:layout_gravity="center_vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/sp_5"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">
        <LinearLayout
            android:id="@+id/lay_record_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/sp_5"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/expense"
                android:tint="@color/colorPrimary"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginLeft="5dp"
                android:padding="@dimen/sp_5"
                android:textColor="@color/black"
                android:text="Record Expense"/>

        </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">
        <LinearLayout
            android:id="@+id/lay_record_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/sp_5"
            android:background="@color/white"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/history"
                android:tint="@color/colorPrimary"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:padding="@dimen/sp_5"
                android:layout_marginLeft="5dp"
                android:text="Expense History" />
        </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/txt_service_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/sp_5"
                android:background="@color/white"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/service_report_icon"
                    android:tint="@color/colorPrimary"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:padding="@dimen/sp_5"
                    android:layout_marginLeft="5dp"
                    android:text="Employee Advance Request" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">
        <LinearLayout
         android:id="@+id/lay_claim"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="center_vertical"
            android:padding="@dimen/sp_5"
            android:background="@color/white"

         android:layout_gravity="center_vertical">

     <ImageView
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_marginLeft="10dp"
         android:tint="@color/colorPrimary"
         android:src="@drawable/expense_icon" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:padding="@dimen/sp_5"
        android:layout_marginLeft="5dp"
        android:text="Generate Claim "/>
</LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">
        <LinearLayout
                android:id="@+id/lay_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/sp_5"
                android:background="@color/white"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/credit_card" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:padding="@dimen/sp_5"
                    android:layout_marginLeft="5dp"
                    android:text="Payment Status "/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">
        <LinearLayout
                android:id="@+id/lay_ledger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/sp_5"
                android:background="@color/white"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/icon_prospct" />


                <TextView
                    android:id="@+id/txt_ledger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:padding="@dimen/sp_5"
                    android:layout_marginLeft="5dp"
                    android:text="Ledger "/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:layout_margin="1dp"
            app:cardMaxElevation="2dp"
            app:cardCornerRadius="4dp"
            android:visibility="visible">
        <LinearLayout
                android:id="@+id/lay_claim_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/sp_5"
                android:background="@color/white"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/history" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:padding="@dimen/sp_5"
                    android:layout_marginLeft="5dp"
                    android:text="Claim History "/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            android:padding="@dimen/sp_5"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:text="Claim History "/>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>