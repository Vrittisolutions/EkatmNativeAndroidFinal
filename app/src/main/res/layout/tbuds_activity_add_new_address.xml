<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:visibility="visible"
        android:background="@color/colorPrimary1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:popupTheme="@style/AppTheme">

            <ImageView
                android:id="@+id/imgrefresh"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_refresh"
                android:layout_gravity="center|right"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/toolbar_progress_Assgnwork"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/tbar"
        layout="@layout/tbuds_common_toolbar"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <!--name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:hint="Enter Name"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary1"
            android:layout_marginTop="10dp"
            android:layout_weight="0.15">

            <AutoCompleteTextView
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="7dp"
                android:hint=""
                android:inputType="text|textMultiLine"
                android:textSize="14sp"
                android:textColor="#111"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <!--address-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:hint="Enter Address"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary1"
            android:layout_marginTop="0dp"
            android:layout_weight="0.15">

            <AutoCompleteTextView
                android:id="@+id/edt_mainaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="7dp"
                android:hint=""
                android:drawableRight="@drawable/tbuds_home"
                android:maxLines="5"
                android:inputType="text|textMultiLine"
                android:textSize="14sp"
                android:textColor="#111"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnclear"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Clear"
            android:layout_weight="0.85"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tbuds_button_all_border"/>

    </LinearLayout>

    <!--subaddress-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:hint="Enter flat/house no."
        android:textSize="14sp"
        android:textColor="@color/colorPrimary1"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <AutoCompleteTextView
            android:id="@+id/edt_subaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="7dp"
            android:hint=""
            android:textSize="14sp"
            android:textColor="#111"/>

    </android.support.design.widget.TextInputLayout>

    <!--state-city-pin-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--state-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:hint="Enter State"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary1"
            android:layout_marginTop="0dp"
            android:layout_weight="0.32">

            <AutoCompleteTextView
                android:id="@+id/edt_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="7dp"
                android:hint=""
                android:ellipsize="end"
                android:drawableRight="@drawable/tbuds_ic_expand"
                android:textSize="12.5sp"
                android:textColor="#111"/>

        </android.support.design.widget.TextInputLayout>

        <!--city-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:hint="Enter City"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary1"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.32">

            <AutoCompleteTextView
                android:id="@+id/edt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="7dp"
                android:hint=""
                android:ellipsize="end"
                android:drawableRight="@drawable/tbuds_ic_expand"
                android:textSize="12.5sp"
                android:textColor="#111"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <!--mobile-email-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--postalcode-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:hint="Enter Pincode"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary1"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <AutoCompleteTextView
                android:id="@+id/edt_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="7dp"
                android:hint=""
                android:inputType="number"
                android:maxLength="6"
                android:textSize="12.5sp"
                android:textColor="#111"/>

        </android.support.design.widget.TextInputLayout>

        <!--mobile-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:hint="Enter Mobile"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary1"
            android:layout_marginTop="0dp"
            android:layout_weight="0.5">

            <AutoCompleteTextView
                android:id="@+id/edt_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="7dp"
                android:hint=""
                android:drawableRight="@drawable/tbuds_call_phone"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="14sp"
                android:textColor="#111"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <!--email-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:hint="Enter Email"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary1"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="7dp"
            android:hint=""
            android:drawableRight="@drawable/tbuds_email"
            android:maxLines="2"
            android:inputType="textEmailAddress|textMultiLine"
            android:textSize="13sp"
            android:textColor="#111"/>

    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/chk_gstn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:paddingLeft="5sp"
        android:text="GSTN Available"
        android:textSize="14sp"
        android:textColor="#2c2c2c"/>

    <!--business name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:hint="Enter Business Name"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary1"
            android:layout_marginTop="0dp"
            android:layout_weight="0.15">

            <AutoCompleteTextView
                android:id="@+id/edt_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="7dp"
                android:hint=""
                android:textSize="14sp"
                android:textColor="#111"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <!--gstn-tan-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--GSTN-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:hint="Enter GSTN"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary1"
            android:layout_marginTop="0dp"
            android:layout_weight="0.5">

            <AutoCompleteTextView
                android:id="@+id/edt_gstn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="7dp"
                android:hint=""
                android:textSize="14sp"
                android:textColor="#111"/>

        </android.support.design.widget.TextInputLayout>

        <!--TAN-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:hint="Enter TAN"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary1"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <AutoCompleteTextView
                android:id="@+id/edt_tan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="7dp"
                android:hint=""
                android:textSize="14sp"
                android:textColor="#111"/>

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <!--txtaddress-->
    <LinearLayout
        android:id="@+id/layout_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="7dp"
        android:padding="5dp"
        android:background="#ededed"
        android:elevation="5dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/tbuds_marker"
            android:layout_marginTop="2dp"
            android:padding="1dp"
            android:layout_gravity="center_vertical|top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/txtline_mainaddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:hint="Address line one"
                android:maxLines="3"
                android:textSize="14sp"
                android:textColor="#111"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|top"/>

            <TextView
                android:id="@+id/txtline_subaddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:hint="flat/house no."
                android:maxLines="3"
                android:textSize="12.5sp"
                android:textColor="#111"
                android:layout_gravity="center_vertical|top"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtline_state_city_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:hint="city, state, postal code"
                android:maxLines="3"
                android:textSize="12.5sp"
                android:textColor="#111"
                android:layout_gravity="center_vertical|top"
                android:visibility="visible"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@color/btncolordark"
        android:text="Confirm my location"
        android:textColor="#ffffff"
        android:textAllCaps="true"
        android:layout_gravity="center_vertical" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>
