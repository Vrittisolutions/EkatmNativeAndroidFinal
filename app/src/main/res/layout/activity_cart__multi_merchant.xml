<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/colorPrimary1"
        android:paddingBottom="5dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <!--?attr/actionBarSize-->

            <RelativeLayout
                android:id="@+id/layyellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:layout_gravity="center_vertical|right">
                <!-- android:layout_weight="0.8"-->
                <!-- android:padding="5dp"
                android:layout_marginTop="@dimen/actionbar_height"-->

                <ImageView
                    android:id="@+id/imgcart"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/cart2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical|right" />

                <TextView
                    android:id="@+id/textview_cart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/shape_cart_count"
                    android:layout_marginLeft="25dp"
                    android:text="0"
                    android:textColor="#111"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/scrollayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbarlayout"
        android:layout_above="@+id/linearLayout3">

        <ScrollView
            android:id="@+id/scrollview_cart_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fillViewport="true">
            <!--android:layout_above="@+id/linearLayout3"-->
            <!-- android:layout_marginTop="@dimen/button_height"-->

            <LinearLayout
                android:id="@+id/linearlayout_checkout_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtsearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/searchprod"
                    android:textSize="13sp"
                    android:paddingLeft="5sp"/>

                <ListView
                    android:id="@+id/listcheckout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp">
                    <!--android:layout_marginLeft="8dp"-->

                </ListView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="fill_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary1"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textview_amt_payable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center|right"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="@string/amount"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@string/ButtonFont"/>

            <TextView
                android:id="@+id/textview_total_amount_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="0.00 â‚¹"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@string/ButtonFont"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_shopmore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary1"
                android:layout_alignParentBottom="true"
                android:text="@string/shopmoer"
                android:titleCondensed="@string/ButtonFont"
                android:drawableLeft="@drawable/shmore1"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:paddingLeft="20dp"
                android:layout_weight="0.55"/>

            <Button
                android:id="@+id/btn_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_pressed"
                android:layout_alignParentBottom="true"
                android:text="@string/chekout"
                android:titleCondensed="@string/ButtonFont"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_weight="0.45"/>

        </LinearLayout>

        <!--android:padding="10dp"-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/imgzoomview_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_white"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:elevation="5dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgzoomview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:elevation="5dp"/>

        <TextView
            android:id="@+id/txtiname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="16sp"
            android:textColor="#111"
            android:textStyle="bold"
            android:paddingLeft="10sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtbname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Brand"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="10sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:visibility="visible"
                android:textColor="@color/violet_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content+UOM"
                android:textSize="14sp"
                android:textColor="#111"
                android:textStyle="bold"
                android:paddingRight="10sp"
                android:layout_gravity="left"
                android:gravity="left"
                android:visibility="gone"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>