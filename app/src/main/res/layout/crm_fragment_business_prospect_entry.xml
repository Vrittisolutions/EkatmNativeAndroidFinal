<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:gpb="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:scrollbars="none"
        android:isScrollContainer="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:background="@drawable/business_edit_text"
                android:focusableInTouchMode="true">
                <AutoCompleteTextView
                    android:id="@+id/efName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="@color/hint"
                    android:hint="Firm Name"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:layout_weight="1">

                    <requestFocus />

                </AutoCompleteTextView>
                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dip"
                    android:layout_marginRight="10dp"
                    android:visibility="gone" />
            </LinearLayout>
            <EditText
                android:id="@+id/edt_contact_name_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/business_edit_text"
                android:padding="10dp"
                android:hint="Enter Contact Name"
                android:textColorHint="@color/hint"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:singleLine="true"

                />

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/business_edit_text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:hint="Enter Address"
                android:textColorHint="@color/hint"
                android:textColor="@color/black"
                android:maxLines="3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/business_edit_text"
                    android:padding="10dp"
                    android:hint="Mobile No"
                    android:textColorHint="@color/hint"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:imeOptions="actionNext"

                    />

                <EditText
                    android:id="@+id/edt_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/business_edit_text"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:hint="Telephone No"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="@color/hint"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:imeOptions="actionNext"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/business_edit_text"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <AutoCompleteTextView
                    android:id="@+id/eAutoCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:textColorHint="@color/hint"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionNext"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:background="@drawable/business_edit_text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State :"
                    android:textSize="14dp"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/spinner_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"

                    >
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/business_edit_text"
                android:padding="10dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country : "
                    android:textSize="14dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:spinnerMode="dialog"
                    android:text="India"
                    android:background="@android:color/transparent"
                    android:textSize="18dp"
                    android:editable="false"
                    android:imeOptions="actionNext"

                    >
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/business_edit_text"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <AutoCompleteTextView
                    android:id="@+id/eAutoTerritory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Territory"
                    android:background="@android:color/transparent"
                    android:textColor="#000000"
                    android:textColorHint="@color/hint"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:imeOptions="actionNext"

                    />

            </LinearLayout>
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/business_edit_text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:hint="E-mail"
                android:textColorHint="@color/hint"
                android:textColor="@color/black"
                android:singleLine="true"
                android:imeOptions="actionNext"

                />
            <EditText
                android:id="@+id/edt_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/business_edit_text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:hint="Website"
                android:textColorHint="@color/hint"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/business_edit_text"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <AutoCompleteTextView
                    android:id="@+id/autotxtBusinessSegment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:hint="Business Segment"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/hint"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textSize="16dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/business_edit_text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Currency :"
                    android:textSize="14dp"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/sCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_marginLeft="10dp"

                    >
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/business_edit_text"
                android:orientation="vertical"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/edt_Products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:hint="Select Product"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="@color/hint"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_weight="1"

                    >
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/business_edit_text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <AutoCompleteTextView
                    android:id="@+id/autotxtProspect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Source of Prospect"
                    android:textColor="#000000"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/hint"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textSize="16sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center|left"
                android:layout_gravity="center|left"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prospect Shared By :"
                    android:textSize="14dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>
                <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
                    android:id="@+id/proress_reference"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    gpb:colors="@array/google_colors"
                    gpb:type="chrome_floating_circles"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/business_edit_text"
                android:layout_marginBottom="5dp"

                >
                <Spinner
                    android:id="@+id/sReferenceType"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:spinnerMode="dialog"
                    android:layout_weight="1"
                    >
                </Spinner>
                <Spinner
                    android:id="@+id/sReference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    >
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"


                >

                <Button
                    android:id="@+id/buttonSave_prospect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@color/btnsave"
                    android:text="Save"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonSaveandstartcall_prospect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/btnsave"
                    android:text="@string/savecall"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/buttonClose_prospect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginRight="5dp"
                    android:text="Cancel"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>