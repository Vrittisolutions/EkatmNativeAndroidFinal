<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:isScrollContainer="false"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:id="@+id/len_wonumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_gravity="center|left"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="WO Number :"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/business_edit_text"
            >
            <Spinner
                android:id="@+id/spinner_wonumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hint"
                android:textColor="@color/black"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginLeft="5dp"
                android:textSize="16dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="center|left"
        android:gravity="center|left"
        android:layout_marginBottom="5dp"
        android:focusableInTouchMode="true"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"

            android:textColor="@color/black"
            android:text="Item :"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/business_edit_text"
            android:focusableInTouchMode="true"

            >
        <Spinner
            android:id="@+id/item_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            >
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:padding="2dp"
            android:background="@drawable/business_edit_text"
            android:focusableInTouchMode="true"

            >
        <Spinner
            android:id="@+id/item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            >
        </Spinner>>
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|left"
        android:gravity="center|left"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Quantity :"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"/>
        <TextView

            android:id="@+id/txt_stock_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint"
            android:textColor="@color/black"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:background="@drawable/textview_border"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/len_balencequantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|left"
        android:gravity="center|left"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance Quantity :"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"/>
        <TextView

            android:id="@+id/txt_balance_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint"
            android:textColor="@color/black"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:background="@drawable/textview_border"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|left"
        android:gravity="center|left"
        android:layout_marginTop="5dp"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requisition Quantity :"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"/>

        <EditText

            android:id="@+id/edt_requisition_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/edit_text"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_uomdesc"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:padding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:weightSum="1"
        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warehouse :"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_weight="0.6"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginRight="3dp"
           android:layout_weight="0.4"
            android:background="@drawable/business_edit_text"
            >
            <Spinner
                android:id="@+id/spinner_warehouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hint"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warehouse Quantity"
            android:textColor="@color/black"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|left"
        android:focusableInTouchMode="true"
        android:gravity="center|left">

        <EditText
            android:id="@+id/edt_warehouse_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint"
            android:textColor="@color/black"
            android:singleLine="true"
            android:visibility="gone"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text"
            android:textSize="16dp" />


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location :"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/business_edit_text"
            >
            <Spinner
                android:id="@+id/spinner_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hint"
                android:textColor="@color/black"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginLeft="5dp"
                android:textSize="16dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Quantity"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center|left"
        android:focusableInTouchMode="true"
        android:gravity="center|left"
        android:visibility="gone">


        <EditText
            android:id="@+id/edt_locaation_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_weight="1"
            android:visibility="gone"
            android:padding="12dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text"
            android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/len_routename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_gravity="center|left"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route Name :"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="@drawable/business_edit_text"
            >
            <TextView
                android:id="@+id/txt_route_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hint"
                android:textColor="@color/black"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginLeft="5dp"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/len_segmenttype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_gravity="center|left"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segment Type :"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="@drawable/textview_border"
            >
            <TextView
                android:id="@+id/txt_segment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hint"
                android:textColor="@color/black"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginLeft="5dp"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/len_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_gravity="center|left"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From :"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="@drawable/textview_border"
            >
            <TextView
                android:id="@+id/txt_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hint"
                android:textColor="@color/black"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginLeft="5dp"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/len_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_gravity="center|left"
        android:focusableInTouchMode="true"
        android:gravity="center|left"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To :"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="@drawable/textview_border"
            >
            <TextView
                android:id="@+id/txt_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hint"
                android:textColor="@color/black"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginLeft="5dp"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/len_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center|left"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:gravity="center|left"
        android:visibility="gone"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address :"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint"
            android:textColor="@color/black"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:background="@drawable/business_edit_text"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remark :"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/edt_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint"
            android:textColor="@color/black"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:background="@drawable/business_edit_text"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/len_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/btncancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textAllCaps="false"
            android:text="Close" />
        <Button
            android:id="@+id/btnsave_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Save Changes"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>
    </ScrollView>