<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="1dp"
    android:gravity="center_vertical">

    <View
        android:id="@+id/v1"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:background="#266091" />


    <RelativeLayout
        android:id="@+id/len"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:padding="2dp"

        >

        <com.facebook.drawee.view.SimpleDraweeView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/single_user_icon" />
        <ImageView
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_delete"
            android:tint="@color/black"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/txt_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/admin_bg"
            android:padding="5dp"
            android:layout_toLeftOf="@id/delete"
            android:singleLine="true"
            android:text="Group Admin"
            android:textColor="#0a9bc5"
            android:textSize="12sp"
            android:visibility="gone"

            />
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:buttonTint="@color/orange"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/user_name_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/txt_admin"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="3dp"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/profile_image"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>




</RelativeLayout>