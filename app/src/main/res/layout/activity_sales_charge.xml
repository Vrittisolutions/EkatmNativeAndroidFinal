<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.sales.activity.SalesChargeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:visibility="visible"
        android:background="@color/colorPrimary1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:popupTheme="@style/AppTheme">

            <ProgressBar
                android:id="@+id/toolbar_progress_Assgnwork"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="0dp"
                    android:hint="Charge"
                    android:textSize="12sp"
                    android:layout_weight="0.35">

                    <AutoCompleteTextView
                        android:id="@+id/edt_charge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:gravity="center|left"
                        android:textColor="#111"
                        android:textSize="12sp"
                        android:paddingLeft="10sp"
                        android:drawableRight="@drawable/tbuds_ic_expand"/>

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingLeft="0dp"
                        android:hint="Calculation Method"
                        android:textSize="12sp"
                        android:layout_weight="0.35">

                        <AutoCompleteTextView
                            android:id="@+id/edt_calc_method"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|left"
                            android:gravity="center|left"
                            android:textColor="#111"
                            android:textSize="12sp"
                            android:paddingLeft="10sp"
                            android:drawableRight="@drawable/tbuds_ic_expand"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/laypctg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingLeft="0dp"
                        android:hint="Percentage / Rate"
                        android:textSize="12sp"
                        android:layout_weight="0.35"
                        android:paddingRight="10dp"
                        android:layout_marginTop="7dp">

                        <EditText
                            android:id="@+id/edt_percntg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#111"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical|right"
                            android:gravity="center|right"
                            android:inputType="numberDecimal"
                            android:paddingLeft="10sp"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layqty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="0dp"
                    android:textSize="12sp"
                    android:layout_weight="0.35"
                    android:background="#ededed">

                    <EditText
                        android:id="@+id/edt_tot_qty_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:gravity="center|left"
                        android:textColor="#111"
                        android:textSize="12sp"
                        android:inputType="numberDecimal"
                        android:enabled="false"
                        android:editable="false"
                        android:focusable="false"
                        android:paddingLeft="10sp"/>
                    <!-- android:hint="Total QTY / Value"-->

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/laycharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="0dp"
                    android:hint="Charge amount"
                    android:textSize="12sp"
                    android:layout_weight="0.35"
                    android:background="#ededed">

                    <EditText
                        android:id="@+id/edt_charge_amt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:gravity="center|left"
                        android:textColor="#111"
                        android:textSize="12sp"
                        android:editable="true"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10sp"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingLeft="0dp"
                android:hint="Tax Class Code"
                android:textSize="12sp"
                android:layout_weight="0.35">

                <AutoCompleteTextView
                    android:id="@+id/edt_taxclass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center|left"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:paddingLeft="10sp"
                    android:editable="false"
                    android:focusable="false"
                    android:drawableRight="@drawable/places_ic_search"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ededed">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="0dp"
                    android:hint="Tax amount"
                    android:textSize="12sp"
                    android:layout_weight="0.35">

                    <EditText
                        android:id="@+id/edt_taxamt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:gravity="center|left"
                        android:textColor="#111"
                        android:textSize="12sp"
                        android:enabled="false"
                        android:editable="false"
                        android:focusable="false"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10sp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="0dp"
                    android:hint="Total amount"
                    android:textSize="12sp"
                    android:layout_weight="0.35">

                    <EditText
                        android:id="@+id/edt_totamt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:gravity="center|left"
                        android:textColor="#111"
                        android:textSize="12sp"
                        android:inputType="numberDecimal"
                        android:enabled="false"
                        android:editable="false"
                        android:focusable="false"
                        android:paddingLeft="10sp"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!--buttons-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <Button
                    android:id="@+id/btnadd"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Add Charge"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/tbuds_btn_pressed_2"
                    android:layout_weight="0.5"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Cancel"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/tbuds_btn_pressed_2_orange"
                    android:layout_weight="0.5"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ListView
        android:id="@+id/listcharges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:divider="@null"></ListView>

</LinearLayout>
