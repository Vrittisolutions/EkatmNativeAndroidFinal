<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:elevation="2dp"
        app:cardBackgroundColor="@color/header"
        android:layout_marginRight="1dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/laycall_type"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_orange"
                    android:orientation="vertical"
                    android:paddingLeft="1dp"
                    android:layout_marginBottom="@dimen/sp_5"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingRight="1dp">

                    <TextView
                        android:id="@+id/txt_approve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/black"
                        android:gravity="center"
                        android:maxLines="2"
                        android:paddingBottom="2dp"
                        android:layout_margin="2dp"
                        android:text="17 Sep 2020"
                        android:textColor="#fff"
                        android:textSize="14dp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/laycall_type"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:paddingLeft="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_custname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Vritti Solutions Limited"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:background="@drawable/button_blue_border"
                        android:text="" />
                        <TextView
                            android:id="@+id/txt_amount"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:background="@drawable/button_green"
                            android:textStyle="bold"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>


                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
               >

                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLength="30"
                        android:layout_weight="0.2"
                        android:text="Poonam shrivastavfbdjsfbjfbdjbdsjhbdsfjsdfnh"
                        android:textColor="@color/blue"
                        android:textSize="15sp"
                        />
