<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp"

            android:layout_weight="0.8"
            android:textColor="#ed5e3b"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!--  <include layout="@layout/custom_checkout_item_list" />-->
    <LinearLayout
        android:id="@+id/linearlayout_checkout_row_container"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#e4e4e4"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/textview_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center|right"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:text="Total Amount"
            android:textColor="#ed5e3b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:gravity="right"
            android:textColor="#ed5e3b"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemcheckoutfreelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFEB3B"
        android:orientation="horizontal"
        android:padding="2dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textview_checkout_free_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"

            android:textColor="#222"
            android:textSize="14sp"

            />
    </LinearLayout>

</LinearLayout>
