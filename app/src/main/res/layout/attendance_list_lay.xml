<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar_header"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/len"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="left|center"
            android:visibility="visible"
            android:padding="@dimen/sp_5"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:padding="5dp"
                android:background="@drawable/business_edit_text"
                android:orientation="horizontal"
                android:focusableInTouchMode="true"
                >

                <TextView
                    android:id="@+id/txt_fromdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text=""
                    android:layout_marginRight="10dp"
                    android:focusable="false"
                    android:textColor="@color/black"
                    android:imeOptions="actionNext"
                    android:padding="5dp" />
                <ImageView
                    android:id="@+id/img_from_date"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/date"
                    android:tint="@color/colorPrimary"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:padding="5dp"
                android:background="@drawable/business_edit_text"
                android:orientation="horizontal"
                android:focusableInTouchMode="true"
                >

                <TextView
                    android:id="@+id/txt_todate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:focusable="false"
                    android:imeOptions="actionNext"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp" />
                <ImageView
                    android:id="@+id/img_to_date"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/date"
                    android:tint="@color/colorPrimary"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_green"
                android:padding="8dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />


        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/report_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/len"
            android:background="@color/card_back"
            />
        <ProgressBar
            android:id="@+id/progressbar_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="No record found"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textSize="16dp"
        android:visibility="gone"
        android:layout_centerInParent="true"

        />


</RelativeLayout>