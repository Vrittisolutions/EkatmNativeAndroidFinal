<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtsrno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SrNo"
                android:textColor="#111"
                android:textSize="12sp"
                android:layout_weight="0.85"
                android:layout_gravity="left"
                android:gravity="left"/>

            <TextView
                android:id="@+id/txtchargedesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Charge Desc"
                android:textColor="#111"
                android:textSize="12sp"
                android:layout_weight="0.15"
                android:layout_gravity="left"
                android:gravity="left"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#111"
                android:layout_marginLeft="5dp"/>-->

            <TextView
                android:id="@+id/txtcalc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calc method"
                android:textColor="#111"
                android:textSize="12sp"
                android:layout_weight="0.5"
                android:layout_gravity="left"
                android:gravity="left"/>

           <!-- <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#111"
                android:layout_marginLeft="5dp"/>-->

            <TextView
                android:id="@+id/txtqty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:textColor="#111"
                android:textSize="12sp"
                android:layout_weight="0.6"
                android:layout_gravity="right"
                android:gravity="right"/>

            <!--<View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#111"
                android:layout_marginLeft="5dp"/>-->

            <TextView
                android:id="@+id/txtrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:textColor="#111"
                android:textSize="12sp"
                android:layout_weight="0.58"
                android:layout_gravity="right"
                android:gravity="right"/>

            <!--<View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#111"
                android:layout_marginLeft="5dp"/>-->

            <TextView
                android:id="@+id/txtamt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Charge Amt"
                android:textColor="#111"
                android:textSize="12sp"
                android:layout_weight="0.53"
                android:layout_gravity="right"
                android:gravity="right"/>

            <TextView
                android:id="@+id/txttaxamt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tax Amt"
                android:textColor="#111"
                android:textSize="12sp"
                android:layout_weight="0.55"
                android:layout_gravity="right"
                android:gravity="right"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>