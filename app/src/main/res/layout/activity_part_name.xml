<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.inventory.physicalInventory.activity.PartNameActivity">
    <!--by chetana-->

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title"
            android:visibility="visible">
            <!-- android:layout_height="?android:attr/actionBarSize"-->

            <ProgressBar
                android:id="@+id/toolbar_progress_App_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/backgroundHeader"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Part Name List"
                android:textColor="#fff"
                android:textSize="16dp"
                android:layout_weight="0.4"/>

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <RadioGroup
        android:id="@+id/rdgrpsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_gravity="center_vertical|top"
        android:layout_margin="5dp">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rdbtnsearch_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search starts with..."
            android:buttonTint="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_weight="0.5"/>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rdbtnsearch_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search random..."
            android:buttonTint="@color/colorPrimary"
            android:textSize="11sp"
            android:layout_weight="0.5"/>

    </RadioGroup>

    <EditText
        android:id="@+id/edtsearchcode"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="Search here"
        android:padding="5dp"
        android:textSize="14sp"
        android:background="@drawable/border"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/places_ic_search"/>

    <ListView
        android:id="@+id/listpartname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:divider="#dcdcdc"/>

</LinearLayout>
