<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/card_back"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:gpb="http://schemas.android.com/apk/res-auto"
    tools:context="com.vritti.crm.vcrm7.TravelPlanShowFormActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title" >
            <LinearLayout
                android:id="@+id/len_expe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:padding="2dp"
                    android:src="@drawable/crm_back_arrow"
                    android:tint="@color/white"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/black"
                    android:textSize="16dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:visibility="visible"></TextView>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:src="@drawable/search"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:id="@+id/button_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:padding="2dp"
                    android:src="@drawable/icon_plus"
                    android:tint="@color/white"
                    android:visibility="visible"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
       >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="1dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardMaxElevation="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/chkdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_gravity="center" />
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:layout_weight="1"
                        android:layout_marginLeft="12dp"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:drawableLeft="@drawable/date"
                        android:drawableTint="@color/colorPrimary"
                        android:padding="1dp"
                        android:drawablePadding="8dp"
                        />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="40dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/txtfromdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="From"
                                android:textSize="14dp"
                                android:layout_marginLeft="@dimen/sp_5"
                                android:padding="1dp"
                                />

                            <TextView
                                android:id="@+id/editTextfrom"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:enabled="false"
                                android:hint="From"
                                android:padding="5dp"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/long_arrow"
                            android:padding="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            >

                            <TextView
                                android:id="@+id/txtto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="To"
                                android:textSize="14dp"
                                android:layout_marginLeft="4dp"
                                android:padding="1dp"
                                />
                            <TextView
                                android:id="@+id/editTextto"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:hint="To"
                                android:padding="5dp"
                                android:textSize="16dp"
                                android:enabled="false"
                                android:clickable="false"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/stroke"/>

                    <EditText
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:layout_marginLeft="10dp"
                        android:editable="false"
                        android:visibility="gone"
                        android:focusable="false"
                        android:hint="From"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:imeOptions="actionNext"
                        android:textColor="@color/black" />
                    <EditText
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.4"
                        android:editable="false"
                        android:hint="To"
                        android:visibility="gone"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:imeOptions="actionNext"/>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="1dp"
                        android:text="Executive"
                        android:layout_marginLeft="2dp"
                        android:textColor="#000"
                        android:textSize="14dp" />

                    <AutoCompleteTextView
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:hint="Enter Executive Name"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:textSize="16dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:textColor="@color/black" />


                </LinearLayout>

                        <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chkExecutive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:visibility="gone"
                        android:clickable="false" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/AutocompExecutive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Executive Name "
                        android:textSize="14dp"
                        android:drawableLeft="@drawable/travel_name"
                        android:padding="13dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:editable="false"
                        android:focusable="false"
                        android:backgroundTint="@color/stroke"
                        android:drawablePadding="8dp">
                        <requestFocus></requestFocus>

                    </AutoCompleteTextView>

                    <TextView
                        android:id="@+id/btnshow"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Show"
                        android:padding="@dimen/sp_5"
                        android:layout_gravity="center|right"
                        android:gravity="center"
                        android:background="@drawable/button_green"
                        android:textSize="13dp"
                        android:layout_marginRight="@dimen/sp_5"
                        android:layout_marginBottom="@dimen/sp_5"
                        android:textColor="@color/white"
                        />

                </android.support.design.widget.TextInputLayout>

                        </LinearLayout>
                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visit another person's Travel plan"
                    android:clickable="true"
                    android:textColor="@color/stroke"
                    android:padding="1dp"
                    android:visibility="gone"
                    android:drawablePadding="8dp"
                    android:layout_marginLeft="9dp"
                    android:textSize="14dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/stroke"/>

                <AutoCompleteTextView
                    android:id="@+id/Autocompelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Name "
                    android:textSize="14dp"
                    android:drawableLeft="@drawable/travel_name"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:backgroundTint="@color/stroke"
                    android:drawablePadding="8dp">
                </AutoCompleteTextView>








            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width ="match_parent"
            android:layout_height ="match_parent"
            android:layout_gravity ="center"
            android:gravity ="center"
            android:visibility="gone"
            android:orientation ="horizontal">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                >

                <Button
                    android:layout_width = "wrap_content"
                    android:layout_height = "40dp"
                    android:background = "@drawable/button_green"
                    android:gravity = "center"
                    android:layout_weight = "1"
                    android:text ="Show"
                    android:textSize = "13sp"
                    android:textAllCaps="false"
                    android:textColor = "@color/white"/>

                <Button
                    android:id="@+id/btncancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Cancel"
                    android:layout_marginLeft="5dp"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_orange"
                    android:textColor="@color/white" />
            </TableRow>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressbar_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />

    </LinearLayout>

</LinearLayout>