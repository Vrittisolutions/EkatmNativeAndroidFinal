<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tbar"
        layout="@layout/tbuds_common_toolbar"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="10"
        android:layout_below="@+id/tbar">

        <!-- android:background="@color/wallet_hint_foreground_holo_dark"-->


        <TextView
            android:id="@+id/textview_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:text="Products"
            android:textColor="@color/btncolordark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@string/ButtonFont"
            android:layout_weight="5.5"/>
        <!-- android:layout_weight="0.7"-->

        <TextView
            android:id="@+id/textview_Qty"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1.5"
            android:text="Qty"
            android:textStyle="bold"
            android:textColor="@color/btncolordark"
            android:textSize="14sp"
            android:fontFamily="@string/ButtonFont" />


        <!-- <TextView
             android:id="@+id/textview_offer"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_gravity="center"
             android:gravity="right"

             android:text="Offer"
             android:textColor="#222"
             android:textSize="14sp" />-->

        <TextView
            android:id="@+id/textview_Subtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:text="Amount"
            android:textStyle="bold"
            android:fontFamily="@string/ButtonFont"
            android:textColor="@color/btncolordark"
            android:textSize="14sp"
            android:gravity="center_vertical|center_horizontal" />

        <!-- <ImageView
             android:id="@+id/img"
             android:layout_width="30dp"
             android:layout_height="30dp" />-->
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview_cart_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/title"
        android:layout_above="@+id/linearlayout_cart_bottom_layout"
        android:scrollbars="none">

        <!-- <ListView
             android:id="@+id/listDisplay"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

         </ListView>-->

        <LinearLayout
            android:id="@+id/linearlayout_cart_container"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp">
                <!--android:layout_marginLeft="8dp"-->

            </ListView>

        </LinearLayout>

        <!-- <include layout="@layout/custom_cart_row" />-->
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearlayout_cart_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="fill_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary1"
            android:gravity="fill_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textview_cart_total_amount_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left"
                android:text="Amount Payable"
                android:textColor="#ffffff"
                android:textSize="17dp"
                android:fontFamily="@string/ButtonFont" />

            <TextView
                android:id="@+id/textview_cart_total_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="Rs.0.00"
                android:textColor="#ffffff"
                android:textSize="17dp"
                android:fontFamily="@string/ButtonFont" />
        </LinearLayout>

        <Button
            android:id="@+id/button_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_pressed_2"
            android:text="Proceed to Checkout"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:fontFamily="@string/ButtonFont"
            android:layout_marginBottom="0dp"
            />
    </LinearLayout>

</RelativeLayout>