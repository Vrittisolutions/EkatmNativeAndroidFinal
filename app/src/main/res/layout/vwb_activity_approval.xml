<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title" >

            <ProgressBar
                android:id="@+id/toolbar_progress_App_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/appbar"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/asd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appbar"
                android:layout_gravity="left"
                android:background="#6E6F72"
                android:padding="2dp"
                android:text="data"
                android:textColor="#fff"
                android:textSize="16dp" />

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"


                >

                <LinearLayout
                    android:id="@+id/lindis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>


        </LinearLayout>

        <Spinner
            android:id="@+id/sp_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

        </Spinner>
        <ScrollView
            android:id="@+id/scroll_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:visibility="gone"
            android:background="@color/white"



            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/txt_gpsdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="GPS Details"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@color/dark_grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/header"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/txt_gps_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Time From"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Time   To"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="GPS Location"
                        android:textColor="@color/black"
                        android:textSize="16dp"


                        />
                </LinearLayout>

                <LinearLayout
                android:id="@+id/len_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"></LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
           >
            <WebView
                android:id="@+id/web_pdf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                >

            </WebView>

            <TextView
                android:id="@+id/txt_nofound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please define method in document approval"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
    <LinearLayout

        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edApproveRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="Remark"
            android:paddingLeft="4dp"
            android:text=""

            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnApprove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/backshape_blue"
                android:gravity="center"
                android:text="Approve"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="14dp" />


            <Button
                android:id="@+id/btnDisApprove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/backshape_blue"
                android:gravity="center"
                android:text="Disapprove"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btnChangeApprover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/backshapegreen"
                android:gravity="center"
                android:text="Change Approver"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btncancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/backshape_orange"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
