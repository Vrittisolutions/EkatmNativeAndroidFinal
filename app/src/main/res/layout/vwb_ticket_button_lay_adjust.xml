<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/len_linheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#707070"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/txt_tcknane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight=".4"
                android:maxLines="5"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/txt_affect_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight=".6"
                android:background="@drawable/edit_text"
                android:gravity="center"
                android:padding="5dp"
                android:text="Affected Customer"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:id="@+id/tck_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight=".4"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tck_mob_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/len_linheader"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/backshape_blue"
            android:text="Solution"
            android:textAllCaps="false"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:background="#38BEE7"
            android:text="Details"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/backshape_blue"
            android:text="Material"
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/len_ticket"
        android:layout_below="@+id/frame"
        android:layout_marginBottom="3dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/len_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/header"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/backshape_blue"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btncancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:background="#ffffff"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>