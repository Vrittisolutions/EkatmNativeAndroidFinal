<?xml version="1.0" encoding="UTF-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    card_view:cardElevation="0.5dp"
    android:padding="5dp"
    card_view:cardUseCompatPadding="true"
    android:orientation="vertical"
    android:background="#ededed"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <View
            android:id="@+id/view"
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp"
            android:paddingLeft="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtinvoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:text="InvoiceNo"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:text="Date"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/txtpaymode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#111"
                    android:layout_weight="1"
                    android:text="PayMode"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtcustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#111"
                    android:layout_weight="0.4"
                    android:text="Customer"
                    android:paddingLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtorg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="0.65"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtdisc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="0.65"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="5dp"
                    android:text="0"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtbal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/red"
                    android:layout_weight="0.65"
                    android:text="0"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:id="@+id/txtamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/green"
                    android:layout_weight="0.65"
                    android:text="0"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>