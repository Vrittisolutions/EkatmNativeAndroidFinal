<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.sales.activity.SalesItemActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:visibility="visible"
        android:background="@color/colorPrimary1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:popupTheme="@style/AppTheme"
            app:titleTextAppearance="@style/yourstyle">

            <ProgressBar
                android:id="@+id/toolbar_progress_Assgnwork"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgbtnadd"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/tbuds_add_cb"
                android:layout_gravity="center|right"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/btnmode"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Mode"
                android:gravity="center|left"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center|left" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnadd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Add Item"
            android:background="#dcdcdc"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:visibility="gone"></Button>

        <!--options-->
        <LinearLayout
            android:id="@+id/layoutoptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btndirect"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:text="Direct Item"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:background="@drawable/btn_pressed_2"
                android:layout_weight="0.48"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="5dp"/>

            <Button
                android:id="@+id/btnpricelist"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:text="Price List"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:background="@drawable/btn_pressed_2"
                android:layout_weight="0.5"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/btnsalesfamily"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:text="Sales Family"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:background="@drawable/btn_pressed_2"
                android:layout_weight="0.48"
                android:layout_margin="3dp" />

            <Button
                android:id="@+id/btnquotation"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:text="Quotation"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:background="@drawable/btn_pressed_2"
                android:layout_weight="0.5"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/btncontract"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:text="Contract"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:background="@drawable/btn_pressed_2"
                android:layout_weight="0.5"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="3dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="#dcdcdc">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textColor="#111"
                android:textSize="12sp"
                android:layout_weight="0.5"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

               <!-- <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Desc"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:layout_weight="0.5"/>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qty"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:layout_weight="0.53"
                    android:layout_gravity="right"
                    android:gravity="right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="UOM"
                    android:textColor="#111"
                    android:textSize="10sp"
                    android:paddingTop="2dp"
                    android:layout_weight="0.52"
                    android:layout_gravity="right"
                    android:gravity="right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:layout_weight="0.52"
                    android:layout_gravity="right"
                    android:gravity="right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amt"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:layout_weight="0.5"
                    android:layout_gravity="right"
                    android:gravity="right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disc."
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:layout_weight="0.51"
                    android:layout_gravity="right"
                    android:gravity="right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tax Amt"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:layout_weight="0.51"
                    android:layout_gravity="right"
                    android:gravity="right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Final Amt"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:layout_weight="0.49"
                    android:layout_gravity="right"
                    android:gravity="right"/>

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/listitems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1dp"
            android:divider="#dcdcdc"
            android:layout_weight="1"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="#d2e6ba">

                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item Desc"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:layout_weight="0.5"/>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qty"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:layout_weight="0.53"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:visibility="invisible"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#111"
                    android:layout_marginLeft="5dp"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="UOM"
                    android:textColor="#111"
                    android:textSize="10sp"
                    android:paddingTop="2dp"
                    android:layout_weight="0.52"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:visibility="invisible"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#111"
                    android:layout_marginLeft="5dp"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:layout_weight="0.52"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:visibility="invisible"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#111"
                    android:layout_marginLeft="5dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/txtamt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:background="@drawable/border_black"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingRight="3dp"
                    android:layout_marginLeft="5dp"/>

                <!--<View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#111"
                    android:layout_marginLeft="5dp"/>-->

                <TextView
                    android:id="@+id/txtdiscamt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:background="@drawable/border_black"
                    android:textStyle="bold"
                    android:layout_weight="0.51"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingRight="3dp"
                    android:layout_marginLeft="5dp"/>

              <!--  <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#111"
                    android:layout_marginLeft="5dp"/>-->

                <TextView
                    android:id="@+id/txttaxamt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#111"
                    android:background="@drawable/border_black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_weight="0.51"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingRight="3dp"
                    android:layout_marginLeft="5dp"/>

               <!-- <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#111"
                    android:layout_marginLeft="5dp"/>-->

                <TextView
                    android:id="@+id/txtfinalamt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#111"
                    android:textSize="12sp"
                    android:background="@drawable/border_black"
                    android:textStyle="bold"
                    android:layout_weight="0.49"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingRight="3dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="visible"
            android:background="@drawable/tbuds_btn_pressed"/>

    </LinearLayout>

</LinearLayout>
