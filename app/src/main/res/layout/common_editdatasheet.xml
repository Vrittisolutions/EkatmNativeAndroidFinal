<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/qwe"
        layout="@layout/vwb_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/len_edit"
        android:layout_below="@+id/qwe">



        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#707070"
            android:text="Edit datasheet"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="10dp"/>

        <LinearLayout
            android:id="@+id/ln_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txt_title"
            android:visibility="visible">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/lstquestions_editdatasheet"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:divider="#B6B6B4"
                android:dividerHeight="1dp">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true" />



    </RelativeLayout>



    <LinearLayout
        android:id="@+id/len_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="3dp">




        <Button
            android:id="@+id/btn_SaveDraft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="#23b7e5"
            android:text="Save Draft"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="visible"
            />


        <Button
            android:id="@+id/btn_Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.27"
            android:background="#27C24C"
            android:gravity="center"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.3"
            android:background="#F05050"
            android:gravity="center"
            android:text="Return"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="true"

            />
        <Button
            android:id="@+id/btn_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="#23b7e5"
            android:text="Save Remarks"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone"
            />




    </LinearLayout>
    <TextView
        android:id="@+id/txt_used"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:layout_centerInParent="true"
        android:text="This datasheet can be filled only from portal "
        android:visibility="gone"
        android:gravity="center"/>


</RelativeLayout>