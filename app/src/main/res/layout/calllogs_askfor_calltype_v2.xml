<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar_header"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_back"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_viewdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            android:layout_marginTop="2dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardMaxElevation="1dp">

            <LinearLayout
                android:id="@+id/ln_main"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button_background">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_nextaction"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/incomingcall"
                            />

                        <TextView
                            android:id="@+id/txt_calltypename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not Linked"
                            android:visibility="gone"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"/>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="50dp"
                    android:background="@color/stroke"
                    android:layout_gravity="center_vertical" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:id="@+id/txt_type_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mobile No or Name"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:padding="1dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt_durationdetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8-Jun at 9.30 for 2m 13s"
                            android:gravity="center_vertical"
                            android:drawablePadding="5dp"
                            android:textSize="12sp"
                            android:padding="1dp"
                            android:textColor="#696969"/>


                        <TextView
                            android:id="@+id/txt_customerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Customer Name"
                            android:textSize="14sp"
                            android:padding="1dp"
                            android:visibility="gone"
                            android:textColor="#696969"/>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ln_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_first"
                    android:padding="0.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_starttime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Start Time"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_endtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="End Time"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/txt_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Duration"
                        android:textColor="@color/black"
                        android:textSize="14sp" />



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ln_secondrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_time"
                    android:padding="0.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_Calltype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ln_time"
                        android:text="Call Type"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_backgroung"
            android:textColor="@color/white"
            android:text="Opportunity "
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/ToolbarStyle"
            android:textSize="16dp"
            android:padding="5dp"
            />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            android:visibility="gone"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardPreventCornerOverlap="false"
            card_view:cardMaxElevation="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lencall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_background"
                        android:layout_margin="1dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_gravity="left|center"
                            android:gravity="center|left"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/callrating"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="4dp"
                                android:src="@drawable/square"
                                />

                            <TextView
                                android:id="@+id/firmname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Superfine Extrusions Private Limited, Banglore"
                                android:layout_marginLeft="5dp"
                                android:padding="3dp"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="left|center"
                            android:layout_marginLeft="@dimen/sp_5"
                            android:layout_gravity="center|left"
                            >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/call_24"
                                android:tint="@color/colorPrimary"
                                />

                            <TextView
                                android:id="@+id/actiondatetime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/sp_5"
                                android:maxLines="2"
                                android:text="Tue 17 Sep, 06:11 PM "
                                android:textSize="14dp"
                                android:textStyle="bold"
                                />

                            <TextView
                                android:id="@+id/milestone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:text="Milestone"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/stroke"/>

                        <TextView
                            android:id="@+id/tvcall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_latestremark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Latest remark will come here"
                            android:textColor="#000000"
                            android:textSize="12dp" />

                        <TextView
                            android:text="Change to detail view"
                            android:id="@+id/btn_change_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/sp_5"
                            android:padding="5dp"
                            android:gravity="center"
                            android:background="@color/colorPrimary"/>

                    </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            android:layout_marginTop="2dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardMaxElevation="1dp">
        <TextView
            android:id="@+id/txt_add_existing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:drawableTint="@color/black"
            android:text="Add to Existing Opportunity"
            android:drawablePadding="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/ToolbarStyle"
            android:textSize="14dp"
            android:padding="5dp"
            />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardMaxElevation="1dp">
        <TextView
            android:id="@+id/txt_create_opp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Create Opportunity "
            android:drawableTint="@color/black"
            android:drawablePadding="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/ToolbarStyle"
            android:textSize="14dp"
            android:padding="5dp"
            />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title"
            android:textColor="@color/white"
            android:text="Collection "
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/ToolbarStyle"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="16dp"
            android:padding="5dp"
            />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            android:layout_marginTop="2dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardMaxElevation="1dp">
        <TextView
            android:id="@+id/txt_add_collection_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:drawableTint="@color/black"
            android:text="Add to collection call"
            android:drawablePadding="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/ToolbarStyle"
            android:textSize="14dp"
            android:padding="5dp"
            />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            android:visibility="gone"
            app:cardPreventCornerOverlap="false"
            card_view:cardMaxElevation="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:layout_margin="1dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="left|center"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="4dp"
                            android:src="@drawable/square"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Superfine Extrusions Private Limited, Banglore"
                            android:layout_marginLeft="5dp"
                            android:padding="3dp"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left|center"
                        android:layout_marginLeft="@dimen/sp_5"
                        android:layout_gravity="center|left"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call_24"
                            android:tint="@color/colorPrimary"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/sp_5"
                            android:maxLines="2"
                            android:text="Tue 17 Sep, 06:11 PM "
                            android:textSize="14dp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:text="Milestone"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="1dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/stroke"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Latest remark will come here"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:text="Change to detail view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/sp_5"
                        android:padding="5dp"
                        android:gravity="center"
                        android:background="@color/colorPrimary"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_backgroung"
            android:textColor="@color/white"
            android:text="Ticket"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/ToolbarStyle"
            android:textSize="16dp"
            android:padding="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />
        <TextView
            android:id="@+id/btn_opporunity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white"
            android:textColor="@color/black"
            android:drawableTint="@color/black"
            android:drawablePadding="5dp"
            android:text="Opportunity"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/ToolbarStyle"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="14dp"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/btn_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white"
            android:textColor="@color/black"
            android:drawableTint="@color/black"
            android:drawablePadding="5dp"
            android:text="Collection"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/ToolbarStyle"
            android:textSize="14dp"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            android:layout_marginTop="2dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardMaxElevation="1dp">
        <TextView
            android:id="@+id/txt_collegue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:drawableTint="@color/black"
            android:drawablePadding="5dp"
            android:text="Colleague"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/ToolbarStyle"
            android:textSize="14dp"
            android:padding="5dp"
            />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardMaxElevation="1dp">
        <TextView
            android:id="@+id/txt_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:drawableTint="@color/black"
            android:drawablePadding="5dp"
            android:text="Personal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/ToolbarStyle"
            android:textSize="14dp"
            android:padding="5dp"
            />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="1dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardMaxElevation="1dp">
        <TextView
            android:id="@+id/txt_spam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:drawableTint="@color/black"
            android:drawablePadding="5dp"
            android:text="Spam"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            style="@style/ToolbarStyle"
            android:textSize="14dp"
            android:padding="5dp"
            />
        </android.support.v7.widget.CardView>





    </LinearLayout>


</ScrollView>
</LinearLayout>