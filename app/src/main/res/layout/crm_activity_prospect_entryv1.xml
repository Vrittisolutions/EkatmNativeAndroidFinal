<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_header"
        />
    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sp_5"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay1"
            android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginBottom="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="Name and Address"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                style="@style/ToolbarStyle"
                android:textSize="16dp"
                android:padding="10dp"
                />

            <android.support.v7.widget.CardView
                android:id="@+id/card_viewdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardMaxElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/atxt_firmname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/office"
                        android:drawablePadding="8dp"
                        android:hint="Firm Name"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:textColor="#111"
                        android:textColorHint="@color/black"
                        android:textSize="14dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/edt_firmalise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/customer"
                        android:drawableTint="@color/colorPrimary"
                        android:drawablePadding="8dp"
                        android:hint="Firm Alias"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:textColor="#111"
                        android:textColorHint="@color/black"
                        android:textSize="14dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_entity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:buttonTint="@color/colorPrimary"
                    android:gravity="center|left"
                    android:layout_marginLeft="8dp"
                    android:checked="false"
                    android:text="Link Entity"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="normal" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Entity">

                    <AutoCompleteTextView
                        android:id="@+id/sEntity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="#111"
                        android:focusable="false"
                        android:editable="false"
                        android:clickable="true"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:drawablePadding="8dp"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/edt_Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:drawableLeft="@drawable/visit24"
                        android:drawablePadding="8dp"
                        android:hint="Full Address"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:textColor="#111"
                        android:textColorHint="@color/black"
                        android:textSize="14dp" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal">

                    <!--country-->
                    <LinearLayout
                        android:id="@+id/ln_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tv_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <AutoCompleteTextView
                                android:id="@+id/spinner_country"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Country"
                                android:drawableLeft="@drawable/country"
                                android:drawableTint="@color/colorPrimary"
                                android:drawablePadding="5dp"
                                android:imeOptions="actionNext"
                                android:singleLine="false"
                                android:textColor="#111"
                                android:textColorHint="@color/hint"
                                android:textSize="14dp"
                                android:clickable="true"
                                android:editable="false"
                                android:focusable="false"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <!--state-->
                    <LinearLayout
                        android:id="@+id/ln_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tv_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <AutoCompleteTextView
                                android:id="@+id/spinner_state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:spinnerMode="dialog"
                                android:hint="State"
                                android:drawableLeft="@drawable/state"
                                android:drawableTint="@color/colorPrimary"
                                android:textColor="#111"
                                android:singleLine="false"
                                android:textSize="14dp"
                                android:clickable="true"
                                android:editable="false"
                                android:focusable="false"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--city terriotory-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal">

                    <!--city-->
                    <LinearLayout
                        android:id="@+id/ln_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tv_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <AutoCompleteTextView
                                android:id="@+id/spinner_City"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:singleLine="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="14dp"
                                android:drawableLeft="@drawable/ic_baseline_location_city_24"
                                android:drawablePadding="8dp"
                                android:hint="City"
                                android:clickable="true"
                                android:editable="false"
                                android:focusable="false"/>

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <!--territory-->
                    <LinearLayout
                        android:id="@+id/ln_territory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tv_territory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <AutoCompleteTextView
                                android:id="@+id/spinner_territory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Territory"
                                android:imeOptions="actionNext"
                                android:layout_gravity="center_vertical"
                                android:singleLine="true"
                                android:drawableTint="@color/colorPrimary"
                                android:drawableLeft="@drawable/country"
                                android:drawablePadding="5dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hint"
                                android:textSize="12dp"
                                android:clickable="true"
                                android:editable="false"
                                android:focusable="false"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_GSTN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                        android:hint="GSTN"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="15"
                        android:drawablePadding="5dp"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/gstn"
                        android:drawableTint="@color/colorPrimary"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#111"
                        android:textColorHint="@color/hint"
                        android:textSize="14dp"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_TANNO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TAN No."
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                        android:imeOptions="actionNext"
                        android:drawableLeft="@drawable/gstn"
                        android:drawableTint="@color/colorPrimary"
                        android:singleLine="true"
                        android:drawablePadding="5dp"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="#111"
                        android:textColorHint="@color/hint"
                        android:textSize="14dp"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tv_businessSegment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/spinner_BusinessSegment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Business Segment"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:drawablePadding="5dp"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/office"
                        android:textColor="#111"
                        android:textColorHint="@color/hint"
                        android:textSize="14dp"
                        android:clickable="true"
                        android:editable="false"
                        android:focusable="false"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Website"
                        android:singleLine="true"
                        android:text=""
                        android:drawableLeft="@drawable/website"
                        android:drawableTint="@color/colorPrimary"
                        android:padding="10dp"
                        android:drawablePadding="5dp"
                        android:textColor="#111"
                        android:textSize="14dp"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tv_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/spinner_source"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:hint="Source"
                        android:drawableLeft="@drawable/call_24"
                        android:drawableTint="@color/colorPrimary"
                        android:textColor="#111"
                        android:textColorHint="@color/hint"
                        android:textSize="14dp"
                        android:clickable="true"
                        android:editable="false"
                        android:focusable="false"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:hint="Notes"
                        android:drawableTint="@color/colorPrimary"
                        android:padding="10dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/notes"
                        android:inputType="textMultiLine"
                        android:text=""
                        android:textColor="#111"
                        android:textSize="13sp" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/sp_10"
                android:orientation="horizontal">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">


                    <Button
                        android:id="@+id/buttonSave_prospect"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="13dp"
                        android:background="@drawable/button_orange"
                        android:text="Save Prospect"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:visibility="gone"/>


                    <Button
                        android:id="@+id/buttonSaveandstartcall_prospect"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:textSize="13dp"
                        android:background="@drawable/button_green"
                        android:text="Start Opportunity"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/buttonNext_prospect"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="13dp"
                        android:background="@drawable/button_orange"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:textAllCaps="false" />
                </TableRow>
            </LinearLayout>
        </LinearLayout>



        </ScrollView>
    </LinearLayout>



</LinearLayout>
