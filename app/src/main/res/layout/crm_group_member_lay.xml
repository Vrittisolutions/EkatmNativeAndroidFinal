<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



<RelativeLayout
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/appbar"
    android:background="@color/header">


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:fitsSystemWindows="true"
        android:scaleType="center"
        android:src="@drawable/crmlogowhite"
        />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:text=""
        android:gravity="bottom"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/image"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"/>

</RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rel"
            >

                <TextView
                    android:id="@+id/txt_participants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text=""
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/green"
                    />
                <LinearLayout
                    android:id="@+id/len"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:layout_below="@+id/txt_participants">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_add_user"
                        android:layout_marginLeft="20dp"

                        />
                    <TextView
                        android:id="@+id/txt_add_participant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="#333333"
                        android:textSize="18dp"
                        android:text="Add Participant..."
                        android:layout_marginLeft="10dp"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:id="@+id/view"
                    android:layout_below="@+id/len"
                    />
                <ListView
                    android:id="@+id/list_group_member"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@android:color/transparent"
                    android:layout_below="@+id/view">
                </ListView>

        </RelativeLayout>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="16dp"
              android:text="Exit Chat Room"
              android:background="@color/white"
              android:textColor="@color/red"
              android:gravity="center"
              android:layout_alignParentBottom="true"
              android:padding="10dp"
              android:visibility="gone"
              android:id="@+id/txt_exit_chatroom" />


</RelativeLayout>
