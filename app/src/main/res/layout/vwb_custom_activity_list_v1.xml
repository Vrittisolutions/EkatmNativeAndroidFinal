<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/len_callslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_viewfill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="1dp"
            android:layout_margin="1dp"
            card_view:cardMaxElevation="1dp">

            <LinearLayout
                android:id="@+id/lencall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lay_ticketDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_activityCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="#F06B6B"
                        android:textSize="14dp"
                        tools:text="SPRT/1234 - " />

                    <TextView
                        android:id="@+id/tv_ConsigneeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#6382A7"
                        android:textSize="14dp"
                        tools:text="SPRT/1234" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="left|center"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tv_activityStatus"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="4dp"
                        android:src="@drawable/square"
                        />


                    <TextView
                        android:id="@+id/tv_activity_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:padding="3dp"
                        android:maxLines="2"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/sp_5"
                    android:layout_gravity="center|left"
                    >

                    <ImageView
                        android:id="@+id/tv_SorceType"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/call_24"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_endDate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sp_5"
                        android:maxLines="2"
                        android:text="Tue 17 Sep, 06:11 PM "
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:textSize="14dp"
                        android:textColor="@color/grey2c"
                        />

                    <TextView
                        android:id="@+id/tv_hoursbook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:drawableLeft="@drawable/date"
                        android:drawableTint="@color/colorPrimary"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:layout_marginLeft="20dp"
                        android:textSize="14dp"
                        android:drawablePadding="5dp"
                        android:textStyle="bold"
                        tools:text="Booked 3:30 of 4"/>
                    <TextView

                        android:id="@+id/tv_hoursreq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="1dp"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        tools:text="4" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/stroke"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_workspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    tools:text="Under Agile vwb"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_assignedBy"
                        tools:text="By Veerendra Jamadade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                       />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_endDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/tv_clientName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="12dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>





</LinearLayout>