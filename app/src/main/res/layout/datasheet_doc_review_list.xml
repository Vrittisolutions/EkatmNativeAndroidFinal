<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundGravity="center_vertical"
    android:orientation = "vertical">



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:backgroundTint="@color/listViewBg">

        <RelativeLayout
            android:id="@+id/rel_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">


        <RelativeLayout
            android:id="@+id/ln_ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rel_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/img_attachment"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="#F5207E00"
                app:srcCompat="@drawable/attachment"
                android:tint="@color/white"
                android:padding="1dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/attachment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/img_attachment"
                android:layout_marginRight="-7dp"
                android:background="@drawable/bg_circle_red"
                android:gravity="center"
                android:padding="1dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                tools:text="1" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Questions"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_toLeftOf="@id/rel_img"
                 />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln_ques"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:paddingBottom="2dp">


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verified By:"
            android:textSize="12sp"
            />

            <TextView
                android:id="@+id/txt_kendra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kendra"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginLeft="1dp"
                />

            <ImageView
                android:id="@+id/img_kendra"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"/>


             <TextView
                    android:id="@+id/txt_extension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extension"
                    android:textSize="12sp"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"/>
            <ImageView
                android:id="@+id/img_extension"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
              />

             <TextView
                    android:id="@+id/txt_taluka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taluka"
                    android:textSize="12sp"
                    android:layout_marginLeft="8dp"
                 android:textStyle="bold"/>

            <ImageView
                android:id="@+id/img_taluka"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"/>


        </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>