<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:orientation="vertical"

        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="1dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardMaxElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_background"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/lay_Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:drawableLeft="@drawable/date"
                        android:textColor="@color/black"
                        android:drawablePadding="8dp"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:layout_marginLeft="@dimen/sp_5"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:textSize="14dp"
                        />

                    <ImageView
                        android:id="@+id/spinner_action"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginRight="5dp"
                        android:padding="1dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/textViewcity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="@dimen/sp_5"
                        android:drawableLeft="@drawable/city"
                        android:drawableTint="@color/colorPrimary"
                        android:drawablePadding="8dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:text=""
                        android:layout_weight="1"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/spinneraction"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginRight="5dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_delete"
                        android:tint="@color/colorPrimary"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewnotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:drawableLeft="@drawable/notes"
                        android:textColor="@color/black"
                        android:drawablePadding="8dp"
                        android:layout_gravity="center|left"
                        android:gravity="left|center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="" />


                </LinearLayout>



            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>