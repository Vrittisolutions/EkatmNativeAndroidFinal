<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.sales.activity.SOHistoryActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:visibility="visible"
        android:background="@color/colorPrimary1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:popupTheme="@style/AppTheme"
            app:titleTextAppearance="@style/yourstyle">

            <ProgressBar
                android:id="@+id/toolbar_progress_Assgnwork"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/edtsono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Search SoNo..."
            android:paddingLeft="10sp"
            android:textSize="15sp"
            android:drawableLeft="@drawable/places_ic_search"
            android:layout_weight="0.7"/>

        <ImageView
            android:id="@+id/imgsearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search"
            android:layout_weight="0.3"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#dcdcdc">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SoNo/Customer"
            android:textSize="12sp"
            android:layout_weight="0.45"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:textSize="12sp"
            android:textColor="#111"
            android:layout_weight="0.5"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    SO Date"
            android:textSize="12sp"
            android:layout_weight="0.6"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textSize="12sp"
            android:layout_weight="0.6"
            android:layout_gravity="center|right"
            android:gravity="center|right"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listhistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#dcdcdc"
        android:dividerHeight="1dp"/>

</LinearLayout>
