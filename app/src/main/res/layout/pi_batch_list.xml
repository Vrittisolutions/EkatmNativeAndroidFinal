<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.inventory.physicalInventory.activity.BatchSelectionActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title"
            android:visibility="visible">
            <!-- android:layout_height="?android:attr/actionBarSize"-->

            <ProgressBar
                android:id="@+id/toolbar_progress_App_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />


        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/backgroundHeader"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch Selection"
                android:textColor="#fff"
                android:textSize="16dp" />

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <!--batch list UI-->
    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#dcdcdc">

            <TextView
                android:id="@+id/textselectlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Batch"
                android:padding="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_weight="0.15"/>

            <ImageView
                android:id="@+id/imgrefresh"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/refresh_final"
                android:layout_weight="0.85"
                android:layout_gravity="center_vertical"
                android:background="#111"/>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/listbatch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#dcdcdc"
                android:layout_above="@+id/btn_create_batch"
                android:dividerHeight="1dp"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_blank"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="No batch available"/>

            <Button
                android:id="@+id/btn_create_batch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/border"
                android:text="Create Batch"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </LinearLayout>

    <!--selected batch UI-->
    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You are working on "
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#111"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="#ededed">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch No"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:textColor="#111"
                android:layout_weight="0.75"/>

            <TextView
                android:id="@+id/txtbatchbo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_margin="10dp"
                android:textSize="14sp"
                android:textColor="#111"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/border"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/laycount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ededed"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Counted  :"
                    android:textSize="14sp"
                    android:textColor="#111"
                    android:layout_weight="0.6"/>

                <TextView
                    android:id="@+id/txtcounted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="#111"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/border"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Pending  :"
                    android:textSize="14sp"
                    android:textColor="#111"
                    android:layout_weight="0.6"/>

                <TextView
                    android:id="@+id/txtpending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="#111"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/border"/>

            </LinearLayout>

        </LinearLayout>

        <!--*************************************-->
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Online"
                android:padding="5dp"
                android:layout_weight="1"
                android:checked="true"
                android:textSize="14dp"
                android:buttonTint="@color/colorPrimary"
                android:textColor="@color/black"/>


            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_ofline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offline"
                android:padding="5dp"
                android:textSize="14dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:buttonTint="@color/colorPrimary" />

        </RadioGroup>

        <!--<RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_marginTop="20dp">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_counter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Counter"
                android:padding="5dp"
                android:checked="true"
                android:layout_weight="1"
                android:textSize="20dp"
                android:buttonTint="@color/colorPrimary"
                android:textColor="@color/black"/>

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_auditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auditor"
                android:padding="5dp"
                android:textSize="20dp"
                android:buttonTint="@color/colorPrimary"
                android:layout_weight="1"
                android:textColor="@color/black"/>

        </RadioGroup>-->

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            android:layout_marginTop="0dp"
            android:visibility="visible">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_immediate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Immediate"
                android:padding="5dp"
                android:checked="true"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:buttonTint="@color/colorPrimary" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_batch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch"
                android:padding="5dp"
                android:textSize="14dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorPrimary"
                android:textColor="@color/black"/>

        </RadioGroup>

        <!--*****************************************-->

        <Button
            android:id="@+id/btncontinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:background="@drawable/button_blue_border"></Button>

        <Button
            android:id="@+id/btn_sel_batch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Batch"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:alpha="1"
            android:background="@drawable/button_blue_border"
            android:visibility="visible"></Button>

        <Button
            android:id="@+id/btnrelease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Release batch"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:alpha="1"
            android:background="@drawable/button_blue_border"
            android:visibility="visible"></Button>

    </LinearLayout>

    <!--warning UI-->
    <LinearLayout
        android:id="@+id/laywarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtwarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#FF4112"
            android:text="abc"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnyes"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:text="Confirm"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_blue_border"
                android:layout_weight="0.5"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btnno"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_orange"
                android:layout_weight="0.5"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
