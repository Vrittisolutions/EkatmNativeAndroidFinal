<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    card_view:cardElevation="1dp"
    card_view:cardMaxElevation="1dp"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:paddingLeft="3dp">

            <ImageView
                android:id="@+id/click"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="2dp"
                android:visibility="gone"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/txtFName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_toRightOf="@+id/click"
                android:layout_weight="1"
                android:drawableLeft="@drawable/travel_name"
                android:textColor="@color/blue"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At : "
                android:textSize="12sp"
                android:paddingLeft="3dp"
                />

            <TextView
                android:id="@+id/txtcity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="city"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:layout_weight="0.6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For "
                    android:textSize="12sp"
                    android:paddingLeft="3dp"
                   />

                <TextView
                    android:id="@+id/txtItemdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Referred By"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginLeft="@dimen/sp_5"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|left|top"
            android:gravity="center|left|top"
            android:paddingLeft="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:textSize="12sp"
                android:paddingLeft="3dp"
               />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9 Continental park, Vritti solutions limited, Kothrud, Pune, MAharashtra"
                android:maxLines="5"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginLeft="@dimen/sp_5"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_margin="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="#ededed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name :"
                        android:textSize="12sp"
                        android:layout_weight="0.85"/>

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#000"
                        android:textSize="13sp"
                        android:layout_weight="0.12"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.6">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No. :"
                            android:textSize="12sp"
                            android:layout_weight="0.75"/>

                        <TextView
                            android:id="@+id/txtNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="123"
                            android:textColor="#000"
                            android:textSize="13sp"
                            android:inputType="number"
                            android:layout_weight="0.35"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.4">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="12sp"
                            android:layout_weight="0.85"/>

                        <TextView
                            android:id="@+id/txtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="email"
                            android:textColor="#000"
                            android:textSize="13sp"
                            android:layout_weight="0.15"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/sp_5"
            android:background="#292E3E"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:gravity="center_vertical"
           >

            <LinearLayout
                android:id="@+id/len_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/txtcallclose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="#fff"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_orange"/>

                <TextView
                    android:id="@+id/txtcallopen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:background="@drawable/button_green"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="Edit"
                android:src="@drawable/ic_edit"
                android:tint="@color/colorPrimary"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical|right"
                android:padding="2dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>