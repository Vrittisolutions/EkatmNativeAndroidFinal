<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/dtlslay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/invoiceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Part Number:"
                    android:padding="5dp"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/edt_itemcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Select part number"
                        android:background="@drawable/border_delivery"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:padding="5dp"
                        android:editable="false"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_weight="1">

                        <requestFocus />
                    </TextView>

                    <ImageView
                        android:id="@+id/img_barcode"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_toRightOf="@+id/edt_itemcode"
                        android:gravity="center_vertical"
                        android:src="@drawable/barcode"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!--<android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextHint">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/InvoiveNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:focusable="false"
                        android:textSize="16sp"
                        android:hint="Invoice No. :"
                        android:text="UserName" />

                </android.support.design.widget.TextInputLayout>-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Part Description :"
                    android:textSize="16sp"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/edt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Select part description"
                    android:background="@drawable/border_delivery"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:padding="5dp"
                    android:editable="false"
                    android:text=""
                    android:textSize="16sp" >

                    <requestFocus />
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/locationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:alpha="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location : "
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/edt_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter location"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_delivery"
                        android:gravity="center_vertical"
                        android:minHeight="30dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:padding="5dp"
                        android:editable="true"
                        android:text=""
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/locationarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:alpha="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Area : "
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="7"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edt_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter area"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_delivery"
                        android:gravity="center_vertical"
                        android:minHeight="30dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:padding="5dp"
                        android:editable="true"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_weight="3"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:alpha="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weight : "
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="7"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/txt_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter weight"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_delivery"
                        android:gravity="center_vertical"
                        android:minHeight="30dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:inputType="number"
                        android:padding="5dp"
                        android:layout_weight="3"
                        android:text=""
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/phoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantity :"
                    android:layout_weight="7"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/edt_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Enter quantity"
                    android:background="@drawable/border_delivery"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:padding="5dp"
                    android:inputType="number"
                    android:editable="true"
                    android:layout_weight="3"
                    android:text=""
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/countedbyayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:alpha="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Verified By : "
                        android:padding="5dp"
                        android:layout_weight="7"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edt_countedby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter verified by"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_delivery"
                        android:gravity="center_vertical"
                        android:minHeight="30dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:padding="5dp"
                        android:layout_weight="3"
                        android:editable="true"
                        android:text=""
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnsave"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/button_blue_border"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:textSize="16dp"/>

                <Button
                    android:id="@+id/btncancel"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/button_orange"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:text="CANCEL"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>