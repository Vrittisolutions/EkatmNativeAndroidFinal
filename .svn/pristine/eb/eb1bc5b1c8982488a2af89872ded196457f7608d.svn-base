<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@id/appbar_lay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E6F72"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:text="Call Update"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txt_type_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Incoming from 7057411246 on 9 -Jun at 9.56 AM"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp"

            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="7dp"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Link to"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_weight="0.7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btn_opporunity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Opportunity"
                android:textStyle="bold"
                android:background="#DBE8EA"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_weight="1"
                android:padding="2dp"/>

            <Button
                android:id="@+id/btn_collection"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:text="Collection"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="#DBE8EA"
                android:layout_weight="1"
                android:padding="2dp"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_txtvalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:padding="1dp">
            <TextView
                android:id="@+id/txt_statusdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This call is from Sayali to "
                android:layout_gravity="center_vertical"
                android:textColor="#111"
                android:textSize="16sp"></TextView>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"

            >

            <TextView
                android:id="@+id/txt_spinnervalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call From"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#111"
                android:textSize="16sp"></TextView>

            <LinearLayout

                android:id="@+id/ln_spinner_authorize"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp"
                android:layout_marginTop="5dp">


                <Spinner
                    android:id="@+id/spinner_calltype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:entries="@array/Calltype"
                    android:spinnerMode="dialog"
                    android:visibility="visible">


                </Spinner>

            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:id="@+id/ln_savebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_below="@id/ln_spinner_authorize"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <Button
                android:id="@+id/btn_save"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:background="@drawable/button_green"
                android:text="Change"
                android:textAllCaps="true"
                android:layout_margin="2dp"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="120dp"
                android:layout_margin="2dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:background="@drawable/button_orange"
                android:text="OK"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>





