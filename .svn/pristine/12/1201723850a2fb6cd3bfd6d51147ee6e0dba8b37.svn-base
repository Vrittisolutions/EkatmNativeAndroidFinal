<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--<ImageView
        android:id="@+id/ismobile"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/mobilefalse" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txt_member_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Workspace Name"
                android:textColor="#000"
                android:textSize="13sp"
                android:layout_weight="9.5"
                android:padding="2dp"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.5">




                <!--image subgrp-->

                <ImageView
                    android:id="@+id/issubgrp"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/team_subgroup" />

                <!--image mobile-->

                <ImageView
                    android:id="@+id/ismobile"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/mobilefalse" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="center|left"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:id="@+id/lay_assigned"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="?android:selectableItemBackground"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                >
                <TextView
                    android:id="@+id/txt_assigned"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:text="aa"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/vwb_border_assigned"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay_overdue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="?android:selectableItemBackground"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                >

                <TextView
                    android:id="@+id/txt_overdue"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:text="aa"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/vwb_border_overdue"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay_critical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="?android:selectableItemBackground"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/txt_critical"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:text="aa"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/vwb_border_critical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay_unapproved"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:background="?android:selectableItemBackground"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/txt_unapproved"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:text="aa"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/vwb_border_unapprove"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
