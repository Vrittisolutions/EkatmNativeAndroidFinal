<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/edit_text"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Client Ticket No : "
            android:padding="2dp"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_ticket_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:text="Client Name : "
            android:textColor="@color/black"
            android:textSize="14dp"
          />

        <TextView
            android:id="@+id/txt_client_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:text="Reported By : "
            android:textColor="@color/black"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/txt_reported_by"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/txt_resolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resolve"
        android:background="@drawable/backshape"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_gravity="right|center"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:padding="2dp"/>

</LinearLayout>