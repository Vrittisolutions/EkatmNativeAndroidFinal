<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title" >

            <ProgressBar
                android:id="@+id/toolbar_progress_App_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/backgroundHeader"
        android:orientation="horizontal"
        android:layout_below="@+id/appbar"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asset Transfer"
            android:textColor="#fff"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/len_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/head">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name :  "
            android:textColor="@color/black"
            android:textSize="14dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text"
            android:padding="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">

            <Spinner
                android:id="@+id/spinner_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog">

            </Spinner>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/len_assetno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|left"
        android:gravity="left|center"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/len_username">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Asset No :"
            android:layout_gravity="center|left"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_asset_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_gravity="center|left"
            android:gravity="left|center"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/len_asset_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|left"
        android:gravity="left|center"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/len_assetno">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Asset Type :"
            android:layout_gravity="center|left"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_asset_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_gravity="center|left"
            android:gravity="left|center"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/len_invoice_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|left"
        android:gravity="left|center"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/len_asset_type">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Invoice No :"
            android:layout_gravity="center|left"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_invoice_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_gravity="center|left"
            android:gravity="left|center"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/len_date_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|left"
        android:gravity="left|center"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/len_invoice_no">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Date of Purchase :"
            android:layout_gravity="center|left"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_date_purchase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_gravity="center|left"
            android:gravity="left|center"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/len_serial_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|left"
        android:gravity="left|center"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/len_date_purchase">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Serial No :  "
            android:layout_gravity="center|left"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_serial_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_gravity="center|left"
            android:gravity="left|center"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/len_model_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|left"
        android:gravity="left|center"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/len_serial_no"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Modal No :  "
            android:layout_gravity="center|left"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_model_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_gravity="center|left"
            android:gravity="left|center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_gravity="bottom|right"
        android:gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn_transfer"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dark_blue_border"
            android:text="Transfer"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/btncancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/business_edit_text"
            android:text="Cancel"
            android:textAllCaps="false"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:textSize="16dp"

            />
    </LinearLayout>
</RelativeLayout>