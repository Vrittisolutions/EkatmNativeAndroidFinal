<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title" />


    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/ln_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar1"
        android:background="#6E6F72"
        android:orientation="horizontal"
        android:padding="3dp">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:padding="5dp"
            android:text="Entity Master -> Bank"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_AddBank"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:background="@color/green"
            android:gravity="center"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_listDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/ln_title"
        android:visibility="visible">

        <HorizontalScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/tablerow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txt_payeeName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_border_row"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:text="Payee Name"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/txt_bankName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_border_row"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:text="Bank Name"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/txt_branch"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_border_row"
                        android:gravity="center"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:text="Branch"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/txt_bankAddress"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_border_row"
                        android:gravity="center"
                        android:maxLines="3"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:padding="12dp"
                        android:text="Bank Address"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_accountNo"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_border_row"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:text="Account no"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/txt_AccType"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_border_row"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:text="Account Type"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/txt_IFSCcode"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_border_row"
                        android:gravity="center"
                        android:text="IFSC Code"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:padding="12dp"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/txt_remittanceInst"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_border_row"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:text="Remittance Instruction"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/txt_action"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_border_row"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:text="Action"
                        android:textColor="@color/black" />

                </TableRow>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_bankDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


            </TableLayout>




        </HorizontalScrollView>





    </LinearLayout>



    <LinearLayout
        android:id="@+id/ln_AddBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="#00ff001C"
        android:orientation="vertical">


        <!--PayeeName-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_Payeename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:hint="Enter Payee name"
                    android:inputType="text"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />

        </LinearLayout>

        <!--IFSC Code-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal">

            <!--IFSC Code-->

                <EditText
                    android:id="@+id/edt_IFSCCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:hint="IFSC Code"
                    android:layout_weight="0.5"
                    android:inputType="text"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="13sp" />



            <Button
                android:id="@+id/btn_VerifyIFSCcode"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@color/green"
                android:gravity="center"
                android:text="Verify"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

        <!--BankName-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_bankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:hint="Bank Name"
                    android:inputType="text|textMultiLine"
                    android:maxLines="5"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />


        </LinearLayout>

        <!--BranchName-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:hint="Branch Name"
                    android:inputType="text|textMultiLine"
                    android:maxLines="5"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />



        </LinearLayout>

        <!--Bank Address-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_bankaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:hint="Bank Address"
                    android:inputType="text|textMultiLine"
                    android:maxLines="5"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />


        </LinearLayout>

        <!--Account No-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_accNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:hint="Account No"
                    android:inputType="text|textMultiLine"
                    android:maxLines="5"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />


        </LinearLayout>

        <!--Account Type-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_accType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:hint="Account Type"
                    android:inputType="text|textMultiLine"
                    android:maxLines="5"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />


        </LinearLayout>

        <!--Remittance Instruction :-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_remittenceInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:hint="Remittance Instruction"
                    android:inputType="text|textMultiLine"
                    android:maxLines="5"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_saveBankDetails"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/backgroundSave"
                android:text="Save"
                android:layout_weight="0.5"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/orange"
                android:text="Cancel"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp">
        <Button
            android:id="@+id/btn_finalcancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/orange"
            android:text="Cancel"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/btn_savefinal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/backgroundSave"
            android:text="Save"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_classification"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/btnsave"
            android:text="Classification"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>

    </LinearLayout>


</RelativeLayout>