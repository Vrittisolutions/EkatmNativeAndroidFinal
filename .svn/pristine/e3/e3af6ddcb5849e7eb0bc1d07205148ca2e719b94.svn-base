<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:isScrollContainer="false">

    <LinearLayout
        android:id="@+id/len_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16dp"
            android:background="@color/dark_grey"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Advance Provisional Receipt of Collection Calls"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:padding="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Customer Name :"
                android:textColor="@color/black"
                android:textSize="16dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/edit_text"
    >
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14dp" />
</LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Consignee Name :"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="@drawable/edit_text"
                android:layout_marginLeft="2dp"
                >
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spinner_consignee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>
           </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:text="Amount :"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_weight="0.11" />
            <EditText
                android:id="@+id/edt_amount"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:gravity="center|left"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="Instrument No : "
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edt_instrument_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:gravity="center|left"
                android:padding="10dp"
                android:maxLength="8"
                android:singleLine="true"
                android:layout_weight="1"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Bank Name :"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edt_bankname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:gravity="center|left"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Deposited in Bank:"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="5dp"
                android:background="@drawable/edit_text"
                android:padding="5dp"

                >
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spinner_bankname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:padding="5dp"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Deposited Date :"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/edt_date"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:editable="false"
                android:singleLine="true"
                android:textSize="14dp"
                android:hint="yyyy/mm/dd"
                android:focusable="false"
                android:imeOptions="actionNext"
                android:background="@drawable/edit_text"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:id="@+id/img_date"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/calender" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="TDS Amount : "
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edt_tds_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:gravity="center|left"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="number"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="14dp"
               />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Narration :"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edt_narration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:gravity="center|left"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/header"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_Save"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Save"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_Close"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Cancel"
                    android:textColor="@color/white" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>