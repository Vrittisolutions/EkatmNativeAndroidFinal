<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:showIn="@layout/vwb_scrolling">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#DFEAF6">

            <TextView
                android:id="@+id/txt_participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="data"
                android:textColor="#0A9BC5"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/fab"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:background="@drawable/add_user_bg"
                android:padding="5dp"
                android:src="@drawable/adduser_icon" />


        </RelativeLayout>

        <View

            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/rl"
            android:background="#089c2b" />

        <RelativeLayout
            android:id="@+id/rlExit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="#FF5959">

            <ImageView
                android:id="@+id/exitImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/exitchat_icon" />

            <TextView
                android:id="@+id/txt_exit_chatroom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Exit chat room"
                android:layout_toRightOf="@id/exitImage"
                android:textColor="@color/white"
                android:textSize="18sp"

                />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#8A0000" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#8A0000" />
        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_group_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rlExit"
            android:layout_below="@+id/view"

            ></android.support.v7.widget.RecyclerView>


    </RelativeLayout>
</RelativeLayout>
