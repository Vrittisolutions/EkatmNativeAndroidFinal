<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.sales.activity.LocateOnMapActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:visibility="gone"
        android:background="#FF4112">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:popupTheme="@style/AppTheme">

            <ImageView
                android:id="@+id/imgrefresh"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_refresh"
                android:layout_gravity="center|right"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/toolbar_progress_Assgnwork"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/tbar"
        layout="@layout/tbuds_common_toolbar"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff4112">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Locate on map"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="7dp"
        android:padding="5dp"
        android:background="#ededed"
        android:elevation="5dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/tbuds_marker"
            android:layout_marginTop="2dp"
            android:padding="1dp"
            android:layout_gravity="center_vertical|top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2">

            <TextView
                android:id="@+id/txtline_mainaddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:hint="Address line one"
                android:maxLines="3"
                android:textSize="14sp"
                android:textColor="#111"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|top"/>

            <TextView
                android:id="@+id/txtline_subaddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:hint="flat/house no."
                android:maxLines="3"
                android:textSize="12.5sp"
                android:textColor="#111"
                android:layout_gravity="center_vertical|top"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtline_state_city_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:hint="city, state, postal code"
                android:maxLines="3"
                android:textSize="12.5sp"
                android:textColor="#111"
                android:layout_gravity="center_vertical|top"
                android:visibility="visible"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnsaveaddress"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/tbuds_button_all_border"
            android:layout_weight="0.7"
            android:text="Save"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:hint="Search for area, locality"
            android:textSize="14sp"
            android:textColor="#FF4112"
            android:layout_marginTop="10dp"
            android:layout_weight="0.2">

            <AutoCompleteTextView
                android:id="@+id/edt_mainaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="7dp"
                android:hint=""
                android:textSize="14sp"
                android:textColor="#111"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/btnclear"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Clear"
                android:layout_weight="0.8"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:visibility="visible"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/tbuds_button_all_border"/>

            <Button
                android:id="@+id/btnshow"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Locate me here"
                android:layout_weight="0.8"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:visibility="visible"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/tbuds_button_all_border"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_weight="0.5">

        <fragment
            android:id="@+id/googleMap"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            class="com.google.android.gms.maps.SupportMapFragment" />

        <ImageView
            android:id="@+id/img_marker"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/tbuds_marker"
            android:tint="#FF4112"
            android:visibility="visible"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>
