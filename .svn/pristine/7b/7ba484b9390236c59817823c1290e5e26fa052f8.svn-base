<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/orderid_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left"
                android:maxLines="4"
                android:text="SOHW19-20/000"
                android:textColor="#222"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_weight="0.45"/>

            <TextView
                android:id="@+id/doack_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dd mmm yyyy"
                android:textColor="#111"
                android:textSize="12dp"
                android:layout_gravity="center|right"
                android:gravity="center"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/txtsodate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtamt"
                android:layout_gravity="center|right"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="dd mmm yyyy"
                android:textColor="#006400"
                android:textSize="12dp" />

           <!-- <TextView
                android:id="@+id/txtstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:maxLines="4"
                android:text="Status"
                android:textColor="#222"
                android:textSize="12dp"
                android:layout_weight="0.5"/>-->

             <ImageView
                android:id="@+id/txtstatus"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:maxLines="4"
                android:text="Status"
                 android:src="@drawable/approved_new"
                android:textColor="#222"
                android:textSize="12dp"
                android:layout_weight="0.55"/>

            <TextView
                android:id="@+id/txtcustname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consignee"
                android:layout_gravity="center|right|top"
                android:gravity="center|right"
                android:textColor="#111"
                android:textSize="11dp"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/txtamt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtamt"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="Amount"
                android:textColor="#006400"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_weight="0.5"/>

        </LinearLayout>

      <!--  <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:visibility="gone">

            <TextView
                android:id="@+id/doack_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DD/MM/YYYY"
                android:textColor="#111"
                android:textSize="14dp" />

        </LinearLayout>-->

        <!--<LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
