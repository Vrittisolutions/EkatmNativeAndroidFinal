<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.sales.CounterBilling.PrintedBillDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:background="#FF4112"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#FF4112"
            app:popupTheme="@style/AppTheme">

            <ProgressBar
                android:id="@+id/toolbar_progress_Assgnwork"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtbillno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill No."
                android:textSize="15sp"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/tbar"
        layout="@layout/tbuds_common_toolbar"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/txtcustname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CustName"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_weight="0.4"/>

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DateTime"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_weight="0.6"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer GSTN : "
                    android:textSize="10sp"
                    android:layout_weight="0.7"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/txtcustgstn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="xxxxxxxxxxxxxxx"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_weight="0.3"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical"
                    android:text="Company GSTN : "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtgstn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="xxxxxxxxxxxxxxx"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_weight="0.3"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#ededed"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtitmname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="ITEM"
                android:layout_weight="0.25"/>

            <TextView
                android:id="@+id/txtqty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="QTY"
                android:layout_weight="0.33"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"/>

            <TextView
                android:id="@+id/txtdisc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="DIS.AMT"
                android:layout_weight="0.33"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"/>

            <TextView
                android:id="@+id/txtamt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="AMOUNT"
                android:layout_weight="0.3"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="MRP"
                android:layout_weight="0.32"/>

            <TextView
                android:id="@+id/txtMRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Rate"
                android:paddingLeft="5dp"
                android:layout_weight="0.32"/>

            <TextView
                android:id="@+id/txtcgst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="CGST%"
                android:layout_weight="0.33"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/txtsgst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="SGST%"
                android:layout_weight="0.33"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#111"
                android:text="ItemName"
                android:layout_weight="0.3"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

        <ListView
            android:id="@+id/list_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:visibility="visible">
            <!--android:layout_weight="6"-->
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <!-- android:layout_weight="0.1"-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

            </View>

            <!--subtotal-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub Total  ₹ :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:id="@+id/txtsubtotal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="0.7"
                    android:editable="true"
                    android:gravity="center_vertical|right"
                    android:paddingRight="5dp"
                    android:text="572.50"
                    android:textColor="#111"
                    android:textSize="14dp" />

            </LinearLayout>

            <!--tax-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tax % :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <EditText
                    android:id="@+id/edttaxtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:layout_weight="0.7"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

            </LinearLayout>

            <!--Total incl tax-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total (Incl. of tax) ₹ :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/txtTotalincltax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textColor="#111"
                    android:layout_weight="0.7"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>
                <!-- ₹ -->

            </LinearLayout>

            <View
                android:layout_width="280dp"
                android:layout_height="1px"
                android:background="#000000"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_gravity="right"
                android:visibility="gone">

            </View>

            <!--BaseAmount-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Base Amount :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:id="@+id/txtbaseamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textColor="#111"
                    android:layout_weight="0.7"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:visibility="visible"/>
                <!-- ₹ -->

            </LinearLayout>

            <!--CGST-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/titlecgst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CGST :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:id="@+id/txtcgstamt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 00.00"
                    android:layout_weight="0.7"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:visibility="visible"/>
                <!-- ₹ -->

            </LinearLayout>

            <!--SGST-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/titlesgst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SGST :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:id="@+id/txtsgstamt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:layout_weight="0.7"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:visibility="visible"/>
                <!-- ₹ -->

            </LinearLayout>

            <!--total amt-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total ₹ :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:id="@+id/txttotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#111"
                    android:layout_weight="0.7"
                    android:paddingRight="0dp"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>
                <!-- ₹ -->

            </LinearLayout>

            <View
                android:layout_width="280dp"
                android:layout_height="1px"
                android:background="#000000"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_gravity="right">
            </View>

            <!--round off amt-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Round Off ₹ :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:id="@+id/txtroundoff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textColor="#111"
                    android:layout_weight="0.7"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>
                <!-- ₹ -->

            </LinearLayout>

            <!--net amt-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Net Amount ₹ :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:id="@+id/txtNetAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textColor="#111"
                    android:layout_weight="0.7"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>
                <!-- ₹ -->

            </LinearLayout>

            <View
                android:layout_width="280dp"
                android:layout_height="1px"
                android:background="#000000"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_gravity="right">
            </View>

            <!--disc on total-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:visibility="visible">

                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discount on Total ₹ :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"txtFinalTotal
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>-->

                <TextView
                    android:id="@+id/swtchdisc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="0.3"
                    android:gravity="center|right"
                    android:text="Disc. on Net Amt ₹ :  "
                    android:textColor="#2c2c2c"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtTotalDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:layout_weight="0.75"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:inputType="number"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>
                <!-- - ₹ -->

            </LinearLayout>

            <!--Balance-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payable Amount ₹ :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:id="@+id/txtpaybleamt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textColor="#111"
                    android:layout_weight="0.7"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>
                <!-- ₹ -->

            </LinearLayout>

            <!--you save-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You Save ₹ :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:id="@+id/txtsavers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textColor="#111"
                    android:layout_weight="0.7"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>
                <!-- ₹ -->

            </LinearLayout>

            <!--Received-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Received Amount ₹ :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <EditText
                    android:id="@+id/edttxtReceived"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textColor="#111"
                    android:layout_weight="0.7"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>
                <!--₹ -->

            </LinearLayout>

            <!--Balance-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balance Amount ₹ :"
                    android:layout_weight="0.3"
                    android:textColor="#2c2c2c"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>

                <TextView
                    android:id="@+id/txtbalamt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#ff4112"
                    android:layout_weight="0.7"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"/>
