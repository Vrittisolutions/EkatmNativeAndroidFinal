package com.vritti.vwb.Adapter;

import android.content.Context;
import android.graphics.Color;
import android.support.annotation.NonNull;
import android.support.v7.widget.RecyclerView;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.ImageView;
import android.widget.RelativeLayout;
import android.widget.TextView;

import com.vritti.SaharaModule.SaharaBeans.AttachmentBean;
import com.vritti.ekatm.R;
import com.vritti.vwb.Beans.DocumentReviewListBean;
import com.vritti.vwb.vworkbench.DocumentReviewList;

import java.util.ArrayList;

import butterknife.BindView;
import butterknife.ButterKnife;
import butterknife.OnClick;

public class DocReviewListAdapter extends RecyclerView.Adapter<DocReviewListAdapter.DocReviewHolder> {


    Context context;
    ArrayList<DocumentReviewListBean> listReviewDocs;

    public DocReviewListAdapter(Context context, ArrayList<DocumentReviewListBean> documentReviewLists) {
        this.context = context;
        this.listReviewDocs = documentReviewLists;
    }

    public DocReviewListAdapter(DocumentReviewList context, ArrayList<AttachmentBean> attachmentList) {
    }

    @NonNull
    @Override
    public DocReviewListAdapter.DocReviewHolder onCreateViewHolder(@NonNull ViewGroup parent, int viewType) {
        View itemView = LayoutInflater.from(parent.getContext())
                .inflate(R.layout.datasheet_doc_review_list, parent, false);


        return new DocReviewListAdapter.DocReviewHolder(itemView);
    }

    @Override
    public void onBindViewHolder(@NonNull DocReviewListAdapter.DocReviewHolder holder, int position) {


        DocumentReviewListBean documentReviewListBean = listReviewDocs.get(position);
        // if(listReviewDocs.size()>0) {
        String quesText = listReviewDocs.get(position).getQuesText();
        holder.txt_questions.setText(documentReviewListBean.getQuesText().trim());
        if (position % 2 == 1) {
            holder.rel_main.setBackgroundColor(Color.parseColor("#F1F6F7"));
        } else {
            holder.rel_main.setBackgroundColor(Color.parseColor("#DBE8EA"));
        }
        holder.attachment_count.setText(listReviewDocs.get(position).getAttachmentCount());


        if (documentReviewListBean.getKendra().equalsIgnoreCase("yes")) {
            holder.img_kendra.setBackgroundResource(R.drawable.tickmark);
        } else if (documentReviewListBean.getKendra().equalsIgnoreCase("No")) {
            holder.img_kendra.setBackgroundResource(R.drawable.crossmark);
        } else if (documentReviewListBean.getKendra().equalsIgnoreCase("")) {
            holder.img_kendra.setBackgroundResource(R.color.darkgrey);
        }
        if (documentReviewListBean.getExtension().equalsIgnoreCase("yes")) {
            holder.img_extension.setBackgroundResource(R.drawable.tickmark);
        } else if (documentReviewListBean.getExtension().equalsIgnoreCase("No")) {
            holder.img_extension.setBackgroundResource(R.drawable.crossmark);
        } else if (documentReviewListBean.getExtension().equalsIgnoreCase("")) {
            holder.img_extension.setBackgroundResource(R.color.darkgrey);
        }


        if (documentReviewListBean.getBEO().equalsIgnoreCase("yes")) {
            holder.img_taluka.setBackgroundResource(R.drawable.tickmark);
        } else if (documentReviewListBean.getBEO().equalsIgnoreCase("No")) {
            holder.img_taluka.setBackgroundResource(R.drawable.crossmark);
        } else if (documentReviewListBean.getBEO().equalsIgnoreCase("")) {
            holder.img_taluka.setBackgroundResource(R.color.darkgrey);
        }


    }

    @Override
    public int getItemCount() {
        return listReviewDocs.size();
    }

    public void updateList(ArrayList<DocumentReviewListBean> documentReviewLists) {
        this.listReviewDocs = documentReviewLists;
        notifyDataSetChanged();
    }

    public class DocReviewHolder extends RecyclerView.ViewHolder {
        @BindView(R.id.txt_questions)
        TextView txt_questions;
        @BindView(R.id.txt_kendra)
        TextView txt_kendra;
        @BindView(R.id.txt_extension)
        TextView txt_extension;
        @BindView(R.id.txt_taluka)
        TextView txt_taluka;


        @BindView(R.id.img_attachment)
        ImageView img_attachment;

        @BindView(R.id.img_kendra)
        ImageView img_kendra;

        @BindView(R.id.img_extension)
        ImageView img_extension;

        @BindView(R.id.img_taluka)
        ImageView img_taluka;
        @BindView(R.id.rel_main)
        RelativeLayout rel_main;
        @BindView(R.id.attachment_count)
        TextView attachment_count;
        @BindView(R.id.rel_img)
        RelativeLayout rel_img;


        public DocReviewHolder(View itemView) {
            super(itemView);
            ButterKnife.bind(this, itemView);

        }

        @OnClick(R.id.rel_img)
        public void onClickImage() {
            ((DocumentReviewList) context).getUploadedImage(getAdapterPosition());

        }
    }
}
