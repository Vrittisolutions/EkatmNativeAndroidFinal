        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/checkedfilled" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approved"
                        android:textSize="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="14dp"
                        android:src="@drawable/approved_new" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approved"
                        android:textSize="10dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="14dp"
                        android:src="@drawable/tbuds_half_dispatch" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Partial Shipped"
                        android:textSize="10dp"/>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pending Shipments"
                android:textColor="#8B4513"
                android:fontFamily="@string/ButtonFont"
                android:textSize="20dp"
                android:layout_weight="0.60"
                android:layout_gravity="center"
                android:gravity="center" />

            <TextView
                android:id="@+id/pending_ordrcnt"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.10"
                android:textColor="#751205"
                android:text="100"
                android:fontFamily="@string/ButtonFont"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:background="@drawable/tbuds_spherecnt"
                />
            <!---->

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:visibility="visible"
            android:layout_weight="0.9">

              <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3.5dp"
                android:layout_marginTop="5dp"
                android:background="#ededed">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:maxLines="4"
                    android:text="Order No."
                    android:textColor="#006400"
                    android:textSize="12dp"
                    android:layout_weight="0.45"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Added Date"
                    android:textColor="#006400"
                    android:textSize="11dp"
                    android:layout_gravity="center|right|top"
                    android:gravity="center|right|top"
                    android:layout_weight="0.5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtamt"
                    android:layout_gravity="center|right|top"
                    android:layout_weight="0.5"
                    android:gravity="center|right|top"
                    android:text="Exp. Del. Date"
                    android:textColor="#006400"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right|top"
                    android:gravity="center"
                    android:text="Status"
                    android:textColor="#006400"
                    android:textSize="11dp"
                    android:layout_weight="0.5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Consignee"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="#006400"
                    android:textSize="11dp"
                    android:layout_weight="0.5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtamt"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:text="Amount"
                    android:textColor="#006400"
                    android:textSize="12dp"
                    android:layout_weight="0.5"/>

            </LinearLayout>

