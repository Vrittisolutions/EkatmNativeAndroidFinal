<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.sales.activity.TransitShipmentActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:visibility="gone">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme">

            <ProgressBar
                android:id="@+id/toolbar_progress_Assgnwork"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/tbar"
        layout="@layout/tbuds_common_toolbar"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#dcdcdc"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtinvoiceno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="0.55"
            android:gravity="center_vertical|left"
            android:paddingRight="8dp"
            android:text="Invoice No."
            android:textColor="#111"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txtcustname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="0.5"
            android:gravity="center_vertical|left"
            android:text="Consignee"
            android:textColor="#111"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txtactassigndate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invoice Date"
            android:textSize="12dp"
            android:layout_weight="0.65"
            android:textStyle="bold"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"/>

        <!--<TextView
            android:id="@+id/txtagentname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agent Name"
            android:textSize="13dp"
            android:textColor="#111"
            android:layout_weight="0.55"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"/>-->

    </LinearLayout>

    <ListView
        android:id="@+id/list_transit_shipments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"></ListView>

</LinearLayout>
