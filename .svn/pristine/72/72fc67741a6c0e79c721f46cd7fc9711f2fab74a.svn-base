<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vritti.sales.beans.NonOrdered_Fragment">

    <LinearLayout
        android:id="@+id/ordl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:background="@drawable/tbuds_edt_login_transprtant"
            android:orientation="horizontal">
            <!---->

            <TextView
                android:id="@+id/non_orderedList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:text="Non-Ordered Items"
                android:textColor="#fff"
                android:textSize="18dp"
                android:titleCondensed="@string/ButtonFont"
                android:visibility="gone" />

            <android.support.v7.widget.SearchView
                android:id="@+id/searchview"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center|right"
                android:gravity="center|right"

                android:layout_marginRight="10dp"/>
            <!--android:layout_weight="2.5"-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/headerList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5.25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Products"
                    android:textColor="#FF4112"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:titleCondensed="@string/ButtonFont" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="#FF4112"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:titleCondensed="@string/ButtonFont"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty"
                    android:textColor="#FF4112"
                    android:textStyle="bold"
                    android:titleCondensed="@string/ButtonFont"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="#FF4112"
                    android:textStyle="bold"
                    android:titleCondensed="@string/ButtonFont"
                    android:textSize="15dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="39">

            <ListView
                android:id="@+id/listView_nonordered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:stackFromBottom="false">
            </ListView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_btns_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="4"
            android:gravity="center">

            <Button
                android:id="@+id/addtocart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tbuds_btn_pressed"
                android:text="Add to Ordered Item List"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:fontFamily="@string/ButtonFont"
                android:textSize="15dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"/>
            <!--android:layout_marginTop="5dp"-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>