<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/tablerow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_consigneeName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_border_row"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="12dp"
                tools:text="Consignee Name"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_address"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_border_row"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="12dp"
                tools:text="Address"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_cityName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:padding="12dp"
                android:ellipsize="end"
                android:text="City Name"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_mobileNo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="12dp"
                android:text="Mobile No"
                android:textColor="@color/black" />


            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border_row"
                android:padding="6dp">



                <ImageView
                    android:id="@+id/btn_editchrge"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="1dp"
                    android:src="@drawable/edit_icon1"/>

                <ImageView
                    android:id="@+id/btn_deletechrge"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#F3F9FD"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/delete"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="@color/red"/>

            </LinearLayout>


        </TableRow>
    </TableLayout>

</HorizontalScrollView>