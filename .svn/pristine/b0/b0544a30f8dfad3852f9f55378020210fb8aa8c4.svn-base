        <LinearLayout
            android:id="@+id/textOpportunityRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:padding="2dp"
            android:visibility="gone">

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Opportunity Rating"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/textOpportunityUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:padding="2dp"
            android:visibility="visible">

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:text="Opportunity Update"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/textfilldatasheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:text="Fill Datasheet"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#6E6F72"
            android:padding="10dp"
            android:text="History"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/callhistory_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:divider="@android:color/transparent"></ListView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar1"
                android:background="@color/white"
                card_view:cardCornerRadius="4dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linear_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date Time :"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="25-May-17 12:05 PM"
                            android:textColor="@color/black"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_assign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_date"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="2dp"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assigned By :"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Payal Jain"
                            android:textColor="@color/black"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/follow_process"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_assign"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="2dp"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followup Type :"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Telephone"
                            android:textColor="@color/black"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/with_whoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/follow_process"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="2dp"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="With Whom :"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="XYZ"
                            android:textColor="@color/black"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Purpose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/with_whoom"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="2dp"


                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Purpose :"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Project"
                            android:textColor="@color/black"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Outcome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Purpose"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="2dp"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Outcome :"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Appointment"
                            android:textColor="@color/black"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Next_Action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Outcome"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="2dp"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Next Action :"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Telephone"
                            android:textColor="@color/black"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Next_Action_Datetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Next_Action"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="2dp"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Next Action Datetime :"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="30-May-17 00:05 AM"
                            android:textColor="@color/black"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Next_Action_Datetime"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="Remark :"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Next_Action_Datetime"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/txt_remark"
                        android:layout_toRightOf="@+id/txt_remark"
                        android:text="Test Downloa Data"
                        android:textColor="@color/black"
                        android:textSize="14dp"

                        />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>