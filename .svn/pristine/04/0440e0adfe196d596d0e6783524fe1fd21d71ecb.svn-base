    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:padding="1dp">

        <TextView
            android:id="@+id/textassigned"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:gravity="center"
            android:background="@drawable/crm_border_assigned"
            android:text="23"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        <!--#8B008B-->

        <TextView
            android:id="@+id/textoverdue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:text="45"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/vwb_border_overdue"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/texttoday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:text="12"
            android:background="@drawable/vwb_border_today"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/texttomorrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:text="56"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/vwb_border_today"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/textcollection"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.1"
            android:background="@drawable/crm_border_collection"
            android:text="474/676.11C"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/texthot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:gravity="center"
            android:text="123/123.00T"
            android:layout_marginLeft="1dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/vwb_border_critical"
            android:textSize="12dp"
            />
    </LinearLayout>
</LinearLayout>