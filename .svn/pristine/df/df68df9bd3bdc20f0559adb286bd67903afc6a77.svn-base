<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vritti.crm.vcrm7.EntityMasterMainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
            app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title"/>



    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/ln_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6E6F72"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_below="@id/toolbar1">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Entity Master"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_weight="0.6"
            android:padding="5dp"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_AddCustomer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@color/green"
            android:text="Add"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScroll"
        android:layout_below="@+id/ln_title"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tablerow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_blue"
                    android:gravity="center"
                    android:text="Code"
                    android:textColor="@color/white" />


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_blue"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="@color/white" />


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_blue"
                    android:gravity="center"
                    android:text="Entity Class"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_blue"
                    android:gravity="center"
                    android:text="City"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_blue"
                    android:gravity="center"
                    android:text="Address"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_blue"
                    android:gravity="center"
                    android:text="Contact"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_blue"
                    android:gravity="center"
                    android:text="Email"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_blue"
                    android:gravity="center"
                    android:text="Mobile"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_border_blue"
                    android:gravity="center"
                    android:text="Actions"
                    android:textColor="@color/white" />


            </TableRow>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_clientDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:padding="2dp" />

        </TableLayout>

    </HorizontalScrollView>


</RelativeLayout>