package com.vritti.vwb.Adapter;

import android.content.Context;
import android.net.Uri;
import android.support.annotation.NonNull;
import android.support.v7.widget.RecyclerView;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;

import com.facebook.drawee.view.SimpleDraweeView;
import com.vritti.ekatm.R;
import com.vritti.vwb.vworkbench.AttendenceWithImage;
import com.vritti.vwb.vworkbench.LoggingTimeActivity;

import java.util.ArrayList;

import butterknife.BindView;
import butterknife.ButterKnife;
import butterknife.OnClick;

public class ClientAttendenceAdapter extends RecyclerView.Adapter<ClientAttendenceAdapter.ClientHolder> {
    ArrayList<Uri> imageList;
    Context context;
    public ClientAttendenceAdapter(ArrayList<Uri> imageList, Context context) {
        this.imageList = imageList;
        this.context = context;
    }

    @NonNull
    @Override
    public ClientHolder onCreateViewHolder(@NonNull ViewGroup parent, int viewType) {
        View convertView = LayoutInflater.from(parent.getContext())
                .inflate(R.layout.client_image, parent, false);
        return new ClientHolder(convertView);
    }

    @Override
    public void onBindViewHolder(@NonNull ClientHolder holder, int position) {
        holder.sdvImage.setImageURI(imageList.get(position));
    }

    @Override
    public int getItemCount() {
        return imageList.size();
    }



    public class ClientHolder extends RecyclerView.ViewHolder {
        @BindView(R.id.sdvImage)
        SimpleDraweeView sdvImage;

        public ClientHolder(View itemView) {
            super(itemView);
            ButterKnife.bind(this , itemView);

        }
        @OnClick(R.id.sdvImage)
        void setSdvImage(){
            ((LoggingTimeActivity)context).openFullImage(imageList.get(getAdapterPosition()));
        }
    }
}
