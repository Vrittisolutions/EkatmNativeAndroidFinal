<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MyToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:minHeight="?android:attr/actionBarSize"
        app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
        app:subtitleTextAppearance="@style/ToolbarTextAppearance.Subtitle"
        app:titleTextAppearance="@style/ToolbarTextAppearance.Title" />


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <!--SAhara-->
            <LinearLayout
                android:id="@+id/saharaConversation"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/card_sahara"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/sahara_module_icon_design_48"/>

                <RelativeLayout
                    android:id="@+id/conversation1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp">

                    <ImageView
                        android:id="@+id/chat_module1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/conversation"/>

                    <TextView
                        android:id="@+id/chatCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:minWidth="40dp"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:visibility="invisible"
                        android:background="@drawable/green_backgraound"/>
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/len_vwb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/card_vwb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/vwb_mob_icon" />/>

                    <ImageView
                        android:id="@+id/card_crm"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/crm_mob_icon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/card_service"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/servie_desk" />

                    <ImageView
                        android:id="@+id/card_inventory"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/inventory_mob_icon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/conversation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp">

                    <ImageView
                        android:id="@+id/chat_module"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/conversation"/>

                    <TextView
                        android:id="@+id/chatCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:minWidth="40dp"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:visibility="invisible"
                        android:background="@drawable/green_backgraound"/>
                </RelativeLayout>

                    <ImageView
                        android:id="@+id/card_sales"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        android:src="@drawable/sales_mob_icon" />

                </LinearLayout>


                <!--print -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/card_print"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        android:src="@drawable/print_test" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:src="@drawable/sales_mob_icon" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/len_pm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card_pm"
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/simplify" />

                    <ImageView
                        android:id="@+id/card_pm_crm"
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/crm_mob_icon" />
                    />


                </LinearLayout>


            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</LinearLayout>
