<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.crm.vcrm7.EntityMasterPurchaseActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/ln_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:popupTheme="@style/AppTheme"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title">

            <ImageView
                android:id="@+id/imgrefresh"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_refresh"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/toolbar_progress_Assgnwork"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/ln_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ln_toolbar">

    <LinearLayout
        android:id="@+id/ln_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln_toolbar"
        android:background="#6E6F72"
        android:orientation="horizontal"
        android:padding="3dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Entity Master -> Purchase"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />


    </LinearLayout>
<!--PO and Receipt-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--PO-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="0.5"
            android:hint="For PO"
            android:paddingLeft="0dp"
            android:textColor="#FF4112"
            android:textSize="14sp">

            <AutoCompleteTextView
                android:id="@+id/edt_PO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:drawableRight="@drawable/tbuds_ic_expand"
                android:hint=""
                android:inputType="text"
                android:paddingLeft="7dp"
                android:textColor="#111"
                android:textSize="14sp" />

        </android.support.design.widget.TextInputLayout>

        <!--sales price list-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="0.5"
            android:hint="For Receipts"
            android:paddingLeft="0dp"
            android:textColor="#FF4112"
            android:textSize="14sp">

            <AutoCompleteTextView
                android:id="@+id/edt_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:drawableRight="@drawable/tbuds_ic_expand"
                android:hint=""
                android:inputType="text"
                android:paddingLeft="7dp"
                android:textColor="#111"
                android:textSize="14sp" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <!--Evaluation Date-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="0.5"
            android:hint="Evaluation Date"
            android:paddingLeft="0dp"
            android:textColor="#FF4112"
            android:textSize="14sp">

            <TextView
                android:id="@+id/edt_evaluationDt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:hint="Evaluated Date"
                android:padding="5dp"
                android:background="@drawable/button_border_row_bottom"
                android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                android:ellipsize="end"
                android:inputType="text"
                android:paddingLeft="7dp"
                android:textColor="#111"
                android:textSize="13sp" />

        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/chkApproved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="0dp"
            android:text="Approved"
            android:layout_gravity="center_vertical"
            android:textColor="#2c2c2c"
            android:textSize="12sp" />

    </LinearLayout>


    <!--For valid From and Valid To-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/edt_validFromDt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:hint="Valid From"
            android:padding="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_border_row_bottom"
            android:drawableRight="@drawable/ic_baseline_calendar_today_24"
            android:inputType="text|textMultiLine"
            android:paddingLeft="7dp"
            android:textColor="#111"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/edt_validToDt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:hint="Valid to"
            android:padding="5dp"
            android:background="@drawable/button_border_row_bottom"
            android:layout_weight="0.5"
            android:inputType="text|textMultiLine"
            android:drawableRight="@drawable/ic_baseline_calendar_today_24"
            android:paddingLeft="7dp"
            android:textColor="#111"
            android:textSize="13sp" />

      <!--  &lt;!&ndash;name-designation&ndash;&gt;
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="0.32"
            android:hint="Valid From "
            android:paddingLeft="0dp"
            android:textColor="#FF4112"
            android:textSize="14sp">



        </android.support.design.widget.TextInputLayout>-->

     <!--   &lt;!&ndash;Designation&ndash;&gt;
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="0.32"
            android:hint="Valid to"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:textColor="#FF4112"
            android:textSize="14sp">


        </android.support.design.widget.TextInputLayout>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chkdefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="0dp"
            android:text="System User Code"
            android:layout_gravity="center_vertical"
            android:textColor="#2c2c2c"
            android:textSize="12sp" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="0.5"
            android:hint="Enter System Code User"
            android:paddingLeft="0dp"
            android:textColor="#FF4112"
            android:textSize="14sp">

            <AutoCompleteTextView
                android:id="@+id/edt_entitytype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:drawableRight="@drawable/tbuds_ic_expand"
                android:hint=""
                android:ellipsize="end"
                android:inputType="text"
                android:paddingLeft="7dp"
                android:textColor="#111"
                android:textSize="13sp" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:hint="Enter Payment Terms"
        android:paddingLeft="0dp"
        android:textColor="#FF4112"
        android:textSize="14sp">

        <AutoCompleteTextView
            android:id="@+id/edt_paymentTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:drawableRight="@drawable/tbuds_ic_expand"
            android:hint=""
            android:ellipsize="end"
            android:inputType="text"
            android:paddingLeft="7dp"
            android:textColor="#111"
            android:textSize="13sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:hint="Enter Delivery Terms"
        android:paddingLeft="0dp"
        android:textColor="#FF4112"
        android:textSize="14sp">

        <AutoCompleteTextView
            android:id="@+id/edt_deliveryTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:drawableRight="@drawable/tbuds_ic_expand"
            android:hint=""
            android:ellipsize="end"
            android:inputType="text"
            android:paddingLeft="7dp"
            android:textColor="#111"
            android:textSize="13sp" />

    </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scroll"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/backgroundSave"
            android:text="Save"
            android:layout_weight="0.5"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_sales"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/btnsave"
            android:text="Sales"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>

    </LinearLayout>


</RelativeLayout>