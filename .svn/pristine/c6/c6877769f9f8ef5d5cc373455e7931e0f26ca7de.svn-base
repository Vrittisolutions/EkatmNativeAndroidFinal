<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tbar"
        layout="@layout/tbuds_common_toolbar"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textcbilling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customers List"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#6CAD1C"
        android:layout_margin="8dp"
        android:layout_below="@+id/tbar"
        android:textStyle="bold"/>

    <GridView
        android:id="@+id/listview_customer_list"
        android:layout_width="match_parent"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:padding="5dp"
        android:layout_below="@+id/textcbilling"
        android:background="#DCDCDC"/>

</RelativeLayout>