<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/txt_workspace_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Workspace Name"
            android:textColor="#000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/lay_assigned"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="3dp">


            <TextView
                android:id="@+id/txt_assigned"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="11"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/vwb_border_assigned"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_overdue"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="3dp">


            <TextView
                android:id="@+id/txt_overdue"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="aa"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/vwb_border_overdue"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_critical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="3dp">


            <TextView
                android:id="@+id/txt_critical"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="aa"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/vwb_border_critical"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_complete"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:background="?android:selectableItemBackground"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="3dp">


            <TextView
                android:id="@+id/txt_complete"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="aa"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/vwb_border_unapprove"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_unapproved"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="3dp">


            <TextView
                android:id="@+id/txt_unapproved"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="aa"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/vwb_border_complete"

                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
