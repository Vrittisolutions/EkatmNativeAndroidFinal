    public void updateCount(int selectedPos, int size, int attachPos) {
        editDatasheetAdapterNewArrayList.get(selectedPos).setAttachmentCount(String.valueOf(size));
        if (editDatasheetAdapterNewArrayList.get(selectedPos).getFilePathName() != null
        || editDatasheetAdapterNewArrayList.get(selectedPos).getFilePathName().size() != 0) {
            editDatasheetAdapterNewArrayList.get(selectedPos).getFilePathName().remove(attachPos);
        }
        notifyDataSetChanged();
    }

    public void updateCount(ArrayList<AttachmentBean> attachmentList) {

    }

    public class ActivityHolder extends RecyclerView.ViewHolder {

        RelativeLayout rel_statusimg, rel_appr, rel_attachment;
        TextView txtremark, txt_remarkstatus;
        ImageView img_attachment, img_appr;
        TextView attachment_count;
        TextView txtQuestion, txtAnswer;
        LinearLayout ln_View;
        public ActivityHolder(View view) {
            super(view);
            txtQuestion = (TextView) view.findViewById(R.id.txtquestion);
            txtAnswer = (TextView) view.findViewById(R.id.txtanswer);
            txtremark = (TextView) view.findViewById(R.id.txtremark);
            txt_remarkstatus = (TextView) view.findViewById(R.id.txt_remarkstatus);
            rel_statusimg = view.findViewById(R.id.rel_statusimg);
            img_attachment = view.findViewById(R.id.img_attachment);
            attachment_count = view.findViewById(R.id.attachment_count);
            ln_View = view.findViewById(R.id.cView);
            img_appr = view.findViewById(R.id.img_appr);
            rel_appr = view.findViewById(R.id.rel_appr);
            rel_attachment = view.findViewById(R.id.rel_attachment);

            ln_View.setOnClickListener(new View.OnClickListener() {
                @Override
                public void onClick(View v) {
                    ((EditDatasheetActivityMainNew)context).rowClick(getAdapterPosition(),editDatasheetAdapterNewArrayList);
                }
            });

            img_attachment.setOnClickListener(new View.OnClickListener() {
                @Override
                public void onClick(View v) {
                    ((EditDatasheetActivityMainNew)context).displayAttachementFiles(getAdapterPosition(),editDatasheetAdapterNewArrayList);
                }
            });

        }
    }
}
