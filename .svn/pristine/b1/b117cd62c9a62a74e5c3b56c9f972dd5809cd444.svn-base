public class EditDatasheetAdapterNew extends RecyclerView.Adapter<EditDatasheetAdapterNew.ActivityHolder> {
    Context context;
    ArrayList<EditDatasheetNew> editDatasheetAdapterNewArrayList;

    public EditDatasheetAdapterNew(Context editDatasheetActivityMainNew, ArrayList<EditDatasheetNew> editDatasheetslist) {
        this.context = editDatasheetActivityMainNew;
        this.editDatasheetAdapterNewArrayList = editDatasheetslist;
    }

    @NonNull
    @Override
    public ActivityHolder onCreateViewHolder(@NonNull ViewGroup parent, int viewType) {
        View itemView = LayoutInflater.from(parent.getContext())
                .inflate(R.layout.vwb_editdatasheet_common, parent, false);
        return new ActivityHolder(itemView);
    }

    @Override
    public void onBindViewHolder(@NonNull ActivityHolder holder, int position) {

        String ques = editDatasheetAdapterNewArrayList.get(position).getQuesText();
        if(ques.contains("\n")){
            ques.replaceAll("\n","");
            holder.txtQuestion.setText(ques);
        }else{
            holder.txtQuestion.setText(ques);
        }
        String ans = editDatasheetAdapterNewArrayList.get(position).getResponsebycustomer();
        if(ans != null){
            holder.txtAnswer.setText(ans);
        }

        String attachmentcnt = editDatasheetAdapterNewArrayList.get(position).getAttachmentCount();

        if(attachmentcnt != null){
            //holder.rel_attachment.setVisibility(View.VISIBLE);
            holder.attachment_count.setText(attachmentcnt);
        }else {
            holder.attachment_count.setText("0");
        }





        if (position % 2 == 1) {
            holder.ln_View.setBackgroundColor(Color.parseColor("#DBE8EA"));
        } else {
            holder.ln_View.setBackgroundColor(Color.parseColor("#F1F6F7"));

        }

    }

    @Override
    public int getItemCount() {
        return editDatasheetAdapterNewArrayList.size();
    }

    public void update(ArrayList<EditDatasheetNew> editDatasheetslist) {
        this.editDatasheetAdapterNewArrayList = editDatasheetslist;
        notifyDataSetChanged();
    }

    public void deleteChange(ArrayList<EditDatasheetNew> editDatasheetslist) {
        this.editDatasheetAdapterNewArrayList = editDatasheetslist;
        notifyDataSetChanged();
    }

