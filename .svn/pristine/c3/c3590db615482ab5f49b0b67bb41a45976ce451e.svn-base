<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tablerow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_DateTime"
                android:layout_width="225dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Date Time"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_follow_by"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="followup by"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_follow_type"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="followup type"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_withwhom"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="With Whom"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_purpose"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Purpose"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_outcome"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Outcome"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_nxt_action"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Next Action"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_nxt_action_dt"
                android:layout_width="225dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Next Action DateTime"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_remark"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Remark"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:textColor="@color/black" />



        </TableRow>
    </TableLayout>
</HorizontalScrollView>