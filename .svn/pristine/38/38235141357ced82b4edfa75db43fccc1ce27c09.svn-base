<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vritti.crm.vcrm7.EntityMasterSalesActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/ln_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:popupTheme="@style/AppTheme"
            app:titleTextAppearance="@style/ToolbarTextAppearance.Title">

            <ImageView
                android:id="@+id/imgrefresh"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_refresh"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/toolbar_progress_Assgnwork"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:indeterminateDrawable="@drawable/spinner"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/ln_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln_toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ln_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln_toolbar"
            android:background="#6E6F72"
            android:orientation="horizontal"
            android:padding="3dp">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="Entity Master -> Sales"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>

        <!--For Pending and Grn-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--PO-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:hint="For Pending Delivery"
                android:paddingLeft="0dp"
                android:textColor="#FF4112"
                android:textSize="14sp">

                <AutoCompleteTextView
                    android:id="@+id/edt_PendingDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:drawableRight="@drawable/tbuds_ic_expand"
                    tools:hint="For Pending Delivery"
                    android:inputType="text"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <!--For GRN-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:hint="For GRN"
                android:paddingLeft="0dp"
                android:textColor="#FF4112"
                android:textSize="14sp">

                <AutoCompleteTextView
                    android:id="@+id/edt_grn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:drawableRight="@drawable/tbuds_ic_expand"
                    tools:hint="For GRN"
                    android:inputType="text"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <!--For Payment and Currency-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Payment-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:hint="For Payment"
                android:paddingLeft="0dp"
                android:textColor="#FF4112"
                android:textSize="14sp">

                <AutoCompleteTextView
                    android:id="@+id/edt_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:drawableRight="@drawable/tbuds_ic_expand"
                    tools:hint="For Payment"
                    android:inputType="text"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <!--Currency-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:hint="Currency"
                android:paddingLeft="0dp"
                android:textColor="#FF4112"
                android:textSize="14sp">

                <AutoCompleteTextView
                    android:id="@+id/edt_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:drawableRight="@drawable/tbuds_ic_expand"
                    tools:hint="For currency"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <!--Credit Limit and Credit Days-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Payment-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:hint="Credit Limit"
                android:paddingLeft="0dp"
                android:textColor="#FF4112"
                android:textSize="14sp">

                <AutoCompleteTextView
                    android:id="@+id/edt_creditLimits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    tools:hint="Credit Limit"
                    android:inputType="number"
                    android:ellipsize="end"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <!--Credit Days-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:hint="Credit Days"
                android:paddingLeft="0dp"
                android:textColor="#FF4112"
                android:textSize="14sp">

                <AutoCompleteTextView
                    android:id="@+id/edt_creditDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:drawableRight="@drawable/tbuds_ic_expand"
                    tools:hint="Credit Days"
                    android:inputType="text"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <!--Payment Terms and Delivery Terms-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Payment Terms-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:hint="Payment Terms"
                android:paddingLeft="0dp"
                android:textColor="#FF4112"
                android:textSize="14sp">

                <AutoCompleteTextView
                    android:id="@+id/edt_paymentTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:drawableRight="@drawable/tbuds_ic_expand"
                    tools:hint="Payment Terms"
                    android:inputType="text"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <!--Delivery Terms-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:hint="Delivery Terms"
                android:paddingLeft="0dp"
                android:textColor="#FF4112"
                android:textSize="14sp">

                <AutoCompleteTextView
                    android:id="@+id/edt_deliveryTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:drawableRight="@drawable/tbuds_ic_expand"
                    tools:hint="Delivery Terms"
                    android:inputType="text"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <!--Sales Category and talk to new prospect-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Sales Category-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:hint="Sales Category"
                android:paddingLeft="0dp"
                android:textColor="#FF4112"
                android:textSize="14sp">

                <AutoCompleteTextView
                    android:id="@+id/edt_salescategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:drawableRight="@drawable/tbuds_ic_expand"
                    tools:hint="Sales Category"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <!--Want to talk to new prospect-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:hint="Willing to talk to new Prospects?"
                android:paddingLeft="0dp"
                android:textColor="#FF4112"
                android:textSize="14sp">

                <AutoCompleteTextView
                    android:id="@+id/edt_talktoprospect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:drawableRight="@drawable/tbuds_ic_expand"
                    tools:hint="Willing to talk to new Prospects?"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:paddingLeft="7dp"
                    android:textColor="#111"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <!--tax code-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="0.5"
            android:hint="Tax Code"
            android:paddingLeft="0dp"
            android:textColor="#FF4112"
            android:textSize="14sp">

            <AutoCompleteTextView
                android:id="@+id/edt_taxCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:drawableRight="@drawable/tbuds_ic_expand"
                tools:hint="Tax Code"
                android:inputType="text"
                android:paddingLeft="7dp"
                android:textColor="#111"
                android:textSize="14sp" />

        </android.support.design.widget.TextInputLayout>

        <!--Reseller Name-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="0.5"
            android:hint="Reseller Name"
            android:paddingLeft="0dp"
            android:textColor="#FF4112"
            android:textSize="14sp">

            <AutoCompleteTextView
                android:id="@+id/edt_resellerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                tools:hint="Reseller Name"
                android:inputType="text"
                android:paddingLeft="7dp"
                android:textColor="#111"
                android:textSize="14sp" />

        </android.support.design.widget.TextInputLayout>

        <!--IsApproved-->
        <CheckBox
            android:id="@+id/chkApproved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="0dp"
            android:layout_marginLeft="2dp"
            android:text="Approved"
            android:layout_gravity="center_vertical"
            android:textColor="#2c2c2c"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/backgroundSave"
            android:text="Save"
            android:layout_weight="0.5"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_Bank"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/btnsave"
            android:text="Bank"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>

    </LinearLayout>


</RelativeLayout>