<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="0dp"
        card_view:cardElevation="0dp"
        card_view:cardMaxElevation="0.5dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="1dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_product_co"
            android:layout_width="50dp"
            android:layout_height="50dp"
           android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/textview_checkout_product_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_weight="0.8"

            android:textColor="#222"
            android:textSize="14sp"

            />

        <EditText
            android:id="@+id/edittext_checkout_product_qty"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tbuds_border_grey_1"
            android:editable="false"
            android:enabled="false"
            android:focusable="false"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"

            android:textColor="#222"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview_checkout_offer_amount"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:gravity="right"

            android:textColor="#222"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview_checkout_product_amount"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="right"

            android:textColor="#222"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemcheckoutfreelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFA000"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/textview_item_free_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"

            android:textColor="#222"
            android:textSize="14sp"

            />
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>