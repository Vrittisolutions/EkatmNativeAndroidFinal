<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <!-- <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolbarStyle"/>            />
-->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        android:layout_below="@+id/toolbar1"
        card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:padding="2dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Time :"
                android:textSize="14dp"
                android:textColor="@color/black"
               />
            <TextView
                android:id="@+id/txt_call_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25-May-17 12:05 PM"
                android:textSize="14dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:padding="5dp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_assign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_below="@+id/linear_date"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:padding="2dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned By :"
                android:textSize="14dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_assignedby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payal Jain"
                android:textSize="14dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:padding="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/follow_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_below="@+id/linear_assign"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:padding="2dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followup Type :"
                android:textSize="14dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_followup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telephone"
                android:textSize="14dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:padding="5dp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/with_whoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_below="@+id/follow_process"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:padding="2dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="With Whom :"
                android:textSize="14dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_withwhoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XYZ"
                android:textSize="14dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:padding="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_below="@+id/with_whoom"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:padding="2dp"



            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purpose :"
                android:textSize="14dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project"
                android:textSize="14dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:padding="5dp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/Outcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_below="@+id/Purpose"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:padding="2dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outcome :"
                android:textSize="14dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_outcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appointment"
                android:textSize="14dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:padding="5dp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/Next_Action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_below="@+id/Outcome"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:padding="2dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Action :"
                android:textSize="14dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_nextaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telephone"
                android:textSize="14dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:padding="5dp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/Next_Action_Datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_below="@+id/Next_Action"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:padding="2dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Action Datetime :"
                android:textSize="14dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_next_datime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30-May-17 00:05 AM"
                android:textSize="14dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:padding="5dp"/>


        </LinearLayout>

        <TextView
                android:id="@+id/txt_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remark :"
                android:textSize="14dp"
                android:padding="5dp"
                android:layout_below="@+id/Next_Action_Datetime"
                android:textColor="@color/black"
            android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/txt_user_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Downloa Data"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_below="@+id/Next_Action_Datetime"
                android:layout_toRightOf="@+id/txt_remark"
                android:layout_toEndOf="@+id/txt_remark"
                android:layout_marginBottom="5dp"

                />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>