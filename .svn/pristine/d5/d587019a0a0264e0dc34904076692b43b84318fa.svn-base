<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="1">
    <TextView
        android:id="@+id/textname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_weight="0.8"/>


            <ImageView
                android:id="@+id/img_team"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="visible"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:src="@drawable/team_final"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:padding="1dp">

        <TextView
            android:id="@+id/textassigned"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="56"
            android:background="@drawable/crm_border_assigned"
            android:padding="3dp"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textoverdue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:text="765"
            android:padding="3dp"
            android:background="@drawable/vwb_border_overdue"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/texttoday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="765"
            android:textColor="@color/white"
            android:background="@drawable/vwb_border_today"
            android:textStyle="bold"
            android:layout_marginLeft="1dp"
            android:padding="3dp"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/texttomorrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:gravity="center"
            android:text="765"
            android:textColor="@color/white"
            android:layout_marginLeft="1dp"
            android:textStyle="bold"
            android:padding="3dp"
            android:background="@drawable/vwb_border_today"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/textcollection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:gravity="center"
            android:text="765/6h.00"
            android:padding="3dp"
            android:layout_gravity="center"
            android:background="@drawable/crm_border_collection"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            />

        <TextView
            android:id="@+id/texthot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="876"
            android:padding="3dp"
            android:background="@drawable/vwb_border_critical"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12dp"
            />
    </LinearLayout>


