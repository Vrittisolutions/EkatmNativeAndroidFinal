<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--tools:showIn="@layout/app_bar_main_2_itemlist"-->

    <include
        android:id="@+id/tbar"
        layout="@layout/tbuds_common_toolbar"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/headerList"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_below="@+id/tbar">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5.25">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Products"
                android:textColor="#6CAD1C"
                android:textSize="15dp"
                android:textStyle="bold"
                android:titleCondensed="@string/ButtonFont" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.25">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#6CAD1C"
                android:textSize="15dp"
                android:textStyle="bold"
                android:titleCondensed="@string/ButtonFont"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Qty"
                android:textColor="#6CAD1C"
                android:textSize="15dp"
                android:textStyle="bold"
                android:titleCondensed="@string/ButtonFont" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center|right"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginRight="10dp"
                android:text="Total"
                android:textColor="#6CAD1C"
                android:textSize="15dp"
                android:textStyle="bold"
                android:titleCondensed="@string/ButtonFont" />
        </LinearLayout>
    </LinearLayout>

<!--tools:context="kukadiagency.vritti.com.kukadiagency.MainActivity"-->

