    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtinvoiceno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.55"
                android:gravity="center_vertical|left"
                android:paddingRight="8dp"
                android:text="PR19-20/046"
                android:textColor="#111"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtcustname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left|top"
                android:layout_weight="0.5"
                android:gravity="center_vertical|left|top"
                android:text="Customer Name"
                android:textColor="#111"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txtactassigndate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 Jul"
                android:textSize="12dp"
                android:textColor="#FF4112"
                android:layout_weight="0.6"
                android:layout_gravity="center_vertical|right|top"
                android:gravity="center_vertical|right|top"
                android:paddingRight="0dp"/>

            <!--<TextView
                android:id="@+id/txtagentname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agent Name"
                android:textSize="13dp"
                android:textColor="#111"
                android:layout_weight="0.55"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right">

        <!--    <TextView
                android:id="@+id/txtcustname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.3"
                android:gravity="center_vertical|left"
                android:text="Customer Name"
                android:textColor="#111"
                android:textSize="13dp" />-->

            <ImageView
                android:layout_width="30dp"
                android:layout_height="18dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/tbuds_dellivery_scooter"/>

            <TextView
                android:id="@+id/txtagentname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agent Name"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right" />
            <!--android:layout_weight="0.55"-->

            <TextView
                android:id="@+id/txtagentmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"
                android:text="Mobile"
                android:textStyle="bold"
                android:textSize="13dp"
                android:maxLength="10"
                android:layout_marginRight="0dp"/>

            <ImageView
                android:id="@+id/img_pdf"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="center_vertical|top"
                android:src="@drawable/ic_pdf"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
