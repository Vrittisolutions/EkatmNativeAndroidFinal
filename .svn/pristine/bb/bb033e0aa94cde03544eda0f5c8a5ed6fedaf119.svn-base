<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/lay_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2sp"
        android:layout_marginTop="2sp"
        android:orientation="vertical"
        android:paddingLeft="5dp">
        <LinearLayout
            android:id="@+id/len_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|right"
            android:gravity="center|right">

            <TextView
                android:id="@+id/txtcallclose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textColor="#5DA7EE"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtcallopen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text=""
                android:visibility="gone"

                android:textColor="#5DA7EE"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
        android:id="@+id/len_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center|left"
            android:layout_below="@+id/len_call"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/click"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="2dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/txtFName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Name"
        android:layout_toRightOf="@+id/click"
        android:layout_weight="1"
        android:textColor="#4C8400"
        android:textSize="16dp" />

        <TextView
            android:id="@+id/img_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:gravity="center"
            android:text="Edit"
            android:background="@drawable/edit_text"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_edit"
          />


    </LinearLayout>

    <TextView
        android:id="@+id/txt_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="At"
        android:textColor="@color/black"
        android:layout_below="@+id/len_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="city"
        android:layout_toRightOf="@+id/txt_at"
        android:singleLine="true"
        android:textColor="#3F5DF7"
        android:layout_below="@+id/len_name"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/txt_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="for"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:textColor="#000"
        android:layout_below="@+id/txtcity"
        android:textSize="14sp" />

        <TextView
            android:id="@+id/txtItemdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_at"
            android:layout_weight="1"
            android:gravity="center|left"
            android:layout_marginLeft="25dp"
            android:text="Prospect Information"
            android:textColor="#FA604D"
            android:textSize="14dp" />

    <TextView
         android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Address :"
        android:textColor="#000"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/txtItemdesc"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/txtItemdesc"
        android:layout_toRightOf="@+id/txt_address"
        android:text="1aaaaaaa"
        android:maxLines="3"
        android:textColor="#3F5DF7"
        android:textSize="14dp" />
</RelativeLayout>
    <LinearLayout
        android:id="@+id/llName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_below="@+id/lay_header"
        android:visibility="gone">

    <!-- <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Name :"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingRight="2dp"
                android:text="Name"
                android:textColor="#000"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Number :"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingRight="2dp"
                android:text="Name"
                android:textColor="#000"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Email :"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:text="Name"
                android:textColor="#000"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>