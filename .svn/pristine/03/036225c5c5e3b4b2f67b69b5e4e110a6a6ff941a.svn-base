<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow
            android:id="@+id/tablerow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_contactName"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_border_row_dark"
                android:gravity="center"
                android:text="Contact Name"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_Designation"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:text="Designation"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_emailId"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:text="Email Id"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_influentialLevel"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:text="Influential Level"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_default"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:text="Default"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_contactMobileNo"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_border_row"
                android:gravity="center"
                android:text="Mobile No"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border_row"
                android:padding="6dp">



                <ImageView
                    android:id="@+id/btn_editchrge"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="1dp"
                    android:src="@drawable/edit_icon1"/>

                <ImageView
                    android:id="@+id/btn_deletechrge"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#F3F9FD"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/delete"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="@color/red"/>

            </LinearLayout>



        </TableRow>
    </TableLayout>
</HorizontalScrollView>