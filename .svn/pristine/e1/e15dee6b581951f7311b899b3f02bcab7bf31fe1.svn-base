<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/realcolors"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/header"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/laycall_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:layout_marginTop="5dp"
        android:paddingRight="2dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_calling" />

        <TextView
            android:id="@+id/actiondatetime"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="2"
            android:paddingBottom="2dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textSize="14dp"
            android:text="Yesterday 6:11 pm"
            android:textColor="#fff" />
        <TextView
            android:id="@+id/txt_chat"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/btn_border_button"
            android:gravity="center"
            android:padding="3dp"
            android:text="Chat"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:visibility="visible"
            android:textStyle="bold"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/laycall_type"
        android:layout_weight="0.8"

        android:orientation="vertical"

        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/firmname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLength="30"
            android:text="Superfine Extrusions Private Limited"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvcall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:singleLine="false"
            android:text="tvcall"
            android:textSize="12dp"
            />
    <TextView
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLength="30"
        android:text="City"
        android:visibility="gone"
        android:textColor="#000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:padding="2dp">
        <TextView
            android:id="@+id/tv_latestremark"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:text="For"
            android:textSize="12dp"
            android:textColor="#000000" />
            <ImageView
                android:id="@+id/img_contact"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/profile_contact"/>
            <ImageView
                android:id="@+id/img_appotunity_update"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:visibility="gone"
                android:src="@drawable/ic_cube"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_srcnname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SourceName"
            android:textColor="#A0522D"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/spinner_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="Provisional Receipt"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="2dp"
            android:entries="@array/collection"/>
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:id="@+id/len_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hint"
            android:padding="5dp"
            android:text="Add Contact"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:padding="2dp">

                <EditText
                    android:id="@+id/edt_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/business_edit_text"
                    android:hint="Contact Name"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14dp"

                    />

                <EditText
                    android:id="@+id/edt_designation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/business_edit_text"
                    android:hint="Designation"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department :"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/business_edit_text"
                    android:orientation="horizontal"
                   >

                    <Spinner
                        android:id="@+id/spinner_department"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:spinnerMode="dialog"
                        android:entries="@array/department"
                        ></Spinner>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Email Id :"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_emailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/business_edit_text"
                    android:padding="5dp"
                    android:textSize="14dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:padding="2dp">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_primary_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Is Primary Contact"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/business_edit_text"
                    android:hint="Mobile no"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14dp"

                    />

                <EditText
                    android:id="@+id/edt_offfice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/business_edit_text"
                    android:hint="Office "
                    android:inputType="number"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:maxLength="15"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/header"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/len_show_calldetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_save"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/btn_border_button"
                android:layout_marginBottom="1dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/txt_reset"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="1dp"
                android:background="@drawable/btn_border_button_white"
                android:textColor="@color/black"/>


        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:id="@+id/len_apportunity_rating"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hint"
            android:orientation="horizontal">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="Opportunity Rating"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginTop="8dp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Call Status :"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/business_edit_text"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_callstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/Status"
                    android:spinnerMode="dialog"


                    ></Spinner>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layreason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Reason : "
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/business_edit_text"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected value :"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/Expectedvalue1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/business_edit_text"
                android:maxLength="10"
                android:inputType="number"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginTop="5dp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Expected closure date :  "
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/editTextExpecteddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/business_edit_text"
                android:editable="false"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/calender" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@color/header"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonSave"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/btn_border_button"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/buttonClose"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="close"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/btn_border_button_white"
                android:textColor="@color/black"/>


        </LinearLayout>
            </LinearLayout>

    </LinearLayout>
</LinearLayout>