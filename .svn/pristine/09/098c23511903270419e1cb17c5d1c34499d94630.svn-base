<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tbar"
        layout="@layout/tbuds_common_toolbar"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--wrap_content-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           ><!--758dp-->

            <LinearLayout
                android:id="@+id/lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Customer Name :"
                    android:textSize="15dp"
                    android:layout_weight="0.6"/>

                <TextView
                    android:id="@+id/custname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="0.4"
                    android:textColor="#111"
                    android:textSize="15dp"
                    android:text="Customer"
                    android:paddingLeft="7dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:imeOptions="flagNoExtractUi"
                    android:text="Mobile No:"
                    android:textSize="15dp"
                    android:layout_weight="0.6"/>
                <!-- -->

                <TextView
                    android:id="@+id/custMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="0.4"
                    android:gravity="left"
                    android:textColor="#111"
                    android:textSize="15dp"
                    android:paddingLeft="7dp"
                    android:text="xxxxxxxxxx"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#ededed"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="3.5"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:text="Items"
                            android:textColor="#6CAD1C"
                            android:textSize="15dp" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="Qty"
                            android:textColor="#6CAD1C"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="Unit"
                            android:textColor="#6CAD1C"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="Rate"
                            android:textColor="#6CAD1C"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="Disc."
                            android:textColor="#6CAD1C"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:text="Amt."
                            android:textColor="#6CAD1C"
                            android:textSize="15dp" />


                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="8dp"
                            android:gravity="center"
                            android:visibility="gone" /><!--android:layout_weight="0.02"-->

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="8dp"
                            android:gravity="center"
                            android:visibility="gone" /><!--android:layout_weight="0.02"-->

                    </LinearLayout>

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fillViewport="true"
                        android:scrollbars="vertical|none">

                        <!--  android:layout_marginTop="@dimen/button_small_height"-->
                        <LinearLayout
                            android:id="@+id/containerLayout_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical" />

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
        android:id="@+id/layBotton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_weight="1">

        <!-- <LinearLayout
             android:id="@+id/total"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:orientation="horizontal"
             android:padding="5dp">

