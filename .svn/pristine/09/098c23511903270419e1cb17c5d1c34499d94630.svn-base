        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Discount"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edttxtTotalDiscount"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text"
                android:hint="Enter discount"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="#000"
                android:textSize="15dp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Total Amt."
                        android:textSize="15dp" />
                    <!--android:padding="5dp"-->

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:background="#FF4112"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="00.0"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <!--android:background="#FF4112"
                     android:padding="5dp"-->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Final Amt"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtFinalTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:background="#FF4112"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="00.0"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <!--android:background="#FF4112"-->
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutrvcbalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Received"
                    android:padding="5dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edttxtReceived"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Rcvd. amt"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="#006400"
                    android:textSize="15dp"
                    android:background="@drawable/edit_text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edttxtRemaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:editable="false"
                    android:hint="Bal. amt"
                    android:inputType="number"
                    android:imeOptions="flagNoExtractUi"
                    android:padding="5dp"
                    android:textColor="#d8504c"
                    android:textSize="15dp"
                    android:background="@drawable/edit_text"></EditText>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/savebill"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/tbuds_button_all_border"
                android:gravity="center"
                android:text="SAVE"
                android:textColor="#fff"
                android:textSize="16dp" />


            <Button
                android:id="@+id/SaveAndPrint"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="Save And Print"
                android:background="@drawable/tbuds_button_all_border"
                android:textColor="#fff"
                android:textSize="16dp"
                android:layout_weight="0.5"
                android:layout_margin="5dp"/>

            <ImageButton
                android:id="@+id/whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:background="@drawable/tbuds_wapp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="16dp"
                />

        </LinearLayout>

    </LinearLayout>

        </LinearLayout>

</LinearLayout>