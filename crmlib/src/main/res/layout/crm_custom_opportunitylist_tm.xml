<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    tools:context="vcrm7.vritti.com.vcrm7.TeamMemberOpportunityActivity"
    tools:showIn="@layout/crm_activity_team_member_opportunity">


    <LinearLayout
        android:id="@+id/len_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp"
        android:visibility="visible"
        android:layout_gravity="center|left"
        android:gravity="center|left"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_search_firm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:hint="Search Opportunity here"/>

        <ImageView
            android:id="@+id/img_search_firm"
            android:layout_width="35dp"
            android:src="@drawable/ic_search"
            android:layout_height="35dp"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text"
            />


    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:fitsSystemWindows="true"
        android:layout_below="@+id/len_search">

        <LinearLayout
            android:id="@+id/lsCall_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"></LinearLayout>

    </ScrollView>


    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/spinner"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
