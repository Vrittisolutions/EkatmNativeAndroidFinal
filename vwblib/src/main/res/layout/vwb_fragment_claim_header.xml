<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#707070"
            android:padding="5dp"
            android:text="Claim Application"
            android:textColor="#fff"
            android:textSize="14dp"
            android:typeface="serif" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/lay_claim_against"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.22"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Claim Against"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:typeface="serif" />

                    <Spinner
                        android:id="@+id/Sp_climAgainst"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.78"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:theme="@style/ThemeSpinner"
                        android:typeface="serif" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.22"
                        android:gravity="left"
                        android:text="Task"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:typeface="serif" />

                    <Spinner
                        android:id="@+id/sp_task"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.78"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:theme="@style/ThemeSpinner"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.22"
                        android:gravity="left"
                        android:text="Cost Center"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:typeface="serif" />

                    <Spinner
                        android:id="@+id/sp_costcenter"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.78"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:theme="@style/ThemeSpinner"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.22"
                        android:gravity="left"
                        android:text="Approver"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:typeface="serif" />

                    <Spinner
                        android:id="@+id/sp_approver"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.78"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:theme="@style/ThemeSpinner"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.22"
                        android:gravity="left"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"

                        android:text="Purpose of Travel"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/ed_travel_purpose"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.78"
                        android:drawableRight="@drawable/star_img2"
                        android:hint="Enter text here..."
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:theme="@style/ThemeSpinner"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.22"
                        android:gravity="center_vertical"
                        android:text="Remark"

                        android:textColor="#000"
                        android:textSize="14sp"
                        android:typeface="serif" />

                    <EditText
                        android:id="@+id/ed_remark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.78"
                        android:hint="Enter text here..."
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:theme="@style/ThemeSpinner"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
