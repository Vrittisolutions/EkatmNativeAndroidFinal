<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_workspace_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Workspace Name"
            android:textColor="#000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/lay_assigned"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="?selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/txt_assigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="aa"
                android:textColor="#29ACD3"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_overdue"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="?selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/txt_overdue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="aa"
                android:textColor="#FE8F2A"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_critical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="?selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/txt_critical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="aa"

                android:textColor="#F05050"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_complete"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center_horizontal"
            android:background="?selectableItemBackground"
            android:orientation="vertical"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/txt_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="aa"
                android:textColor="#2F5F8F"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_unapproved"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="?selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/txt_unapproved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="aa"
                android:textColor="#27C251"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
