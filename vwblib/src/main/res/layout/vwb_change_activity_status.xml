    <Spinner
        android:id="@+id/sp_change_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"></Spinner>

    <requestFocus />

    <LinearLayout
        android:id="@+id/ln_billable_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Charged Amount  "
            android:textColor="#000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ed_billable_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text"
            android:hint="Enter amount"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backshapegreen"
            android:padding="5dp"
            android:text="Ok"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/backshape_orange"
            android:padding="5dp"
            android:text="cancel"
            android:textColor="#fff" />
    </LinearLayout>
